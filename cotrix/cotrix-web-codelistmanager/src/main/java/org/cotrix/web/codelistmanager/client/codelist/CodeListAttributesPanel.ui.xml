<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:v="urn:import:org.cotrix.web.codelistmanager.client.codelist">
	<ui:style type="org.cotrix.web.codelistmanager.client.codelist.CodeListAttributesPanel.Style">
		.plusButton {
			float: left;
		}
		.minusButton {
			float: right;
		}
		.headerCode {
 			 color: orange;
		}
	</ui:style>
	<ui:image field="plus" src="plus.png" />
	<ui:image field="minus" src="minus.png" />
	<g:DockLayoutPanel unit="EM">
		<!-- DataGrid. -->
		<g:center>
			<v:AttributesGrid ui:field='attributesGrid' />
		</g:center>
		<g:south size="2">
			<g:FlowPanel>
				<g:PushButton ui:field="plusButton" styleName="{style.plusButton}">
					<g:upFace image="{plus}" />
				</g:PushButton>
				<g:PushButton ui:field="minusButton" styleName="{style.minusButton}">
					<g:upFace image="{minus}" />
				</g:PushButton>
			</g:FlowPanel>
		</g:south>

	</g:DockLayoutPanel>
</ui:UiBinder>
