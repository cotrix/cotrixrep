<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:v="urn:import:org.cotrix.web.codelistmanager.client.codelist">
	<ui:with type="org.cotrix.web.share.client.resources.CommonResources"
		field="common" />
	<ui:style>
		.padding {
			padding: 10px;
		}
		
		.grid {
			vertical-align: top;
			margin-right: 20px;
		}
		
		.firstColumn {
			padding-left: 10px;
			width: 120px;
		}
		
		.panel {
			background-color: #f6f6f6;
			border: 1px solid #d1d1d1;
			border-spacing: 5px;
		}
		
				.plusButton {
			float: left;
		}
		.minusButton {
			float: right;
		}
	</ui:style>
	<ui:image field="plus" src="plus.png" />
	<ui:image field="minus" src="minus.png" />
	<g:DockLayoutPanel unit='PX'>
		<g:north size="80">
			<g:Grid ui:field="panel" styleName="{style.grid}">
				<g:row>
					<g:cell
						styleName="{common.css.verticalHeadersSingleItem} {style.firstColumn}">
						<span class="{common.css.propertyLabel}">Name</span>
					</g:cell>
					<g:customCell>
						<g:TextBox ui:field="nameField" styleName="{common.css.textBox}" />
					</g:customCell>
				</g:row>
				<g:row>
					<g:cell
						styleName="{common.css.verticalHeadersSingleItem} {style.firstColumn}">
						<span class="{common.css.propertyLabel}">Version</span>
					</g:cell>
					<g:customCell>
						<g:TextBox ui:field="versionField" styleName="{common.css.textBox}" />
					</g:customCell>
				</g:row>
			</g:Grid>
		</g:north>
		<g:center>
			<v:AttributesGrid ui:field="attributesGrid" />
		</g:center>
		<g:south size="28">
			<g:FlowPanel>
				<g:PushButton ui:field="plusButton" styleName="{style.plusButton}">
					<g:upFace image="{plus}" />
				</g:PushButton>
				<g:PushButton ui:field="minusButton" styleName="{style.minusButton}">
					<g:upFace image="{minus}" />
				</g:PushButton>
			</g:FlowPanel>
		</g:south>
	</g:DockLayoutPanel>
</ui:UiBinder> 