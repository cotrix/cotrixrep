<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
		
		.item {
			cursor:pointer;
			width: 200px;
			border-bottom: 1px solid #ccc;
			background: rgb(255,255,255); /* Old browsers */
			background: -moz-linear-gradient(top,  rgba(255,255,255,1) 0%, rgba(246,246,246,1) 47%, rgba(237,237,237,1) 100%); /* FF3.6+ */
			background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(255,255,255,1)), color-stop(47%,rgba(246,246,246,1)), color-stop(100%,rgba(237,237,237,1))); /* Chrome,Safari4+ */
			background: -webkit-linear-gradient(top,  rgba(255,255,255,1) 0%,rgba(246,246,246,1) 47%,rgba(237,237,237,1) 100%); /* Chrome10+,Safari5.1+ */
			background: -o-linear-gradient(top,  rgba(255,255,255,1) 0%,rgba(246,246,246,1) 47%,rgba(237,237,237,1) 100%); /* Opera 11.10+ */
			background: -ms-linear-gradient(top,  rgba(255,255,255,1) 0%,rgba(246,246,246,1) 47%,rgba(237,237,237,1) 100%); /* IE10+ */
			background: linear-gradient(to bottom,  rgba(255,255,255,1) 0%,rgba(246,246,246,1) 47%,rgba(237,237,237,1) 100%); /* W3C */
			filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#ffffff', endColorstr='#ededed',GradientType=0 ); /* IE6-9 */
		}
		
		.item:HOVER {
			background: rgb(155,155,155); /* Old browsers */
			background: -moz-linear-gradient(top,  rgba(155,155,155,1) 0%, rgba(183,183,183,1) 100%); /* FF3.6+ */
			background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(155,155,155,1)), color-stop(100%,rgba(183,183,183,1))); /* Chrome,Safari4+ */
			background: -webkit-linear-gradient(top,  rgba(155,155,155,1) 0%,rgba(183,183,183,1) 100%); /* Chrome10+,Safari5.1+ */
			background: -o-linear-gradient(top,  rgba(155,155,155,1) 0%,rgba(183,183,183,1) 100%); /* Opera 11.10+ */
			background: -ms-linear-gradient(top,  rgba(155,155,155,1) 0%,rgba(183,183,183,1) 100%); /* IE10+ */
			background: linear-gradient(to bottom,  rgba(155,155,155,1) 0%,rgba(183,183,183,1) 100%); /* W3C */
			filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#9b9b9b', endColorstr='#b7b7b7',GradientType=0 ); /* IE6-9 */
		}
		
		.name {
			color: #333;
			padding: 5px;
			padding-left: 20px;
			font-size: 16px;
		}
		.name:HOVER {
			color: #fff;
		}
		
	</ui:style>
	<g:HTMLPanel styleName="{style.item}" ui:field="item">
		<g:Label ui:field="itemLabel" styleName="{style.name}"></g:Label>
	</g:HTMLPanel>
</ui:UiBinder> 