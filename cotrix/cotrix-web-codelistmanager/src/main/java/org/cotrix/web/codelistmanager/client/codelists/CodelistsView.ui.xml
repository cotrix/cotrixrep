<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:cotrix="urn:import:org.cotrix.web.codelistmanager.client.codelists"
	xmlns:common="urn:import:org.cotrix.web.codelistmanager.client.common">
	<ui:with field='resources'
		type='org.cotrix.web.codelistmanager.client.resources.CotrixManagerResources' />
	<ui:style>
		.mainPanel {
			background-color: #efefef;
		}
		
		.filterPanel {
			border-top-left-radius: 2px;
			border-top-right-radius: 2px;
			border-top: 1px solid #a8a7a7;
			border-left: 1px solid #a8a7a7;
			border-right: 1px solid #a8a7a7;
			background-color: white;
			padding: 5px;
		}
		
		.listPanel {
			background-color: white;
			border-left: 1px solid #a8a7a7;
			border-right: 1px solid #a8a7a7;
			color: #9b9b9b;
		}
		
		.toolbarPanel {
			background-color: #efefef;
			border-bottom: 1px solid #a8a7a7;
			border-left: 1px solid #a8a7a7;
			border-right: 1px solid #a8a7a7;
		}
		
		.headerPanel {
			overflow: visible;
			text-align: left;
			color: #464545;
			font-size: 16px;
			text-shadow: none;
			background-color: #e9e9e9;
			padding: 6px;
			border-bottom: 1px solid #a8a7a7;
			border-top: 1px solid #a8a7a7;
			border-left: 1px solid #a8a7a7;
			border-right: 1px solid #a8a7a7;
		}
	</ui:style>
	<g:DockLayoutPanel unit='PX' styleName="{style.mainPanel}">
		<g:north size='30'>
			<g:SimpleLayoutPanel />
		</g:north>
		<g:north size='35'>
			<g:FlowPanel ui:field="filterPanel" styleName="{style.filterPanel}">
				<g:TextBox ui:field="filterTextBox" styleName="{resources.css.search}" />
			</g:FlowPanel>
		</g:north>
		<g:north size='32'>
			<g:HTMLPanel styleName="{style.headerPanel}">
				Codelists
			</g:HTMLPanel>
		</g:north>
		<g:center>
			<c:CellTree ui:field="codelists" styleName="{style.listPanel}" />
		</g:center>
		<g:south size="28">
			<common:ItemToolbar ui:field="toolbar"
				styleName="{style.toolbarPanel}" />
		</g:south>
	</g:DockLayoutPanel>
</ui:UiBinder>