<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client">
	<ui:with field='res'
		type='org.cotrix.web.codelistmanager.client.resources.CotrixManagerResources' />
	<ui:with type="org.cotrix.web.share.client.resources.CommonResources"
		field="common" />
	<ui:style>
			
			.headerPanel {
				border-top-right-radius: 5px;
				border-top-left-radius: 5px;
				height: 50px;
				padding-right: 20px;
				background: rgb(255, 255, 255); /* Old browsers */
				background: -moz-linear-gradient(top, rgba(255, 255, 255, 1) 0%,
					rgba(229, 229, 229, 1) 100%); /* FF3.6+ */
				background: -webkit-gradient(linear, left top, left bottom, color-stop(0%, rgba(255,
					255, 255, 1)), color-stop(100%, rgba(229, 229, 229, 1)));
				/* Chrome,Safari4+ */
				background: -webkit-linear-gradient(top, rgba(255, 255, 255, 1) 0%,
					rgba(229, 229, 229, 1) 100%); /* Chrome10+,Safari5.1+ */
				background: -o-linear-gradient(top, rgba(255, 255, 255, 1) 0%,
					rgba(229, 229, 229, 1) 100%); /* Opera 11.10+ */
				background: -ms-linear-gradient(top, rgba(255, 255, 255, 1) 0%,
					rgba(229, 229, 229, 1) 100%); /* IE10+ */
				background: linear-gradient(to bottom, rgba(255, 255, 255, 1) 0%,
					rgba(229, 229, 229, 1) 100%); /* W3C */
				filter: literal("progid:DXImageTransform.Microsoft.gradient(endColorstr='#e5e5e5', GradientType=0)"
					); /* IE6-9 */
			}

			
			.codelistName {
				float: left;
				vertical-align: middle;
				color: #999;
				cursor: pointer;
				line-height: 35px;
			}
			
			.metadata {
				color: #999;
				font-size: 13px;
				width: 100%;
			}
			
			.metadataWrapper {
				padding: 10px;
				background-color: #f9f9f9;
				box-shadow: 0px 2px 3px #e9e9e9;
				width: 100%;
			}
			
			.version {
				float: right;
				padding-right: 20px;
				vertical-align: middle;
				color: #999;
				line-height: 35px;
			}
			
			.listbox {
				vertical-align: middle;
			}
			
			.listBoxWrapper {
				float: right;
				line-height: 35px;
				vertical-align: middle;
			}
			
			.labelversion {
				float: right;
				color: #999;
				padding-right: 10px;
				line-height: 35px
			}
			.padding {
			padding-left: 10px !important;
			

	}
		</ui:style>
	<g:FlowPanel ui:field="headerPanel" styleName="{style.headerPanel}">
		<g:FlowPanel>
			<g:Label ui:field="codelistName" styleName="{style.codelistName}" />
			<g:FlowPanel styleName="{style.listBoxWrapper}">
				<g:Button styleName="{common.css.blueButton}" ui:field="metadata" visible="true">Metadata</g:Button>
			</g:FlowPanel>
		</g:FlowPanel>
	</g:FlowPanel>
</ui:UiBinder> 