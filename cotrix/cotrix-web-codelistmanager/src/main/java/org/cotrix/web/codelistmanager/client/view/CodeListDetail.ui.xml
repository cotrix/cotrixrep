<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client">
	<ui:with field='res'
		type='org.cotrix.web.codelistmanager.client.resources.CotrixManagerResources' />
	<ui:style
		type="org.cotrix.web.codelistmanager.client.view.CodeListDetailViewImpl.Style">
			.important {
				font-weight: bold;
			}
			
			.wrapper {
				border-radius: 5px;
				border: 1px solid #ccc;
				width: 100%;
				min-height: 100%;
				height: 100%;
			}
			
			.blankPanel {
				height: 100%;
				border-radius: 5px;
			}
			
			.loadingPanel {
				height: 100%;
				width: 100%;
				text-align: center;
				vertical-align: middle;
				line-height: 100%;
			}
			
			.initLabel {
				font-size: 20px;
				color: #999;
				line-height: 100%;
				width: 100%;
				padding-top: 150px;
				height: 100%;
				text-align: center;
			}
			
			.headerPanel {
				border-top-right-radius: 5px;
				border-top-left-radius: 5px;
				height: 50px;
				padding-right: 20px;
				background: rgb(255, 255, 255); /* Old browsers */
				background: -moz-linear-gradient(top, rgba(255, 255, 255, 1) 0%,
					rgba(229, 229, 229, 1) 100%); /* FF3.6+ */
				background: -webkit-gradient(linear, left top, left bottom, color-stop(0%, rgba(255,
					255, 255, 1)), color-stop(100%, rgba(229, 229, 229, 1)));
				/* Chrome,Safari4+ */
				background: -webkit-linear-gradient(top, rgba(255, 255, 255, 1) 0%,
					rgba(229, 229, 229, 1) 100%); /* Chrome10+,Safari5.1+ */
				background: -o-linear-gradient(top, rgba(255, 255, 255, 1) 0%,
					rgba(229, 229, 229, 1) 100%); /* Opera 11.10+ */
				background: -ms-linear-gradient(top, rgba(255, 255, 255, 1) 0%,
					rgba(229, 229, 229, 1) 100%); /* IE10+ */
				background: linear-gradient(to bottom, rgba(255, 255, 255, 1) 0%,
					rgba(229, 229, 229, 1) 100%); /* W3C */
				filter: progid:DXImageTransform.Microsoft.gradient(             
																																												                     
																																																																																																														                     startColorstr='#ffffff',
					endColorstr='#e5e5e5', GradientType=0); /* IE6-9 */
			}
			
			.nav {
				cursor: pointer;
				float: left;
			}
			
			img.nav {
				height: 35px;
			}
			
			.codelistName {
				float: left;
				vertical-align: middle;
				color: #999;
				cursor: pointer;
				line-height: 35px;
			}
			
			.metadata {
				color: #999;
				font-size: 13px;
				width: 100%;
			}
			
			.metadataWrapper {
				padding: 10px;
				background-color: #f9f9f9;
				box-shadow: 0px 2px 3px #e9e9e9;
				width: 100%;
			}
			
			.version {
				float: right;
				padding-right: 20px;
				vertical-align: middle;
				color: #999;
				line-height: 35px;
			}
			
			.listbox {
				vertical-align: middle;
			}
			
			.listBoxWrapper {
				float: right;
				line-height: 35px;
				vertical-align: middle;
			}
			
			.labelversion {
				float: right;
				color: #999;
				padding-right: 10px;
				line-height: 35px
			}
			
			.dataPanel {
				background-color: yellow;
				width: 100%;
			}
			
			.tableData {
				background-color: red;
				display: block;
			}
			
			.tablePager {
				background-color: yellow;
				display: block;
				margin-left: auto;
				margin-right: auto;
			}
			
			.pagerWrapper {
				text-align: center;
				border-bottom-right-radius: 5px;
				border-bottom-left-radius: 5px;
				background-color: #eee;
			}
			
			.pager {
				margin: 0 auto;
				text-align: center;
			}
			
			.datagrid {
				border-radius: 5px;
				width: 100%;
				height: 100%;
			}
			
			.tableWrapper {
				height: 100%;
				vertical-align: top;
				text-align: center;
				width: 100%;
			}
			
			.table {
				height: 100%;
				width: 100%;
			}
			
			.loadingIcon {
				margin: 0 auto;
				vertical-align: middle;
			}
			
			.gridWrapper {
				height: 100%;
				padding: 10px;
			}
		</ui:style>
	<g:HTMLPanel styleName="{style.wrapper}">
		<g:HTMLPanel ui:field="contentPanel" visible="false"
			styleName="{style.datagrid}">
			<g:DockLayoutPanel unit='EM' styleName="{style.datagrid}">
				<g:north size='2.7'>
					<g:FlowPanel ui:field="headerPanel" styleName="{style.headerPanel}">
						<g:FlowPanel>
							<g:Image url="{res.nav_collapse_left.getSafeUri.asString}"
								styleName="{style.nav}" ui:field="nav"></g:Image>
							<g:Label ui:field="codelistName" styleName="{style.codelistName}" />
							<g:FlowPanel styleName="{style.listBoxWrapper}">
								<g:ListBox styleName="{style.listbox}">
									<g:item value='1'>
										1.0
									</g:item>
									<g:item value='2'>
										1.1
									</g:item>
									<g:item value='3'>
										1.9
									</g:item>
									<g:item value='4'>
										2.1
									</g:item>
									<g:item value='5'>
										2.6
									</g:item>
								</g:ListBox>
							</g:FlowPanel>
							<g:Label ui:field="version" styleName="{style.labelversion}">Version</g:Label>
						</g:FlowPanel>
					</g:FlowPanel>
				</g:north>
				<g:south size='2'>
					<g:HTMLPanel styleName="{style.pagerWrapper}" ui:field="pagerWrapper">
						<!-- <c:SimplePager ui:field='pager' styleName="{style.pager}" /> -->
					</g:HTMLPanel>
				</g:south>
				<g:center>
					<g:HTMLPanel styleName="{style.tableWrapper}">
						<g:VerticalPanel ui:field="metadataPanel"
							styleName="{style.metadataWrapper}">
							<g:Label ui:field="metadata" styleName="{style.metadata}" />
						</g:VerticalPanel>
						<div class="{style.gridWrapper}">
							<g:HTMLPanel ui:field="dataGridWrapper" styleName="{style.table}">
								<!-- <c:DataGrid ui:field='dataGrid' styleName="{style.table}" /> -->
							</g:HTMLPanel>
						</div>
					</g:HTMLPanel>
				</g:center>
			</g:DockLayoutPanel>
		</g:HTMLPanel>
		<g:HTMLPanel ui:field="blankPanel" styleName="{style.blankPanel}">
			<g:Label styleName="{style.initLabel}" visible="true">Select any
				code
				list in left panel.</g:Label>
		</g:HTMLPanel>
		<g:VerticalPanel visible="false" ui:field="loadingPanel"
			width="100%" height="100%" verticalAlignment="ALIGN_MIDDLE"
			horizontalAlignment="ALIGN_CENTER">
			<g:Image resource='{res.loading}' width="120px;" styleName="{style.loadingIcon}" />
		</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 