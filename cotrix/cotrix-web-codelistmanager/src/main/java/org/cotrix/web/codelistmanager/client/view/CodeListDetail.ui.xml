<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with field='res'
		type='org.cotrix.web.codelistmanager.client.resources.CotrixManagerResources' />
	<ui:style
		type="org.cotrix.web.codelistmanager.client.view.CodeListDetailViewImpl.Style">
			.important {
				font-weight: bold;
			}
			
			.wrapper {
				height: 100%;
				width: 100%;
				border-radius: 5px;
				border: 1px solid #ccc;
				background-color: white;
			}
			
			.initLabel {
				font-size: 25px;
				color: #999;
				font-weight: lighter;
				line-height: 100%;
				width: 100%;
				height: 100%;
				text-align: center;
				margin-top: 150px;
			}
			
			.headerPanel {
				border-top-right-radius: 5px;
				border-top-left-radius: 5px;
				height: 35px;
				padding-right: 20px;
				background: rgb(255, 255, 255); /* Old browsers */
				background: -moz-linear-gradient(top, rgba(255, 255, 255, 1) 0%,
					rgba(229, 229, 229, 1) 100%); /* FF3.6+ */
				background: -webkit-gradient(linear, left top, left bottom, color-stop(0%, rgba(255,
					255, 255, 1)), color-stop(100%, rgba(229, 229, 229, 1)));
				/* Chrome,Safari4+ */
				background: -webkit-linear-gradient(top, rgba(255, 255, 255, 1) 0%,
					rgba(229, 229, 229, 1) 100%); /* Chrome10+,Safari5.1+ */
				background: -o-linear-gradient(top, rgba(255, 255, 255, 1) 0%,
					rgba(229, 229, 229, 1) 100%); /* Opera 11.10+ */
				background: -ms-linear-gradient(top, rgba(255, 255, 255, 1) 0%,
					rgba(229, 229, 229, 1) 100%); /* IE10+ */
				background: linear-gradient(to bottom, rgba(255, 255, 255, 1) 0%,
					rgba(229, 229, 229, 1) 100%); /* W3C */
				filter: progid:DXImageTransform.Microsoft.gradient(                   startColorstr='#ffffff',
					endColorstr='#e5e5e5', GradientType=0); /* IE6-9 */
			}
			
			.nav {
				cursor: pointer;
				float: left;
			}
			
			img.nav {
				height: 35px;
			}
			
			.codelistName {
				float: left;
				vertical-align: middle;
				color: #999;
				cursor: pointer;
				line-height: 35px;
			}
			
			.metadata {
				background-color: #f9f9f9;
				box-shadow: 0px 2px 3px #e9e9e9;
				color: #999;
				font-size: 13px;
				padding: 20px;
			}
			
			.version {
				float: right;
				padding-right: 20px;
				vertical-align: middle;
				color: #999;
				line-height: 35px;
			}
			
			.listbox {
				vertical-align: middle;
			}
			
			.listBoxWrapper {
				float: right;
				line-height: 35px;
				vertical-align: middle;
			}
			
			.labelversion {
				float: right;
				color: #999;
				padding-right: 10px;
				line-height: 35px
			}
		</ui:style>
	<g:FlowPanel styleName="{style.wrapper}">
		<g:FlowPanel ui:field="headerPanel" styleName="{style.headerPanel}">
			<g:FlowPanel>
				<g:Image url="{res.nav_collapse_left.getSafeUri.asString}"
					styleName="{style.nav}" ui:field="nav"></g:Image>
				<g:Label ui:field="codelistName" styleName="{style.codelistName}">ASFIS</g:Label>
				<g:FlowPanel styleName="{style.listBoxWrapper}">
					<g:ListBox styleName="{style.listbox}">
						<g:item value='1'>
							1.0
						</g:item>
						<g:item value='2'>
							1.1
						</g:item>
						<g:item value='3'>
							1.9
						</g:item>
						<g:item value='4'>
							2.1
						</g:item>
						<g:item value='5'>
							2.6
						</g:item>
					</g:ListBox>
				</g:FlowPanel>
				<g:Label ui:field="version" styleName="{style.labelversion}">Version</g:Label>
			</g:FlowPanel>
		</g:FlowPanel>
		
		<g:FlowPanel styleName="{style.metadata}" ui:field="metadataPanel">
			<g:Label> Display Metadata</g:Label>
		</g:FlowPanel>
		<g:FlowPanel  ui:field="gridPanel"></g:FlowPanel>
		<g:Label styleName="{style.initLabel}" visible="false">Select any code
			list in left panel.</g:Label>
	</g:FlowPanel>
</ui:UiBinder> 