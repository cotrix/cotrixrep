<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client">
	<ui:with field='resources'
		type='org.cotrix.web.codelistmanager.client.resources.CotrixManagerResources' />
			<ui:with field='common'
		type='org.cotrix.web.share.client.resources.CommonResources' />
	<ui:style>
		.headerPanel {
			padding-right: 5px;
		}
		
		.leftWrapper {
			float: left;
		}
		
		.seal {
			padding-left: 5px;
		}
		
		.rightWrapper {
			float: right;
			vertical-align: middle;
			padding: 5px;
		}
		
		.state {
			color: gray;
			padding-right: 5px;
			font-size: 23px;
			/*display: inline-block;*/
			height: 100%;
			vertical-align: middle;
		}
		
		.stateLoaderWrapper {
			height: 25px;
			vertical-align: middle;
			display: inline-block;
		}
		
		.stateLoader {
			margin: 8px;
		}
				
		.lock {
			outline: none;
			padding: 5px;
			display: inline;
			cursor: pointer;
		}
		
		.lock > img {
			vertical-align: middle;
		}
		
	</ui:style>
	<g:FlowPanel ui:field="headerPanel" styleName="{style.headerPanel}">
		<g:HorizontalPanel styleName="{style.leftWrapper}">
			<g:PushButton ui:field="allColumns">
				<g:upFace image="{resources.allColumns}" />
			</g:PushButton>
			<g:PushButton ui:field="allNormals">
				<g:upFace image="{resources.allNormals}" />
			</g:PushButton>
		</g:HorizontalPanel>
		<g:FlowPanel styleName="{style.rightWrapper}">
			<g:InlineLabel ui:field="state" styleName="{style.state}">draft</g:InlineLabel>
			<g:FlowPanel styleName="{style.stateLoaderWrapper}">
				<g:Image ui:field="stateLoader" resource="{common.dataLoader}" styleName="{style.stateLoader}" visible="false"/>
			</g:FlowPanel>
			<g:ToggleButton ui:field="lock" styleName="{style.lock}">
				<g:upFace image="{resources.unlock}"/>
				<g:upDisabledFace image="{resources.unlockDisabled}" />
				<g:downFace image="{resources.lock}" />
				<g:downDisabledFace image="{resources.lockDisabled}" />
			</g:ToggleButton>
			<g:Button ui:field="seal" visible="false" styleName="{style.seal}">Finalize</g:Button>
		</g:FlowPanel>
	</g:FlowPanel>
</ui:UiBinder> 