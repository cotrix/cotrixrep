<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client">
	<ui:with field='resources'
		type='org.cotrix.web.codelistmanager.client.resources.CotrixManagerResources' />
	<ui:style>
		.headerPanel {
			border-top-right-radius: 5px;
			border-top-left-radius: 5px;
			height: 50px;
			padding-right: 20px;
		}
		
		.leftWrapper {
			float: left;
		}
		
		.lock {
			outline: none;
			padding: 5px;
			display: inline;
			vertical-align: middle;
			cursor: pointer;
		}
		
		.seal {
			padding-left: 5px;

		}
		
		.rightWrapper {
			float: right;
			line-height: 35px;
		}
		
		.allColumnsButton {
			margin: auto;
			outline: none;
		}
	</ui:style>
	<g:FlowPanel ui:field="headerPanel" styleName="{style.headerPanel}">
		<g:FlowPanel styleName="{style.leftWrapper}">
			<g:ToggleButton ui:field="lock"  styleName="{style.lock}">
				<g:upFace image="{resources.lock}" />
				<g:downFace image="{resources.unlock}" />
			</g:ToggleButton>
			<g:Button ui:field="seal" visible="true"  styleName="{style.seal}">Finalize</g:Button>
		</g:FlowPanel>
		<g:FlowPanel styleName="{style.rightWrapper}">
			<g:Button ui:field="allColumns" enabled="true">AllColumns</g:Button>
			<g:Button ui:field="allNormals" enabled="true">AllNormals</g:Button>

		</g:FlowPanel>

	</g:FlowPanel>
</ui:UiBinder> 