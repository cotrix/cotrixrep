<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client">
	<ui:with field='res'
		type='org.cotrix.web.codelistmanager.client.resources.CotrixManagerResources' />
	<ui:style>
			


			
			.headerPanel {
				border-top-right-radius: 5px;
				border-top-left-radius: 5px;
				height: 50px;
				padding-right: 20px;
				background: rgb(255, 255, 255); /* Old browsers */
				background: -moz-linear-gradient(top, rgba(255, 255, 255, 1) 0%,
					rgba(229, 229, 229, 1) 100%); /* FF3.6+ */
				background: -webkit-gradient(linear, left top, left bottom, color-stop(0%, rgba(255,
					255, 255, 1)), color-stop(100%, rgba(229, 229, 229, 1)));
				/* Chrome,Safari4+ */
				background: -webkit-linear-gradient(top, rgba(255, 255, 255, 1) 0%,
					rgba(229, 229, 229, 1) 100%); /* Chrome10+,Safari5.1+ */
				background: -o-linear-gradient(top, rgba(255, 255, 255, 1) 0%,
					rgba(229, 229, 229, 1) 100%); /* Opera 11.10+ */
				background: -ms-linear-gradient(top, rgba(255, 255, 255, 1) 0%,
					rgba(229, 229, 229, 1) 100%); /* IE10+ */
				background: linear-gradient(to bottom, rgba(255, 255, 255, 1) 0%,
					rgba(229, 229, 229, 1) 100%); /* W3C */
				filter: literal("progid:DXImageTransform.Microsoft.gradient(endColorstr='#e5e5e5', GradientType=0)"
					); /* IE6-9 */
			}
			
			.nav {
				cursor: pointer;
				float: left;
			}
			
			img.nav {
				height: 35px;
			}
			
			.codelistName {
				float: left;
				vertical-align: middle;
				color: #999;
				cursor: pointer;
				line-height: 35px;
			}
			
			.save_active {
				float: right;
				margin-right: 0px;
				border: 1px solid #3063a1;
				-webkit-border-radius: 5px;
				-moz-border-radius: 5px;
				border-radius: 5px;
				width: 80px;
				font-size: 12px;
				font-family: arial, helvetica, sans-serif;
				padding: 4px 4px 4px 4px;
				position: relative;
				top: 3px;
				text-shadow: 0px 0px 0 rgba(0, 0, 0, 0.3);
				font-weight: bold;
				text-align: center;
				color: #E8E8E8;
				background-color: #427EC7;
				background-image: -webkit-gradient(linear, left top, left bottom, color-stop(0%, #427EC7),
					color-stop(100%, #518EE2));
				background-image: -webkit-linear-gradient(top, #427EC7, #518EE2);
				background-image: -moz-linear-gradient(top, #427EC7, #518EE2);
				background-image: -ms-linear-gradient(top, #427EC7, #518EE2);
				background-image: -o-linear-gradient(top, #427EC7, #518EE2);
				background-image: linear-gradient(top, #427EC7, #518EE2);
				filter: literal("progid:DXImageTransform.Microsoft.gradient(GradientType=0,startColorstr=#427EC7, endColorstr=#518EE2)"
					);
			}
			
			.save_active:hover {
				border: 1px solid #254d7e;
				background-color: #3165a5;
				background-image: -webkit-gradient(linear, left top, left bottom, color-stop(0%, #3165a5),
					color-stop(100%, #2572db));
				background-image: -webkit-linear-gradient(top, #3165a5, #2572db);
				background-image: -moz-linear-gradient(top, #3165a5, #2572db);
				background-image: -ms-linear-gradient(top, #3165a5, #2572db);
				background-image: -o-linear-gradient(top, #3165a5, #2572db);
				background-image: linear-gradient(top, #3165a5, #2572db);
				filter: literal("progid:DXImageTransform.Microsoft.gradient(GradientType=0,startColorstr=#3165a5, endColorstr=#2572db)"
					);
			}
			
			.save_inactive {
				float: right;
				margin-right: 0px;
				border: 1px solid #999999;
				-webkit-border-radius: 5px;
				-moz-border-radius: 5px;
				border-radius: 5px;
				width: 80px;
				font-size: 12px;
				font-family: arial, helvetica, sans-serif;
				padding: 4px 4px 4px 4px;
				position: relative;
				top: 3px;
				text-shadow: 0px 0px 0 rgba(0, 0, 0, 0.3);
				font-weight: bold;
				text-align: center;
				color: #E8E8E8;
				background-color: #c7c7c7;
			}
			
			.metadata {
				color: #999;
				font-size: 13px;
				width: 100%;
			}
			
			.metadataWrapper {
				padding: 10px;
				background-color: #f9f9f9;
				box-shadow: 0px 2px 3px #e9e9e9;
				width: 100%;
			}
			
			.version {
				float: right;
				padding-right: 20px;
				vertical-align: middle;
				color: #999;
				line-height: 35px;
			}
			
			.listbox {
				vertical-align: middle;
			}
			
			.listBoxWrapper {
				float: right;
				line-height: 35px;
				vertical-align: middle;
			}
			
			.labelversion {
				float: right;
				color: #999;
				padding-right: 10px;
				line-height: 35px
			}
			.padding {
			padding-left: 10px !important;
			

	}
		</ui:style>
	<g:FlowPanel ui:field="headerPanel" styleName="{style.headerPanel}">
		<g:FlowPanel>
			<!-- <g:Image url="{res.nav_collapse_left.getSafeUri.asString}"
				styleName="{style.nav}" ui:field="nav"></g:Image> -->
			<g:Label ui:field="codelistName" styleName="{style.codelistName}" />
			<g:FlowPanel styleName="{style.listBoxWrapper}">

				<g:Button styleName="{style.save_inactive}" ui:field="save"	enabled="false">Save</g:Button>
				<g:Button styleName="{style.save_active}" ui:field="metadata" visible="false">Metadata</g:Button>
<!--  				<g:ListBox styleName="{style.listbox}">
					<g:item value='1'>
						1.0
					</g:item>
					<g:item value='2'>
						1.1
					</g:item>
					<g:item value='3'>
						1.9
					</g:item>
					<g:item value='4'>
						2.1
					</g:item>
					<g:item value='5'>
						2.6
					</g:item>
				</g:ListBox>-->
			</g:FlowPanel>
			<!--  <g:Label ui:field="version" styleName="{style.labelversion}">Version</g:Label>-->
		</g:FlowPanel>
	</g:FlowPanel>
</ui:UiBinder> 