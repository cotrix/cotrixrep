<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
	<listener>
		<listener-class>org.jboss.weld.environment.servlet.Listener</listener-class>
	</listener>

	<servlet>
		<servlet-name>listServlet</servlet-name>
		<servlet-class>org.cotrix.web.server.MainServiceImpl</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>cdiProxyImportWizardServlet</servlet-name>
		<servlet-class>org.cotrix.web.importwizard.server.CDIProxyServlet</servlet-class>
		<init-param>
			<param-name>targetServletClass</param-name>
			<param-value>org.cotrix.web.importwizard.server.FileUpload</param-value>
		</init-param>
	</servlet>

	<servlet>
		<servlet-name>cdiProxyCodelistManagerServlet</servlet-name>
		<servlet-class>org.cotrix.web.codelistmanager.server.CDIProxyServlet</servlet-class>
		<init-param>
			<param-name>targetServletClass</param-name>
			<param-value>org.cotrix.web.codelistmanager.server.ManagerServiceImpl</param-value>
		</init-param>
	</servlet>
	
	<servlet>
		<servlet-name>cdiProxyCodelistPublishServlet</servlet-name>
		<servlet-class>org.cotrix.web.publish.server.CDIProxyServlet</servlet-class>
		<init-param>
			<param-name>targetServletClass</param-name>
			<param-value>org.cotrix.web.publish.server.PublishServiceImpl</param-value>
		</init-param>
	</servlet>

	<servlet-mapping>
		<servlet-name>cdiProxyCodelistPublishServlet</servlet-name>
		<url-pattern>/CodeListManager/publish</url-pattern>
	</servlet-mapping>


	<servlet-mapping>
		<servlet-name>cdiProxyImportWizardServlet</servlet-name>
		<url-pattern>/CodeListManager/fileupload</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>listServlet</servlet-name>
		<url-pattern>/CodeListManager/main</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>cdiProxyCodelistManagerServlet</servlet-name>
		<url-pattern>/CodeListManager/manager</url-pattern>
	</servlet-mapping>

	<!-- Default page to serve -->
	<welcome-file-list>
		<welcome-file>CodeListManager.html</welcome-file>
	</welcome-file-list>

</web-app>
