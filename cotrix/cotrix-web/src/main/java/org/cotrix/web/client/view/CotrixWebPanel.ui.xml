<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		
		.footer {
			background-color: #363636;
			height: 60px;
			text-align: center;
		}
		
		.footerText {
			vertical-align: middle;
			font-size: 11px;
			color: #999;
			font-weight: bold;
		}
		
		.body {
			width: 940px;
			margin: 0 auto;
		}
	</ui:style>
	<g:DockLayoutPanel unit='PX' height="800px">
		<g:north size='70'>
			<g:FlowPanel ui:field="menu" />
		</g:north>
		<g:center>
			<g:DeckLayoutPanel ui:field="body" styleName="{style.body}"/>
		</g:center>
		<g:south size="64">
			<g:HTMLPanel styleName="{style.footer}">
				<span class="{style.footerText}">
					COPYRIGHT 2013 Cotrix All Right Reserve
					<br />
					<font style="color:#f66a03">Cotrix</font>
					is founded by iMarine.
				</span>
			</g:HTMLPanel>
		</g:south>
	</g:DockLayoutPanel>
</ui:UiBinder> 