<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with field='resources'
		type='org.cotrix.web.client.resources.CotrixResources' />
	<ui:style type="org.cotrix.web.client.view.UserBarViewImpl.Style">
		.statusContainer {
			text-align: center;
		}
		
		.status {
			color: #fff;
			margin: auto;
			text-align: center;
			font-size: 12px;
		}
		
		.userInfo {
			color: #fff;
			float: right;
			margin-right: 20px;
			font-size: 12px;
		}
		
		.icon {
			vertical-align: middle;

		}
		
		.middle {
			display:inline-block; 
			vertical-align:middle
		}
		
		.activeLabel {
			color: #64a1e0;
			font-size: 12px;
			font-weight: normal;
			cursor: pointer;
		}
		
		.activeLabelDisabled {
			cursor: default;
		}
	</ui:style>
	<g:FlowPanel>
		<g:HorizontalPanel width="100%" verticalAlignment="middle">
			<g:FlowPanel styleName="{style.statusContainer}">
				<g:InlineLabel styleName="{style.status}" ui:field="status" />
			</g:FlowPanel>
			<g:FlowPanel styleName="{style.userInfo}">
				<g:Image ui:field="user" visible="false" resource="{resources.user}" styleName="{style.icon}"/>
				<g:Image ui:field="userDisabled" resource="{resources.userDisabled}"  styleName="{style.icon}"/>
				<g:InlineHTML styleName="{style.middle}">&nbsp;</g:InlineHTML>
				<g:InlineLabel styleName="{style.activeLabel} {style.middle}" ui:field="username">none</g:InlineLabel>
				<g:InlineHTML styleName="{style.middle}">&nbsp;|&nbsp;</g:InlineHTML>
				<g:InlineLabel styleName="{style.activeLabel} {style.middle}" ui:field="login" visible="false">login</g:InlineLabel>
				<g:InlineLabel styleName="{style.activeLabel} {style.middle}" ui:field="logout" visible="false">logout</g:InlineLabel>
				<g:InlineHTML ui:field="registerSeparator" styleName="{style.middle}" visible="false">&nbsp;or&nbsp;</g:InlineHTML>
				<g:InlineLabel styleName="{style.activeLabel} {style.middle}" ui:field="register" visible="false">sign-up</g:InlineLabel>
			</g:FlowPanel>
		</g:HorizontalPanel>
	</g:FlowPanel>

</ui:UiBinder> 
