<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.info {
			color: #fff;
			float: right;
			margin-right: 20px;
			font-size: 12px;
		}
		
		.active {
			color: #64a1e0;
			line-height: 25px;
			font-size: 12px;
			font-weight: bold;
			cursor: pointer;
		}
		
	</ui:style>
	<g:FlowPanel styleName="{style.info}">
		<g:InlineHTML>user:&nbsp;</g:InlineHTML>
		<g:InlineLabel styleName="{style.active}" ui:field="username">none</g:InlineLabel>
		<g:InlineHTML>&nbsp;|&nbsp;</g:InlineHTML>
		<g:InlineLabel styleName="{style.active}" ui:field="login">Login</g:InlineLabel>
		<g:InlineLabel styleName="{style.active}" ui:field="logout">Logout</g:InlineLabel>
	</g:FlowPanel>

</ui:UiBinder> 
