<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with field='resources'
		type='org.cotrix.web.client.resources.CotrixResources' />
	<ui:style>
		.div {
			vertical-align: middle;
			text-align: center;
		}
		
		.screen {
			height: 400px;
			margin-top: 83px;
		}
		
		.blockContainer {
			display: table;
			margin: 0 auto;
			margin-top: 94px;
		}
		
		.block {
			background-color: #e9e9e9;
			border-radius: 5px;
			width: 270px;
			height: 200px;
			margin: 20px;
			border: 1px solid #d9d9d9;
			float: left;
		}
		
		.blockImg {
			float: left;
			margin: 0 auto;
			height: 30px;
			margin-left: 5px;
		}
		
		.blockTitle {
			text-align: center;
			font-size: 22px;
			color: #666;
			border-bottom: 1px solid #d9d9d9;
			padding: 5px;
		}		
	</ui:style>
	<g:HTMLPanel>
		<div class="{style.div}">
			<g:Image resource="{resources.home}" styleName="{style.screen}" />
		</div>
		<div class="{style.blockContainer}">
			<div class="{style.block}">
				<g:Image resource="{resources.communities}" styleName="{style.blockImg}" />
				<div class="{style.blockTitle}">Communities</div>
			</div>
			<div class="{style.block}">
				<g:Image resource="{resources.statistic}" styleName="{style.blockImg}" />
				<div class="{style.blockTitle}">Statistic</div>
			</div>
			<div class="{style.block}">
				<g:Image resource="{resources.howto}" styleName="{style.blockImg}" />
				<div class="{style.blockTitle}">How to?</div>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 