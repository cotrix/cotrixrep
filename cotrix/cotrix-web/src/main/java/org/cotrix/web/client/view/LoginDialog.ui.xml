<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<ui:with type="org.cotrix.web.share.client.resources.CommonResources"
		field="resources" />
	<ui:style>
		.box {
			-moz-box-shadow: 0 0 7px 7px #999;
			-webkit-box-shadow: 0 0 7px 7px #999;
			box-shadow: 0 0 7px 7px #999;
			background-color: #fff;
			border-radius: 5px;
			width: 300px;
			height: 300px;
			padding: 20px;
		}
		
		.title {
			color: #ff6600;
			font-size: 20px;
		}
		
		.subtitle {
			padding-top: 10px;
			color: #999;
			font-size: 15px;
		}
		
		.register {
			color: #64a1e0;
			font-size: 15px;
			text-decoration: none;
			cursor: pointer;
		}
		
		.term {
			margin-top: 20px;
			color: #666;
			font-size: 13px;
			text-align: center;
		}
		
		.termLink {
			color: #1054d0;
			text-decoration: none;
		}
		
		.textfield {
			margin-top: 20px;
			color: #666;
			font-size: 15px;
		}
		
		.textbox {
			color: #666;
			height: 40px;
			width: 100%;
			text-decoration: none;
			border-radius: 5px;
			font-size: 20px;
			margin-top: 5px;
			border: 1px solid #ddd;
			background-color: #e5e5e5;
		}
		
		.submit {
			color: #fff;
			height: 40px;
			width: 100%;
			padding-left: 10px;
			text-decoration: none;
			border-radius: 5px;
			font-size: 17px;
			margin-top: 5px;
			border: 1px solid #ddd;
			background-color: #7085b6;
			cursor: pointer;
			outline: none;
		}
	</ui:style>
	<g:HTMLPanel styleName="{style.box}">
		<div class="{style.title}">
			Log in
		</div>
		<div class="{style.subtitle}">
			<g:InlineLabel styleName="{style.register}" ui:field="register">Create</g:InlineLabel>
			an account
		</div>
		<div class="{style.textfield}">
			<div>Username</div>
			<g:TextBox styleName="{style.textbox}" ui:field="username" />
		</div>
		<div class="{style.textfield}">
			<div>Password</div>
			<g:PasswordTextBox styleName="{style.textbox}"
				ui:field="password" />
		</div>
		<div class="{style.textfield}">
			<g:Button ui:field="login" styleName="{style.submit}">Submit</g:Button>
		</div>
	</g:HTMLPanel>

</ui:UiBinder>
