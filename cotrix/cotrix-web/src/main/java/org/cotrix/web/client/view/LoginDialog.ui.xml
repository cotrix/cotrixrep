<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<ui:with type="org.cotrix.web.common.client.resources.CommonResources"
		field="resources" />
	<g:HTMLPanel styleName="{resources.css.dialogBox}" width="300px" height="300px">
		<div class="{resources.css.dialogTitle}" id="login.title">
			Log in
		</div>
		<div class="{resources.css.dialogSubtitle}">
			<g:InlineLabel styleName="{resources.css.dialogLink}" ui:field="register">Create</g:InlineLabel>
			an account
		</div>
		<div class="{resources.css.dialogTextfield}">
			<div>Username</div>
			<g:TextBox styleName="{resources.css.dialogTextbox}" ui:field="username" debugId="user.login.username"/>
		</div>
		<div class="{resources.css.dialogTextfield}">
			<div>Password</div>
			<g:PasswordTextBox styleName="{resources.css.dialogTextbox}" ui:field="password" debugId="user.login.password"/>
		</div>
		<div class="{resources.css.dialogTextfield}">
			<g:Button ui:field="login" styleName="{resources.css.dialogSubmit}" debugId="user.login.submit">Submit</g:Button>
		</div>
	</g:HTMLPanel>

</ui:UiBinder>
