<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<ui:with type="org.cotrix.web.share.client.resources.CommonResources"
		field="resources" />
	<ui:style>
		.box {
			font-family: "HelveticaNeue-Light", "Helvetica Neue Light",
				"Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif;
			-moz-box-shadow: 0 0 7px 7px #999;
			-webkit-box-shadow: 0 0 7px 7px #999;
			box-shadow: 0 0 7px 7px #999;
			background-color: #fff;
			border-radius: 5px;
			width: 300px;
/*			margin-left: 100px;*/
			height: 350px;
			padding: 20px;
		}
		
		.title {
			color: #ff6600;
			font-size: 20px;
		}
		
		.subtitle {
			color: #999;
			font-size: 15px;
		}
		
		.register {
			color: #ff6600;
			font-size: 15px;
			text-decoration: none;
		}
		
		.term {
			margin-top: 20px;
			color: #666;
			font-size: 13px;
			text-align: center;
		}
		
		.termLink {
			color: #1054d0;
			text-decoration: none;
		}
		
		.textfield {
			margin-top: 20px;
			color: #666;
			font-size: 15px;
		}
		
		.textbox {
			color: #666;
			height: 40px;
			width: 100%;
			/*padding-left: 10px;*/
			text-decoration: none;
			border-radius: 5px;
			font-size: 20px;
			margin-top: 5px;
			border: 1px solid #ddd;
			background-color: #e5e5e5;
		}
		
		.submit {
			color: #fff;
			height: 40px;
			width: 100%;
			padding-left: 10px;
			text-decoration: none;
			border-radius: 5px;
			font-size: 17px;
			margin-top: 5px;
			border: 1px solid #ddd;
			background-color: #7085b6;
			cursor: pointer;
		}
	</ui:style>
	<g:HTMLPanel width="320px" height="370px" styleName="{style.box}">
			<div class="{style.title}">
				Log in
			</div>
			<div class="{style.subtitle}">
				Doesn't have any account? Click
				<font style="color:#ff6600;">
					<a href="#" class="{style.register}">Register</a>
				</font>
			</div>
			<div class="{style.textfield}">
				<div>Username</div>
				<g:TextBox styleName="{style.textbox}" ui:field="username" />
			</div>
			<div class="{style.textfield}">
				<div>Password</div>
				<g:TextBox styleName="{style.textbox}" ui:field="password" />
			</div>
			<div class="{style.term}">
				<div>
					By clicking
					<font style="font-weight:bold">"Submit"</font>
					I agree that:
				</div>
				<div>
					I have read and accepted the
					<a href="#" class="{style.termLink}">User Agreement</a>
					and
					<a href="#" class="{style.termLink}">Privacy Policy.</a>
				</div>
			</div>
			<div class="{style.textfield}">
				<g:Button ui:field="login" styleName="{style.submit}">Submit</g:Button>
			</div>
	</g:HTMLPanel>

</ui:UiBinder>