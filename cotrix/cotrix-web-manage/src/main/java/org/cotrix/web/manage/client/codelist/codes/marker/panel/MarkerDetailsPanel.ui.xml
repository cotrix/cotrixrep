<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:org.cotrix.web.common.client.widgets">
	<ui:with field='resources'
		type='org.cotrix.web.manage.client.resources.CotrixManagerResources' />
	<ui:style>
	
		.valueCell {
		    overflow: hidden;
		    padding: 0px 3px 0px 3px;
		}
	
	</ui:style>
	<g:HTMLPanel>
		<c:AutoHeightTextArea ui:field="descriptionArea"  styleName="{resources.detailsPanelStyle.textarea} {style.valueCell}" width="100%" placeholder="Add comment?"/>
		<g:VerticalPanel ui:field="eventsContainer" />
	</g:HTMLPanel>
</ui:UiBinder> 