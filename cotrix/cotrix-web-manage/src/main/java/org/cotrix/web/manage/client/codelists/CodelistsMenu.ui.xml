<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:m="urn:import:org.cotrix.web.common.client.widgets.menu">
	<ui:with field='resources'
		type='org.cotrix.web.manage.client.resources.CotrixManagerResources' />
	<ui:style
		type="org.cotrix.web.manage.client.codelists.CodelistsMenuImpl.Style">
		.menuPopup {
			background-color: white;
			border-radius: 2px;
			border: 1px solid #999;
		}
		
		.menuItem {
			padding: 2px 6px;
			color: #4f4e4e;
			cursor: pointer;
		}
		
		.menuItemSelected {
			background-color: darkgray;
			cursor: pointer;
		}
		
		@external menuSeparatorInner;
		.menuSeparatorInner {
			height: 1px;
			padding: 0px;
			border: 0px;
			border-top: 1px solid #ccc;
			overflow: hidden;
			margin-left: 5px;
			margin-right: 5px;
			margin-top: 3px;
			margin-bottom: 2px;
		}
		</ui:style>
	<m:FlatMenuBar vertical="true">
	
		<!-- OWNER -->
		<m:group>
			<m:RadioMenuGroup ui:field="ownershipFilterGroup">
				<m:radio>
					<m:CheckMenuItem label="show all" image="{resources.checkBullet}"
						selected="true" styleName="{style.menuItem}" selectedItemStyleName="{style.menuItemSelected}" value="show_all"/>
				</m:radio>
				<m:radio>
					<m:CheckMenuItem label="show mine" image="{resources.checkBullet}"
						styleName="{style.menuItem}" selectedItemStyleName="{style.menuItemSelected}" value="show_user"/>
				</m:radio>
			</m:RadioMenuGroup>
		</m:group>

		<!-- FILTER -->
		<m:group>
			<m:CheckMenuGroup ui:field="includeFilterGroup">
				<m:check>
					<m:CheckMenuItem label="include draft" image="{resources.checkBullet}"
						selected="true" manageSelection="true" styleName="{style.menuItem}" selectedItemStyleName="{style.menuItemSelected}" value="filter_by_state_draft" />
				</m:check>
				<m:check>
					<m:CheckMenuItem label="include locked" image="{resources.checkBullet}"
						selected="true" manageSelection="true" styleName="{style.menuItem}" selectedItemStyleName="{style.menuItemSelected}" value="filter_by_state_locked"/>
				</m:check>
				<m:check>
					<m:CheckMenuItem label="include sealed" image="{resources.checkBullet}"
						selected="true" manageSelection="true" styleName="{style.menuItem}" selectedItemStyleName="{style.menuItemSelected}" value="filter_by_state_sealed"/>
				</m:check>
			</m:CheckMenuGroup>
		</m:group>


		<!-- SORT -->
<!-- 		<m:group> -->
<!-- 			<m:RadioMenuGroup ui:field="sortGroup"> -->
<!-- 				<m:radio> -->
<!-- 					<m:CheckMenuItem label="sort by Name" image="{resources.radioBullet}" -->
<!-- 						selected="true" styleName="{style.menuItem}" selectedItemStyleName="{style.menuItemSelected}" value="sort_by_name"/> -->
<!-- 				</m:radio> -->
<!-- 				<m:radio> -->
<!-- 					<m:CheckMenuItem label="sort by Version" image="{resources.radioBullet}" -->
<!-- 						styleName="{style.menuItem}" selectedItemStyleName="{style.menuItemSelected}" value="sort_by_version"/> -->
<!-- 				</m:radio> -->
<!-- 			</m:RadioMenuGroup> -->
<!-- 		</m:group> -->
		
		<!-- Group -->
		<m:group>
			<m:RadioMenuGroup ui:field="group">
<!-- 				<m:radio> -->
<!-- 					<m:CheckMenuItem label="Don't group" image="{resources.radioBullet}" -->
<!-- 						 styleName="{style.menuItem}" value="group_by_none"/> -->
<!-- 				</m:radio> -->
				<m:radio>
					<m:CheckMenuItem label="group by name" image="{resources.checkBullet}"
						selected="true" styleName="{style.menuItem}" selectedItemStyleName="{style.menuItemSelected}" value="group_by_name"/>
				</m:radio>
				<m:radio>
					<m:CheckMenuItem label="group by state" image="{resources.checkBullet}"
						 styleName="{style.menuItem}" selectedItemStyleName="{style.menuItemSelected}" value="group_by_state"/>
				</m:radio>
			</m:RadioMenuGroup>
		</m:group>



	</m:FlatMenuBar>

</ui:UiBinder> 