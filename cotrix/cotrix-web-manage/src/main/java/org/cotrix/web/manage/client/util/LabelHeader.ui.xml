<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with field='resources'
		type='org.cotrix.web.manage.client.resources.CotrixManagerResources' />
	<ui:style type="org.cotrix.web.manage.client.util.LabelHeader.Style">
	.header {
		vertical-align: middle;
		height: 28px;
	}
	
	.header:HOVER {
		background: #eee;
		cursor: pointer;
	}
	
	.headerLeftBox {
		padding-top: 5px;
		float: left;
		vertical-align: middle;
		width: 70%;
		height: 23px;
		outline: none;
		cursor: pointer;
	}
	
	.headerSelected {
		color: #097bfb !important;
	}
	
	.bullet {
		margin-left: 5px;
	}
	
	.headerLabel {
		color: #5A5A5A;
		font-size: 14px;
		padding: 4px 8px 4px 10px;
		text-align: left;
		vertical-align: middle;
	}
	
	.buttons {
		float: right;
		padding-top: 5px;
	}
	
	.button {
		padding-right: 5px;
		outline: none;
		cursor: pointer;
		display: inline;
	}
	</ui:style>
	<g:FlowPanel styleName="{style.header}">
		<g:FocusPanel ui:field="headerBox" styleName="{style.headerLeftBox}">
			<g:FlowPanel>
				<g:Image resource="{resources.bullet}" styleName="{style.bullet}" />
				<g:InlineLabel ui:field="headerLabel" styleName="{style.headerLabel}" />
			</g:FlowPanel>
		</g:FocusPanel>
		<g:FlowPanel styleName="{style.buttons}">
			<g:DeckPanel ui:field="controls">
				<g:PushButton ui:field="edit" styleName="{style.button}">
					<g:upFace image="{resources.edit}" />
				</g:PushButton>
				<g:FlowPanel ui:field="completeControls">
					<g:PushButton ui:field="revert" styleName="{style.button}">
						<g:upFace image="{resources.cancel}" />
					</g:PushButton>
					<g:PushButton ui:field="save" styleName="{style.button}">
						<g:upFace image="{resources.save}" />
					</g:PushButton>
				</g:FlowPanel>
			</g:DeckPanel>


		</g:FlowPanel>
	</g:FlowPanel>
</ui:UiBinder> 