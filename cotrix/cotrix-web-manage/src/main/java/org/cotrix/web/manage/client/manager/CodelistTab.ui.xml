<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with type="org.cotrix.web.manage.client.resources.CotrixManagerResources"
		field="resources"></ui:with>
	<ui:style>
		.tab {
			text-align: left;
			font-size: 16px;
		}
		
		.tabLabel {
			text-align: left;
		}
		
		.tabName {
			
		}
		
		.tabVersion {
			padding-left: 5px;
			color: orange;
		}
		
		.tabClose {
			float: right;
			cursor: pointer;
			margin-left: 7px;
		}
	</ui:style>
	<g:FlowPanel styleName="{style.tab}">
		<g:InlineLabel styleName="{style.tabName}" ui:field="name" />
		<g:InlineLabel styleName="{style.tabVersion}" ui:field="version" />
		<g:Image styleName="{style.tabClose}" ui:field="close" resource="{resources.close}"/>
	</g:FlowPanel>
</ui:UiBinder> 