<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:v="urn:import:org.cotrix.web.manage.client.codelist.codes">
	<ui:with field='resources'
		type='org.cotrix.web.manage.client.resources.CotrixManagerResources' />
	<ui:with field='commonresources'
		type='org.cotrix.web.common.client.resources.CommonResources' />
	<ui:style>
		.mainPanel {
			border-top-left-radius: 2px;
			border-top-right-radius: 2px;
			background-color: #fff;
			border: 1px solid #bababa;
		}
		
		.leftButtonBarPanel {
			vertical-align: middle;
			width: 100%;
			height: 100%;
			cursor: pointer;
			background-color: white;
		}
		
		.codesButtonBar {
			vertical-align: middle;
			margin-left: 10px;
		}
		
		.button {
			cursor: pointer;
			outline: none;
			vertical-align: middle;
		}
		
		.tools {
			
		}

		</ui:style>
	<g:DockLayoutPanel unit='PX' styleName="{style.mainPanel}">
		<g:north size='34'>
			<g:FlowPanel styleName="{style.leftButtonBarPanel}">
				<g:HorizontalPanel styleName="{style.codesButtonBar}"
					verticalAlignment="middle" height="100%">
					<g:ToggleButton ui:field="attributesButton" width="32px"
						styleName="{style.button}" title="Code Attributes">
						<g:downDisabledFace image="{resources.attributesDisabled}" />
						<g:upDisabledFace image="{resources.attributesDisabled}" />
						<g:upFace image="{resources.attributesUnselected}" />
						<g:downFace image="{resources.attributesSelected}" />
						<g:upHoveringFace image="{resources.attributesSelected}" />
					</g:ToggleButton>
					<g:ToggleButton ui:field="linksButton" width="32px"
						styleName="{style.button}" title="Code Links">
						<g:downDisabledFace image="{resources.linksDisabled}" />
						<g:upDisabledFace image="{resources.linksDisabled}" />
						<g:upFace image="{resources.linksUnselected}" />
						<g:downFace image="{resources.linksSelected}" />
						<g:upHoveringFace image="{resources.linksSelected}" />
					</g:ToggleButton>
					<g:ToggleButton ui:field="filtersButton" width="32px"
						styleName="{style.button}" visible="false">
						<g:upFace image="{resources.filterDisabled}" />
						<g:downFace image="{resources.filter}" />
						<g:upHoveringFace image="{resources.filter}" />
					</g:ToggleButton>
					<g:ToggleButton ui:field="markersButton" width="32px"
						styleName="{style.button}" title="Code Markers">
						<g:downDisabledFace image="{resources.markersDisabled}" />
						<g:upDisabledFace image="{resources.markersDisabled}" />
						<g:upFace image="{resources.markersUnselected}" />
						<g:downFace image="{resources.markersSelected}" />
						<g:upHoveringFace image="{resources.markersSelected}" />
					</g:ToggleButton>
				</g:HorizontalPanel>
			</g:FlowPanel>
		</g:north>
		<g:center>
			<g:DeckLayoutPanel ui:field="tools" styleName="{style.tools}">
				<v:EmptyPanel ui:field="emptyPanel" />
				<v:AttributesPanel ui:field="attributesPanel" />
				<v:FiltersPanel ui:field="filtersPanel" />
				<v:LinksPanel ui:field="linksPanel" />
				<v:MarkersPanel ui:field="markersPanel" />
			</g:DeckLayoutPanel>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder>
