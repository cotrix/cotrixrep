<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client">
	<ui:with field='resources'
		type='org.cotrix.web.manage.client.resources.CotrixManagerResources' />
	<ui:with field='common'
		type='org.cotrix.web.common.client.resources.CommonResources' />
	<ui:style>
	.table {
			width: 100%;
			height: 35px;
		}
	
		.left {
			width: 33%;
			text-align: left;
			vertical-align: middle;
		}
	
		.center {
			width: 33%;
			text-align: center;
			vertical-align: middle;
		}
	
		.right {
			width: 33%;
			text-align: right;
			vertical-align: middle;
		}
	
		.button {
			cursor: pointer;
			display: inline;
		}
	
		.leftButton {
			padding-left: 5px;
		}
		
		.rightButton {
			padding-right: 5px;
		}
	</ui:style>
	<g:HTMLPanel>
		<table class="{style.table}">
			<tr>
				<td class="{style.left}">
					<g:PushButton ui:field="lock" styleName="{style.button} {style.leftButton}" title="Disable Editing">
						<g:upFace image="{resources.lock}" />
						<g:upDisabledFace image="{resources.lockDisabled}" />
					</g:PushButton>
					<g:PushButton ui:field="unlock" styleName="{style.button} {style.leftButton}" title="Enable Editing">
						<g:upFace image="{resources.unlock}" />
						<g:upDisabledFace image="{resources.unlockDisabled}" />
					</g:PushButton>
					<g:PushButton ui:field="seal" styleName="{style.button} {style.leftButton}" title="Seal (No Further Changes)">
						<g:upFace image="{resources.seal}" />
						<g:upDisabledFace image="{resources.sealDisabled}" />
					</g:PushButton>
				</td>
				<td class="{style.center}">
					</td>
				<td class="{style.right}">
					<g:PushButton ui:field="codesButton" styleName="{style.button} {style.rightButton}" title="Codelist metadata">
						<g:upFace image="{resources.codes}" />
					</g:PushButton>
				</td>
			</tr>
		</table>
	</g:HTMLPanel>
</ui:UiBinder> 