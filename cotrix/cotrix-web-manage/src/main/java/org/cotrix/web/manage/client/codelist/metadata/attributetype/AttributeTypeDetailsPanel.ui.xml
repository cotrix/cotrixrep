<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:l="urn:import:org.cotrix.web.manage.client.codelist.metadata.linktype"
	xmlns:c="urn:import:org.cotrix.web.common.client.widgets" 
	xmlns:t="urn:import:org.cotrix.web.common.client.widgets.table">
	<ui:with field='resources'
		type='org.cotrix.web.manage.client.resources.CotrixManagerResources' />
	<ui:with field='commonresources'
		type='org.cotrix.web.common.client.resources.CommonResources' />
	<ui:style
		type="org.cotrix.web.manage.client.codelist.metadata.attributetype.AttributeTypeDetailsPanel.Style">
		.propertiesGrid {
			width: 100%;
			border-collapse: collapse;
		}
		
		.editor {
			height: 31px;
			-moz-box-sizing: border-box;
		}
		
		.error {
			border: 1px solid red !important;
		}
		
		.loaderContainer {
			vertical-align: middle;
			padding: 1px 3px 3px 3px;
		}
		
		.loader {
			margin: 0 auto;
			display: inherit;
		}
		
		.textBox {
	border: none;
	border-color: transparent;
	transition: border-color 700ms ease;
	/*padding: 5px;*/
	/*border-radius: 5px;
	background-color: #fafafa;
	box-shadow: 0px 0px 0px 0px;
	border: 1px solid #999999;*/
	color: #4f4e4e;
	padding-left: 6px;
	
	/*height: 16px;*/
	/*font-size: 16px;*/
	
	/*-webkit-animation: borderAnimation 700ms;*/ /* Chrome, Safari, Opera */
	/*animation: borderAnimation 700ms;*/
}

.textBox:focus {
	outline: none;
	border-radius: 5px;
	box-shadow: 0px 0px 5px #61C5FA;
	border: 1px solid #5AB0DB;
	padding-left: 5px;
}

.textBox:hover {
	border: 1px solid #999;
	border-radius: 5px;
	padding-left: 5px;
}

.textBox:focus:hover {
	outline: none;
	box-shadow: 0px 0px 5px #61C5FA;
	border: 1px solid #5AB0DB;
	border-radius: 5px;
	padding-left: 5px;
}

.textBox:disabled {
	background-color: #ededed;
	border-color: #b7b6b6;
	color: #acabab;
}

@keyframes borderAnimation {
    from {
        border-radius: 5px;
	    background-color: #fafafa;
	    box-shadow: 0px 0px 0px 0px;
	    border: 1px solid #999999;
    }
    to {
         border-radius: 5px;
	    background-color: #fafafa;
	    box-shadow: 0px 0px 0px 0px;
	    border: 1px solid transparent;
    }
}

/* Chrome, Safari, Opera */
@-webkit-keyframes borderAnimation {
    from {
        border-radius: 5px;
	    background-color: #fafafa;
	    box-shadow: 0px 0px 0px 0px;
	    border: 1px solid #999999;
    }
    to {
         border-radius: 5px;
	    background-color: #fafafa;
	    box-shadow: 0px 0px 0px 0px;
	    border: 1px solid transparent;
    }
}
		</ui:style>
	<t:Table ui:field="table" styleName="{style.propertiesGrid}">
		<t:row>
			<t:CellContainer firstCellStyle="{resources.propertyGrid.header}"
				secondCellStyle="{resources.propertyGrid.value} {style.loaderContainer}">
				<t:cell>
					<g:Label title="The name of this attribute.">Name</g:Label>
				</t:cell>
				<t:cell>
					<g:FlowPanel>
						<c:EditableLabel ui:field="nameBoxContainer"
							labelStyle="{resources.propertyGrid.textValue}" title="The name of this attribute.">
							<c:editor>
								<c:AdvancedTextBox ui:field="nameBox" styleName="{style.textBox} {resources.css.editor} {style.editor}" 
								placeholder="Type a name..."/>
							</c:editor>
						</c:EditableLabel>
						<g:Image resource="{commonresources.dataLoader}" visible="false"
							ui:field="nameBoxLoader" styleName="{style.loader}" />
					</g:FlowPanel>
				</t:cell>
			</t:CellContainer>
		</t:row>
		<t:row>
			<t:CellContainer firstCellStyle="{resources.propertyGrid.header}"
				secondCellStyle="{resources.propertyGrid.value} {style.loaderContainer}">
				<t:cell>
					<g:Label title="The type of this attribute.">Type</g:Label>
				</t:cell>
				<t:cell>
					<g:FlowPanel>
						<c:EditableLabel ui:field="typeBoxContainer"
							labelStyle="{resources.propertyGrid.textValue}" title="The type of this attribute.">
							<c:editor>
								<g:TextBox ui:field="typeBox"
									styleName="{style.textBox} {resources.css.editor} {style.editor}" />
							</c:editor>
						</c:EditableLabel>
						<g:Image resource="{commonresources.dataLoader}" visible="false"
							ui:field="typeBoxLoader" styleName="{style.loader}" />
					</g:FlowPanel>
				</t:cell>
			</t:CellContainer>
		</t:row>
		<t:row>
			<t:CellContainer firstCellStyle="{resources.propertyGrid.header}"
				secondCellStyle="{resources.propertyGrid.value} {style.loaderContainer}">
				<t:cell>
					<g:Label title="The language of this attribute.">Language</g:Label>
				</t:cell>
				<t:cell>
					<g:FlowPanel>
						<c:EditableLabel ui:field="languageBoxContainer"
							labelStyle="{resources.propertyGrid.textValue}" 
							title="The language of this attribute.">
							<c:editor>
								<c:LanguageListBox ui:field="languageBox" styleName="{commonresources.css.listBox}" width="100%"/>
							</c:editor>
						</c:EditableLabel>
						<g:Image resource="{commonresources.dataLoader}" visible="false"
							ui:field="languageBoxLoader" styleName="{style.loader}" />
					</g:FlowPanel>
				</t:cell>
			</t:CellContainer>
		</t:row>
			<t:row>
			<t:CellContainer firstCellStyle="{resources.propertyGrid.header}"
				secondCellStyle="{resources.propertyGrid.value} {style.loaderContainer}">
				<t:cell>
					<g:Label title="The default value of this attribute.">Default</g:Label>
				</t:cell>
				<t:cell>
					<g:FlowPanel>
						<c:EditableLabel ui:field="defaultBoxContainer"
							labelStyle="{resources.propertyGrid.textValue}" 
							title="The default value of this attribute.">
							<c:editor>
							<c:AdvancedTextBox ui:field="defaultBox" styleName="{style.textBox} {resources.css.editor} {style.editor}" 
							placeholder="&lt;none&gt;"/>
								</c:editor>
						</c:EditableLabel>
					</g:FlowPanel>
				</t:cell>
			</t:CellContainer>
		</t:row>
		<t:row>
			<t:CellContainer firstCellStyle="{resources.propertyGrid.header}"
				secondCellStyle="{resources.propertyGrid.value} {style.loaderContainer}">
				<t:cell>
					<g:Label title="The number of times this attribute can occur within each code.">Occurs</g:Label>
				</t:cell>
				<t:cell>
					<g:FlowPanel>
						<c:EditableLabel ui:field="occurrencesBoxContainer"	labelStyle="{resources.propertyGrid.textValue}" 
						title="The number of times this attribute can occur within each code.">
							<c:editor>
							<c:EnumListBox ui:field="occurrencesBox" styleName="{commonresources.css.listBox}" width="100%"/>
							</c:editor>
						</c:EditableLabel>
					</g:FlowPanel>
				</t:cell>
			</t:CellContainer>
		</t:row>
		<t:row>
			<t:CellContainer firstCellStyle="{resources.propertyGrid.header}"
				secondCellStyle="{resources.propertyGrid.value} {style.loaderContainer}"
				ui:field="occurrencesMinRow">
				<t:cell>
					<g:Label>Min</g:Label>
				</t:cell>
				<t:cell>
					<g:FlowPanel>
						<c:EditableLabel ui:field="occurrencesMinBoxContainer" labelStyle="{resources.propertyGrid.textValue}">
							<c:editor>
								<c:AdvancedIntegerBox ui:field="occurrencesMin" placeholder="min" styleName="{commonresources.css.textBox} {resources.css.editor} {style.editor}"/>
							</c:editor>
						</c:EditableLabel>
					</g:FlowPanel>
				</t:cell>
			</t:CellContainer>
		</t:row>
		<t:row>
			<t:CellContainer firstCellStyle="{resources.propertyGrid.header}"
				secondCellStyle="{resources.propertyGrid.value} {style.loaderContainer}"
				ui:field="occurrencesMaxRow">
				<t:cell>
					<g:Label>Max</g:Label>
				</t:cell>
				<t:cell>
					<g:FlowPanel>
						<c:EditableLabel ui:field="occurrencesMaxBoxContainer"	labelStyle="{resources.propertyGrid.textValue}">
							<c:editor>
								<c:AdvancedIntegerBox ui:field="occurrencesMax" placeholder="max" styleName="{commonresources.css.textBox} {resources.css.editor} {style.editor}"/>
							</c:editor>
						</c:EditableLabel>
					</g:FlowPanel>
				</t:cell>
			</t:CellContainer>
		</t:row>
	</t:Table>
</ui:UiBinder> 