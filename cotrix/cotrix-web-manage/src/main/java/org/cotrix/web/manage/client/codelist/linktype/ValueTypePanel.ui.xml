<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:c="urn:import:org.cotrix.web.common.client.widgets">
	<ui:with field='resources'
		type='org.cotrix.web.manage.client.resources.CotrixManagerResources' />
	<ui:with field='commonresources'
		type='org.cotrix.web.common.client.resources.CommonResources' />
	<ui:style>
	
	.loader {
		vertical-align: middle;
		margin-left: 11px;
		margin-top: 10px;
	}
	</ui:style>
	<g:HTMLPanel height="31px">
		<c:EditableLabel ui:field="valueTypeListContainer"
			labelStyle="{resources.propertyGrid.textValue}">
			<c:editor>
				<g:ListBox multipleSelect="false" ui:field="valueTypeList"
					styleName="{commonresources.css.listBox}" />
			</c:editor>
		</c:EditableLabel>
		<g:Image ui:field="valueTypeListLoader" resource="{commonresources.dataLoader}" visible="false"
			 styleName="{style.loader}" />

	</g:HTMLPanel>
</ui:UiBinder> 