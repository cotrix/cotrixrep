<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:v="urn:import:org.cotrix.web.manage.client.codelist.codes.marker.panel"
	xmlns:c="urn:import:org.cotrix.web.common.client.widgets">
		<ui:style>
		.markersPanel {
			background-color: #FBFBFB;
		}
		.toolbar {
			background-color: #f1f1f1;
		}

		.header {
		overflow: visible;
		text-align: left;
		color: #464545;
		font-size: 16px;
		text-shadow: none;
		background-color: #EFEFEF;
		padding: 6px;
	}
	</ui:style>
	<g:DockLayoutPanel unit='PX'>
		<g:north size="30">
			<g:HTML ui:field="header" styleName="{style.header}">Markers</g:HTML>
		</g:north>
		<g:center>
			<g:ScrollPanel styleName="{style.markersPanel}">
				<v:MarkersEditingPanel ui:field='markersPanel' />
			</g:ScrollPanel>
		</g:center>
		<g:south size="28">
			<g:FlowPanel styleName="{style.toolbar}"/>
		</g:south>
	</g:DockLayoutPanel>
</ui:UiBinder>
