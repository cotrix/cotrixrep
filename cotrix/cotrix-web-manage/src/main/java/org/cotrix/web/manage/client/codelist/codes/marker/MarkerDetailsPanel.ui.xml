<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:org.cotrix.web.common.client.widgets">
	<ui:with field='resources'
		type='org.cotrix.web.manage.client.resources.CotrixManagerResources' />
	<ui:style>
	
		.valueCell {
		    overflow: hidden;
		    vertical-align: middle;
		    padding: 0px 3px 0px 3px;
		}
	
	</ui:style>
	<g:HTMLPanel>
		<table width="100%">
			<tr>
				<td width="31px" style="border-right: 1px solid #cecece">
				</td>
				<td class="{style.valueCell}">
					<c:AutoHeightTextArea ui:field="descriptionArea"  styleName="{resources.detailsPanelStyle.textarea}" width="100%" placeholder="Add comment?"/>
				</td>
			</tr>
		</table>

	</g:HTMLPanel>
</ui:UiBinder> 