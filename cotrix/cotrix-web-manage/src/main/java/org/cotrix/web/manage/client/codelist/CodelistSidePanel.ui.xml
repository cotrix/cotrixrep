<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:v="urn:import:org.cotrix.web.manage.client.codelist">
	<ui:with field='resources'
		type='org.cotrix.web.manage.client.resources.CotrixManagerResources' />
	<ui:with field='commonresources'
		type='org.cotrix.web.common.client.resources.CommonResources' />
	<ui:style>
	.leftButtonBarPanel {
		float: left;
		vertical-align: middle;
		width: 50%;
		height: 100%;
	}
	
	.rightButtonBarPanel {
		float: right;
		vertical-align: middle;
		background-color: #f1f1f1;
		width: 50%;
		height: 100%;
	}
	
	.codesButtonBar {
		vertical-align: middle;
		margin-left: 10px;
	}
		
	.codelistButtonBar {
		vertical-align: middle;
		margin-left: 10px;
		float: right;
	}
	
	.button {
		cursor: pointer;
		outline: none;
		vertical-align: middle;
	}
	
	.tools {
		
	}
	
	.mainPanel {
		border-top-left-radius: 2px;
		border-top-right-radius: 2px;
		border: 1px solid #bababa;
		background-color: #fff;
	}
	</ui:style>
	<g:DockLayoutPanel unit='PX' styleName="{style.mainPanel}">
		<g:north size='34'>
			<g:FlowPanel>
				<g:FlowPanel styleName="{style.leftButtonBarPanel}">
					<g:HorizontalPanel styleName="{style.codesButtonBar}"
						verticalAlignment="middle" height="100%">
						<g:ToggleButton ui:field="attributesButton" width="32px"
							styleName="{style.button}">
							<g:upFace image="{resources.attributesDisabled}" />
							<g:downFace image="{resources.attributes}" />
							<g:upHoveringFace image="{resources.attributes}" />
						</g:ToggleButton>
						<g:ToggleButton ui:field="linksButton" width="32px"
							styleName="{style.button}">
							<g:upFace image="{resources.linkDisabled}" />
							<g:downFace image="{resources.link}" />
							<g:upHoveringFace image="{resources.link}" />
						</g:ToggleButton>
					</g:HorizontalPanel>
				</g:FlowPanel>
				<g:FlowPanel styleName="{style.rightButtonBarPanel}">
					<g:HorizontalPanel styleName="{style.codelistButtonBar}"
						verticalAlignment="middle" height="100%">
						<g:ToggleButton ui:field="metadataButton" width="32px"
							styleName="{style.button}">
							<g:upFace image="{resources.metadataDisabled}" />
							<g:downFace image="{resources.metadata}" />
							<g:upHoveringFace image="{resources.metadata}" />
						</g:ToggleButton>
						<g:ToggleButton ui:field="filtersButton" width="32px"
							styleName="{style.button}" visible="false">
							<g:upFace image="{resources.filterDisabled}" />
							<g:downFace image="{resources.filter}" />
							<g:upHoveringFace image="{resources.filter}" />
						</g:ToggleButton>
						<g:ToggleButton ui:field="userButton" width="32px"
							styleName="{style.button}" visible="false">
							<g:upFace image="{commonresources.userPreferencesDisabled}" />
							<g:downFace image="{commonresources.userPreferences}" />
							<g:upHoveringFace image="{commonresources.userPreferences}" />
						</g:ToggleButton>
						<g:ToggleButton ui:field="linkTypesButton" width="32px"
							styleName="{style.button}">
							<g:upFace image="{resources.linkTypeDisabled}" />
							<g:downFace image="{resources.linkType}" />
							<g:upHoveringFace image="{resources.linkType}" />
						</g:ToggleButton>
					</g:HorizontalPanel>
				</g:FlowPanel>
			</g:FlowPanel>
		</g:north>
		<g:center>
			<g:DeckLayoutPanel ui:field="tools" styleName="{style.tools}">
				<v:CodelistAttributesPanel ui:field="attributesPanel" />
				<v:CodelistMetadataPanel ui:field="metadataPanel" />
				<v:FiltersPanel ui:field="filtersPanel" />
				<v:UserPreferencesPanel ui:field="userPanel" />
				<v:CodelistLinkTypesPanel ui:field="linkTypesPanel" />
				<v:CodelistLinksPanel ui:field="linksPanel" />
			</g:DeckLayoutPanel>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder>
