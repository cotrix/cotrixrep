<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:v="urn:import:org.cotrix.web.manage.client.codelist">
	<ui:with field='resources'
		type='org.cotrix.web.manage.client.resources.CotrixManagerResources' />
	<ui:with field='commonresources'
		type='org.cotrix.web.common.client.resources.CommonResources' />
	<ui:style type="org.cotrix.web.manage.client.codelist.CodelistSidePanel.Style">
	.leftButtonBarPanel {
		vertical-align: middle;
		width: 100%;
		height: 100%;
		cursor: pointer;
		background-color: #f1f1f1;
	}
	
	.buttonBarPanelSelected {
		background-color: white !important;
	}
	
	.separator {
		background-color: #bababa;
		height: 100%;
		width: 4px;
	}
	
	.rightButtonBarPanel {
		vertical-align: middle;
		background-color: #f1f1f1;
		width: 100%;
		height: 100%;
		cursor: pointer;
	}
	
	.codesButtonBar {
		vertical-align: middle;
		margin-left: 10px;
	}
	
	.codelistButtonBar {
		vertical-align: middle;
		margin-left: 10px;
		float: right;
	}
	
	.button {
		cursor: pointer;
		outline: none;
		vertical-align: middle;
	}
	
	.tools {
		
	}
	
	.mainPanel {
			border-top-left-radius: 2px;
		border-top-right-radius: 2px;
		background-color: #fff;
		border: 1px solid #bababa;
	}
	</ui:style>
	<g:DockLayoutPanel unit='PX' styleName="{style.mainPanel}">
		<g:north size='34'>
			<g:HTMLPanel>
				<table height="100%" width="100%">
					<tr>
						<td width="50%">
							<g:FocusPanel styleName="{style.leftButtonBarPanel}"
								ui:field="leftBar">
								<g:HorizontalPanel styleName="{style.codesButtonBar}"
									verticalAlignment="middle" height="100%">
									<g:ToggleButton ui:field="attributesButton"
										width="32px" styleName="{style.button}" title="Code Attributes">
										<g:downDisabledFace image="{resources.attributesDisabled}"/>
										<g:upDisabledFace image="{resources.attributesDisabled}"/>
										<g:upFace image="{resources.attributesUnselected}" />
										<g:downFace image="{resources.attributesSelected}" />
										<g:upHoveringFace image="{resources.attributesSelected}" />
									</g:ToggleButton>
									<g:ToggleButton ui:field="linksButton" width="32px"
										styleName="{style.button}" title="Code Links">
										<g:downDisabledFace image="{resources.linksDisabled}"/>
										<g:upDisabledFace image="{resources.linksDisabled}"/>
										<g:upFace image="{resources.linksUnselected}" />
										<g:downFace image="{resources.linksSelected}" />
										<g:upHoveringFace image="{resources.linksSelected}" />
									</g:ToggleButton>
								</g:HorizontalPanel>
							</g:FocusPanel>
						</td>
						<td width="20px" height="100%">
							<g:FlowPanel styleName="{style.separator}" />
						</td>
						<td width="50%">
							<g:FocusPanel styleName="{style.rightButtonBarPanel}"
								ui:field="rightBar">
								<g:HorizontalPanel styleName="{style.codelistButtonBar}"
									verticalAlignment="middle" height="100%">
									<g:ToggleButton ui:field="metadataButton" width="32px"
										styleName="{style.button}" title="Codelist Attributes">
										<g:downDisabledFace image="{resources.attributesDisabled}"/>
										<g:upDisabledFace image="{resources.attributesDisabled}"/>
										<g:upFace image="{resources.attributesUnselected}" />
										<g:downFace image="{resources.attributesSelected}" />
										<g:upHoveringFace image="{resources.attributesSelected}" />
									</g:ToggleButton>
									<g:ToggleButton ui:field="filtersButton" width="32px"
										styleName="{style.button}" visible="false">
										<g:upFace image="{resources.filterDisabled}" />
										<g:downFace image="{resources.filter}" />
										<g:upHoveringFace image="{resources.filter}" />
									</g:ToggleButton>
									<g:ToggleButton ui:field="userButton" width="32px"
										styleName="{style.button}" visible="false">
										<g:upFace image="{commonresources.userPreferencesDisabled}" />
										<g:downFace image="{commonresources.userPreferences}" />
										<g:upHoveringFace image="{commonresources.userPreferences}" />
									</g:ToggleButton>
									<g:ToggleButton ui:field="linkTypesButton"
										width="32px" styleName="{style.button}" title="Codelist Links">
										<g:downDisabledFace image="{resources.linksDisabled}"/>
										<g:upDisabledFace image="{resources.linksDisabled}"/>
										<g:upFace image="{resources.linksUnselected}" />
										<g:downFace image="{resources.linksSelected}" />
										<g:upHoveringFace image="{resources.linksSelected}" />
									</g:ToggleButton>
								</g:HorizontalPanel>
							</g:FocusPanel>
						</td>
					</tr>
				</table>
			</g:HTMLPanel>
		</g:north>
		<g:center>
			<g:DeckLayoutPanel ui:field="tools" styleName="{style.tools}">
				<v:CodelistAttributesPanel ui:field="attributesPanel" />
				<v:CodelistMetadataPanel ui:field="metadataPanel" />
				<v:FiltersPanel ui:field="filtersPanel" />
				<v:UserPreferencesPanel ui:field="userPanel" />
				<v:CodelistLinkTypesPanel ui:field="linkTypesPanel" />
				<v:CodelistLinksPanel ui:field="linksPanel" />
			</g:DeckLayoutPanel>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder>
