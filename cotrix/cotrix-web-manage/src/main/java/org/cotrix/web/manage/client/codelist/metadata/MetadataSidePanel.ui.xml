<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:v="urn:import:org.cotrix.web.manage.client.codelist.metadata">
	<ui:with field='resources'
		type='org.cotrix.web.manage.client.resources.CotrixManagerResources' />
	<ui:with field='commonresources'
		type='org.cotrix.web.common.client.resources.CommonResources' />
	<ui:style>
		.leftButtonBarPanel {
			vertical-align: middle;
			width: 100%;
			height: 100%;
			cursor: pointer;
			background-color: white;
		}
		
		.codelistButtonBar {
			vertical-align: middle;
			margin-left: 10px;
			float: left;
		}
		
		.button {
			cursor: pointer;
			outline: none;
			vertical-align: middle;
		}
		
		.tools {
			
		}
		
		.mainPanel {
			border-top-left-radius: 2px;
			border-top-right-radius: 2px;
			background-color: #fff;
			border: 1px solid #bababa;
		}
		</ui:style>
	<g:DockLayoutPanel unit='PX' styleName="{style.mainPanel}">
		<g:north size='34'>
			<g:FlowPanel styleName="{style.leftButtonBarPanel}">
				<g:HorizontalPanel styleName="{style.codelistButtonBar}"
					verticalAlignment="middle" height="100%">
					<g:ToggleButton ui:field="metadataButton" width="32px"
						styleName="{style.button}" title="Codelist Attributes">
						<g:downDisabledFace image="{resources.attributesDisabled}" />
						<g:upDisabledFace image="{resources.attributesDisabled}" />
						<g:upFace image="{resources.attributesUnselected}" />
						<g:downFace image="{resources.attributesSelected}" />
						<g:upHoveringFace image="{resources.attributesSelected}" />
					</g:ToggleButton>
					<g:ToggleButton ui:field="userButton" width="32px"
						styleName="{style.button}" visible="false">
						<g:upFace image="{commonresources.userPreferencesDisabled}" />
						<g:downFace image="{commonresources.userPreferences}" />
						<g:upHoveringFace image="{commonresources.userPreferences}" />
					</g:ToggleButton>
					<g:ToggleButton ui:field="logbookButton" width="32px"
						styleName="{style.button}" title="Codelist Logbook">
						<g:downDisabledFace image="{resources.logbookDisabled}" />
						<g:upDisabledFace image="{resources.logbookDisabled}" />
						<g:upFace image="{resources.logbookUnselected}" />
						<g:downFace image="{resources.logbookSelected}" />
						<g:upHoveringFace image="{resources.logbookSelected}" />
					</g:ToggleButton>
				</g:HorizontalPanel>
			</g:FlowPanel>
		</g:north>
		<g:center>
			<g:DeckLayoutPanel ui:field="tools" styleName="{style.tools}">
				<v:AttributesPanel ui:field="attributesPanel" />
				<v:UserPreferencesPanel ui:field="userPanel" />
				<v:LogbookPanel ui:field="logbookPanel" />
			</g:DeckLayoutPanel>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder>
