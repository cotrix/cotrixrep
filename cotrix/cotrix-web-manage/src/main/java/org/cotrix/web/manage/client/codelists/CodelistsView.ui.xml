<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:cotrix="urn:import:org.cotrix.web.manage.client.codelists"
	xmlns:common="urn:import:org.cotrix.web.common.client.widgets">
	<ui:with field='resources'
		type='org.cotrix.web.manage.client.resources.CotrixManagerResources' />
	<ui:style>
	.mainPanel {
		background-color: #efefef;
	}
	
	.filterPanel {
		border-top-left-radius: 2px;
		border-top-right-radius: 2px;
		border-top: 1px solid #a8a7a7;
		border-left: 1px solid #a8a7a7;
		border-right: 1px solid #a8a7a7;
		background-color: white;
		padding: 5px 0 5px 5px;
	}
	
	.filterBox {
		height: 24px !important;
		font-size: 16px !important;
		-moz-box-sizing: border-box;
		border: none !important;
		box-shadow: none !important;
	}
	
	.filterBox:focus {
		background-color: #f7f7f7;
	}
	
	.menuCell {
		width: 14px;
		vertical-align: middle;
		text-align: center;
	}
	
	.iconCell {
		width: 22px;
		vertical-align: middle;
	}
	
	.titleCell {
		vertical-align: middle;
	}
	
	@external menuButton;
	.menuButton {
		width: 14px;
		cursor: pointer;
		text-align: center;
		margin-left: 2px;
    	margin-right: 2px;
	}
	
	@external menuButton-down;
	.menuButton-down {
		background-color: #f5f5f5;
		border-radius: 5px;
	}
	
	@external menuButton-down-hovering;
	.menuButton-down-hovering {
		background-color: #f5f5f5;
		border-radius: 5px;
	}
	
	.scrollListPanel {
		background-color: white;
		border-left: 1px solid #a8a7a7;
		border-right: 1px solid #a8a7a7;
		color: #9b9b9b;
	}
	
	.toolbarPanel {
		background-color: white;
		border-top: 1px solid #eeeeee;
		border-bottom: 1px solid #a8a7a7;
		border-left: 1px solid #a8a7a7;
		border-right: 1px solid #a8a7a7;
	}
	
	.headerPanel {
		overflow: visible;
		text-align: left;
		color: #464545;
		font-size: 16px;
		text-shadow: none;
		background-color: #e9e9e9;
		padding: 6px;
		/*border-bottom: 1px solid #a8a7a7;
		border-top: 1px solid #a8a7a7;*/
		border-left: 1px solid #a8a7a7;
		border-right: 1px solid #a8a7a7;
	}
	</ui:style>
	<g:DockLayoutPanel unit='PX' styleName="{style.mainPanel}">
		<g:north size='30'>
			<g:SimpleLayoutPanel />
		</g:north>
		<g:north size='35'>
			<g:HTMLPanel styleName="{style.filterPanel}">
				<table width="100%">
					<tr>
						<td>
							<common:SearchBox ui:field="filterTextBox"
								addStyleNames="{style.filterBox}" title="Filter codelists."/>
						</td>
						<td class="{style.menuCell}">
							<g:ToggleButton ui:field="menuButton" styleName="{style.menuButton}" title="Filter options.">
									<g:upFace image="{resources.showMenu}" />
							</g:ToggleButton>
						</td>
					</tr>
				</table>
			</g:HTMLPanel>
		</g:north>
		<g:north size='30'>
			<g:HTMLPanel styleName="{style.headerPanel}">
				<table width="100%">
					<tr>
						<td class="{style.iconCell}">
							<g:Image resource="{resources.codes}" />
						</td>
						<td class="{style.titleCell}">
							Codelists
						</td>
					</tr>
				</table>
			</g:HTMLPanel>
		</g:north>
		<g:center>
			<g:ScrollPanel styleName="{style.scrollListPanel}">
				<c:CustomCellTree ui:field="codelists" />
			</g:ScrollPanel>
		</g:center>
		<g:south size="28">
			<cotrix:CodelistsToolbar ui:field="toolbar"
				styleName="{style.toolbarPanel}" />
		</g:south>
	</g:DockLayoutPanel>
</ui:UiBinder>