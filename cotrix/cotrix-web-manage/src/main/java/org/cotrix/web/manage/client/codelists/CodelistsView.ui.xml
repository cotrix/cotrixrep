<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:cotrix="urn:import:org.cotrix.web.manage.client.codelists"
	xmlns:common="urn:import:org.cotrix.web.common.client.widgets">
	<ui:with field='resources'
		type='org.cotrix.web.common.client.resources.CommonResources' />
	<ui:style>
		.mainPanel {
			background-color: #efefef;
		}
		
		.filterPanel {
			border-top-left-radius: 2px;
			border-top-right-radius: 2px;
			border-top: 1px solid #a8a7a7;
			border-left: 1px solid #a8a7a7;
			border-right: 1px solid #a8a7a7;
			background-color: white;
			padding: 5px;
		}
		
		.filterBox {
			height: 24px !important;
			font-size: 16px !important;
		}
		
		.scrollListPanel {
			background-color: white;
			border-left: 1px solid #a8a7a7;
			border-right: 1px solid #a8a7a7;
			color: #9b9b9b;
		}
		
		.toolbarPanel {
			background-color: #efefef;
			border-bottom: 1px solid #a8a7a7;
			border-left: 1px solid #a8a7a7;
			border-right: 1px solid #a8a7a7;
		}
		
		.headerPanel {
			overflow: visible;
			text-align: left;
			color: #464545;
			font-size: 16px;
			text-shadow: none;
			background-color: #e9e9e9;
			padding: 6px;
			border-bottom: 1px solid #a8a7a7;
			border-top: 1px solid #a8a7a7;
			border-left: 1px solid #a8a7a7;
			border-right: 1px solid #a8a7a7;
		}
	</ui:style>
	<g:DockLayoutPanel unit='PX' styleName="{style.mainPanel}">
		<g:north size='30'>
			<g:SimpleLayoutPanel />
		</g:north>
		<g:north size='35'>
			<g:FlowPanel ui:field="filterPanel" styleName="{style.filterPanel}">
				<common:SearchBox ui:field="filterTextBox" addStyleNames="{style.filterBox}"/>
			</g:FlowPanel>
		</g:north>
		<g:north size='30'>
			<g:HTMLPanel styleName="{style.headerPanel}">
				Codelists
			</g:HTMLPanel>
		</g:north>
		<g:center>
			<g:ScrollPanel styleName="{style.scrollListPanel}">
				<c:CustomCellTree ui:field="codelists" />
			</g:ScrollPanel>
		</g:center>
		<g:south size="28">
			<cotrix:CodelistsToolbar ui:field="toolbar"
				styleName="{style.toolbarPanel}" />
		</g:south>
	</g:DockLayoutPanel>
</ui:UiBinder>