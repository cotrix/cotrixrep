<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:v="urn:import:org.cotrix.web.manage.client.codelist.metadata">
	<ui:with type="org.cotrix.web.common.client.resources.CommonResources"
		field="common" />
	<ui:with
		type="org.cotrix.web.manage.client.resources.CotrixManagerResources"
		field="resources" />
	<ui:style>
			.profilePanel {
				margin: 23px;
			}
			
			.table {
				margin: 23px;
			}
			
			.icon {
				text-align: right;
				padding-right: 20px;
			}
			
			.valueCell {
				padding-left: 50px;
				vertical-align: middle;
			}
			
			.row {
				height: 35px;
				vertical-align: middle;
			}
			
			.name {
				font-size: 37px !important;
				height: 42px !important;
				color: #5674b9;
			}
			
			
			.password {
				width: 170px;
			}
			
			.version {
				font-size: 24px;
				color: grey;
				text-align: left;
			}
			
			.versionNumber {
				font-size: 24px;
				color: orange;
				text-align: left;
			}
			
			.state {
				padding-top: 9px;
				font-size: 20px;
				color: #5674b9;
			}
			
			.spacer {
				background-color: #efefef;
			}

		</ui:style>
	<g:DockLayoutPanel width="100%" height="100%" >
		<g:north size='30'>
			<g:SimpleLayoutPanel styleName="{style.spacer}" />
		</g:north>
		<g:center>
			<g:HTMLPanel styleName="{style.profilePanel}">
				<table width="100%">
					<tr>
						<td style="text-align:right;vertical-align:top;">
							<table style="width: 200px;">
								<tr>
									<td class="{style.icon}">
										<g:Image resource="{resources.splash}" />
									</td>
								</tr>
							</table>
						</td>
						<td style="vertical-align:top;width:100%;">
							<table style="width: 100%;">
								<tr>
									<td>
										<g:Label ui:field="name" styleName="{style.name}"/>
									</td>
								</tr>
								<tr>
									<td>
										<span class="{style.version}">version </span>
										<g:InlineLabel ui:field="version" styleName="{style.versionNumber}" />
									</td>
								</tr>
								<tr>
									<td class="{style.state}">
										<g:Label ui:field="state"/>
									</td>
								</tr>
							</table>
						</td>
					</tr>
				</table>
			</g:HTMLPanel>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder> 