<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:c="urn:import:org.cotrix.web.common.client.widgets">
	<ui:with field='resources'
		type='org.cotrix.web.manage.client.resources.CotrixManagerResources' />
	<ui:with field='commonresources'
		type='org.cotrix.web.common.client.resources.CommonResources' />
	<ui:style>
	.propertiesGrid {
		width: 100%;
		border-collapse: collapse;
	}
	
	.editor {
		height: 31px;
	}
	
	.error {
		border: 1px solid red;
	}
	
	.loader {
		margin: 0 auto;
		display: inherit;
	}
	</ui:style>
	<g:HTMLPanel styleName="{commonresources.css.dialogBox}"
		width="300px" height="230px">
		<div class="{commonresources.css.dialogTitle}" id="signup.title">
			Edit Attribute
		</div>
		<div style="padding-top: 13px;">
			<table class="{style.propertiesGrid}">
				<tr>
					<td class="{resources.detailsPanelStyle.headerCell}">
						<div>Name</div>
					</td>
					<td class="{resources.detailsPanelStyle.valueCell}">
						<c:AdvancedTextBox ui:field="nameBox"
							styleName="{resources.detailsPanelStyle.textbox}" placeholder="name" />
					</td>
				</tr>
				<tr>
					<td class="{resources.detailsPanelStyle.headerCell}">
						<div>Type</div>
					</td>
					<td class="{resources.detailsPanelStyle.valueCell}">
						<g:FlowPanel>
							<c:AdvancedTextBox ui:field="typeBox"
								styleName="{resources.detailsPanelStyle.textbox}" placeholder="type" />
						</g:FlowPanel>
					</td>
				</tr>
				<tr>
					<td class="{resources.detailsPanelStyle.headerCell}">
						<div>Language</div>
					</td>
					<td class="{resources.detailsPanelStyle.valueCell}">
						<c:LanguageListBox  ui:field="languageBox" styleName="{resources.detailsPanelStyle.listbox}" width="100%"/>
					</td>
				</tr>
				<tr>
					<td class="{resources.detailsPanelStyle.headerCell}">
						<div>Value</div>
					</td>
					<td class="{resources.detailsPanelStyle.valueCell}">
						<c:AdvancedTextBox ui:field="valueBox"
							styleName="{resources.detailsPanelStyle.textbox}" placeholder="value" />
					</td>
				</tr>
			</table>
		</div>
		<div class="{commonresources.css.dialogTextfield}">
			<table width="100%">
				<tr>
					<td width="50%" style="text-align:center">
						<g:Button ui:field="save" styleName="{commonresources.css.blueButton}">Save</g:Button>
					</td>
					<td width="50%" style="text-align:center">
						<g:Button ui:field="cancel" styleName="{commonresources.css.grayButton}">Cancel</g:Button>
					</td>
				</tr>
			</table>
		</div>
	</g:HTMLPanel>

</ui:UiBinder>