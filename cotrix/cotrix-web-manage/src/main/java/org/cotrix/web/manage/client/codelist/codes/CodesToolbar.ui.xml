<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:m="urn:import:org.cotrix.web.manage.client.codelist.codes.marker">
	<ui:with field='resources'
		type='org.cotrix.web.manage.client.resources.CotrixManagerResources' />
	<ui:with field='common'
		type='org.cotrix.web.common.client.resources.CommonResources' />
	<ui:style>
		.mainPanel {
	    	padding-left: 10px;
    		padding-right: 10px;
		}
	
		.table {
			width: 100%;
			height: 35px;
		}
	
		.left {
			width: 33%;
			text-align: left;
			vertical-align: middle;
		}
	
		.center {
			width: 33%;
			text-align: center;
			vertical-align: middle;
		}
	
		.right {
			width: 33%;
			text-align: right;
			vertical-align: middle;
		}
	
		.button {
			cursor: pointer;
		}
	
		.leftButton {
			padding-left: 5px;
			float: left;
		}
				
		.markersButton {
			margin-left: 10px;
		}
		
		.rightButton {
			padding-right: 5px;
			float: right;
		}
	
		.state {
			color: lightgray;
			font-size: 25px;
		}
	</ui:style>
	<g:HTMLPanel styleName="{style.mainPanel}">
		<table class="{style.table}">
			<tr>
				<td class="{style.left}">
					<g:PushButton ui:field="allColumns" styleName="{style.button} {style.leftButton}" title="Show All">
						<g:upFace image="{resources.allColumns}" />
					</g:PushButton>
					<g:PushButton ui:field="allNormals" styleName="{style.button} {style.leftButton}" title="Hide All">
						<g:upFace image="{resources.allNormals}" />
					</g:PushButton>
					<g:ToggleButton ui:field="markersMenuButton" styleName="{style.leftButton} {style.button} {style.markersButton}" title="Markers">
						<g:upFace image="{resources.marker}" />
						<g:downFace image="{resources.markerDown}" />
					</g:ToggleButton>
				</td>
				<td class="{style.center}">
					<div>
						<g:InlineLabel ui:field="state" styleName="{style.state}">draft</g:InlineLabel>
						<g:Image ui:field="stateLoader" resource="{common.dataLoader}" visible="false" />
					</div>
				</td>
				<td class="{style.right}">
					<g:PushButton ui:field="metadataButton" styleName="{style.button} {style.rightButton}" title="Codelist metadata">
						<g:upFace image="{resources.metadata}" />
					</g:PushButton>
				</td>
			</tr>
		</table>
	</g:HTMLPanel>
</ui:UiBinder> 