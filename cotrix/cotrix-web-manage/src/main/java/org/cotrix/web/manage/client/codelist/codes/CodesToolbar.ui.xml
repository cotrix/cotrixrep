<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client">
	<ui:with field='resources'
		type='org.cotrix.web.manage.client.resources.CotrixManagerResources' />
	<ui:with field='common'
		type='org.cotrix.web.common.client.resources.CommonResources' />
	<ui:style>
	.headerPanel {
		
	}
	
	.leftWrapper {
		float: left;
		margin-left: 4px;
	}
	
	.rightWrapper {
		float: right;
		margin-right: 5px;
	}
	
	.button {
		padding: 5px;
		cursor: pointer;
	}
	
	.lock {
		outline: none;
		padding: 5px;
		display: inline;
		cursor: pointer;
	}
	
	.lock>img {
		vertical-align: middle;
	}
	
	.seal {
		padding-left: 5px;
	}
	
	.statusWrapper {
		vertical-align: middle;
		padding: 5px;
	}
	
	.state {
		color: lightgray;
		font-size: 25px;
		height: 100%;
		padding-left: 5px;
	}
	
	.stateLoaderWrapper {
		height: 25px;
		vertical-align: middle;
		display: inline-block;
	}
	
	.stateLoader {
		margin: 8px;
	}
	</ui:style>
	<g:FlowPanel ui:field="headerPanel" styleName="{style.headerPanel}">
		<g:HorizontalPanel styleName="{style.leftWrapper}"
			verticalAlignment="middle" height="100%" spacing="5">
			<g:PushButton ui:field="allColumns" styleName="{style.button}"
				title="Show All">
				<g:upFace image="{resources.allColumns}" />
			</g:PushButton>
			<g:PushButton ui:field="allNormals" styleName="{style.button}"
				title="Hide All">
				<g:upFace image="{resources.allNormals}" />
			</g:PushButton>
		</g:HorizontalPanel>
		


		<g:HorizontalPanel styleName="{style.rightWrapper}"
			verticalAlignment="middle" height="100%">
			<g:HorizontalPanel verticalAlignment="middle"
				height="100%" spacing="5" styleName="{style.rightWrapper}">
			<g:FlowPanel styleName="{style.statusWrapper}">
				<g:InlineLabel ui:field="state" styleName="{style.state}">draft</g:InlineLabel>
				<g:FlowPanel styleName="{style.stateLoaderWrapper}">
					<g:Image ui:field="stateLoader" resource="{common.dataLoader}"
						styleName="{style.stateLoader}" visible="false" />
				</g:FlowPanel>
			</g:FlowPanel>
			<g:PushButton ui:field="metadataButton" styleName="{style.button}" title="Codelist metadata">
				<g:upFace image="{resources.metadata}" />
			</g:PushButton>
			</g:HorizontalPanel>
		</g:HorizontalPanel>
	</g:FlowPanel>
</ui:UiBinder> 