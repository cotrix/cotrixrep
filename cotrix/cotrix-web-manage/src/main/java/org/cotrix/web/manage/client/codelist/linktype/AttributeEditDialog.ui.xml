<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<ui:with field='resources'
		type='org.cotrix.web.manage.client.resources.CotrixManagerResources' />
	<ui:with field='commonresources'
		type='org.cotrix.web.common.client.resources.CommonResources' />
	<ui:style>
	.propertiesGrid {
		width: 100%;
		border-collapse: collapse;
	}
	
	.editor {
		height: 31px;
	}
	
	.error {
		border: 1px solid red;
	}
	
	.loader {
		margin: 0 auto;
		display: inherit;
	}
	</ui:style>
	<g:HTMLPanel styleName="{commonresources.css.dialogBox}"
		width="300px" height="360px">
		<div class="{commonresources.css.dialogTitle}" id="signup.title">
			Edit
		</div>
		<div class="{commonresources.css.dialogSubtitle}">
			Edit the attribute
		</div>
		<div>
			<table class="{style.propertiesGrid} {resources.propertyGrid.table}">
				<tr>
					<td class="{resources.propertyGrid.header}">
						<div>Name</div>
					</td>
					<td class="{resources.propertyGrid.value}">
						<g:TextBox ui:field="nameBox"
							styleName="{commonresources.css.textBox} {resources.css.editor} {style.editor}" />
					</td>
				</tr>
				<tr>
					<td class="{resources.propertyGrid.header}">
						<div>Type</div>
					</td>
					<td class="{resources.propertyGrid.value}">
						<g:FlowPanel>
							<g:TextBox ui:field="typeBox"
								styleName="{commonresources.css.textBox} {resources.css.editor} {style.editor}" />
						</g:FlowPanel>
					</td>
				</tr>
				<tr>
					<td class="{resources.propertyGrid.header}">
						<div>Language</div>
					</td>
					<td class="{resources.propertyGrid.value}">
						<g:TextBox ui:field="languageBox"
							styleName="{commonresources.css.textBox} {resources.css.editor} {style.editor}" />
					</td>
				</tr>
				<tr>
					<td class="{resources.propertyGrid.header}">
						<div>Value</div>
					</td>
					<td class="{resources.propertyGrid.value}">
						<g:TextBox ui:field="valueBox"
							styleName="{commonresources.css.textBox} {resources.css.editor} {style.editor}" />
					</td>
				</tr>
			</table>
		</div>
		<div class="{commonresources.css.dialogTextfield}">
			<g:Button ui:field="save" styleName="{commonresources.css.dialogSubmit}">Save</g:Button>
			<g:Button ui:field="cancel" styleName="{commonresources.css.dialogSubmit}">Cancel</g:Button>
		</div>
	</g:HTMLPanel>

</ui:UiBinder>