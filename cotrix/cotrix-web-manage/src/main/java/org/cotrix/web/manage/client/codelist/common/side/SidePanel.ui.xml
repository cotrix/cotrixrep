<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:s="urn:import:org.cotrix.web.manage.client.codelist.common.side">
	<ui:style type="org.cotrix.web.manage.client.codelist.common.side.SidePanel.Style">
		.mainPanel {
			border-top-left-radius: 2px;
			border-top-right-radius: 2px;
			background-color: #fff;
			border: 1px solid #bababa;
		}
		
		.buttonBarContainer {
			vertical-align: middle;
			background-color: white;
			width: 100%;
			height: 100%;

		}
		
		.buttonBar {
			vertical-align: middle;
			margin-left: 10px;
			height: 100%;
		}
		
		.button {
			width: 32px;
			cursor: pointer;
			outline: none;
			vertical-align: middle;
		}
		
		.tools {
			
		}

		</ui:style>
	<g:DockLayoutPanel unit='PX' styleName="{style.mainPanel}">
		<g:north size='34'>
			<g:FlowPanel styleName="{style.buttonBarContainer}">
				<g:HorizontalPanel ui:field="buttonBar" styleName="{style.buttonBar}" verticalAlignment="middle" />
			</g:FlowPanel>
		</g:north>
		<g:center>
			<g:DeckLayoutPanel ui:field="panels" styleName="{style.tools}" >
			<s:EmptyPanel ui:field="emptyPanel" />
			</g:DeckLayoutPanel>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder>
