<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<ui:with type="org.cotrix.web.share.client.resources.Resources"
		field="resources" />
	<ui:style>
		.labelPanel {
			border-radius: 5px;
			background-color: #4e4e4e;
			width: 300px;
			color: #eee;
			padding: 15px;
			text-align: center;
			font-size: 17px;
			height: 70px;
		}
		
		.arrow {
			position:relative;
			left:200px;
		}
		
	</ui:style>
	<g:HTMLPanel>
			<g:HTML ui:field="label" styleName="{style.labelPanel}"/>
			<g:Image ui:field="arrow" resource="{resources.popupArrow}" styleName="{style.arrow}"/>
	</g:HTMLPanel>

</ui:UiBinder>