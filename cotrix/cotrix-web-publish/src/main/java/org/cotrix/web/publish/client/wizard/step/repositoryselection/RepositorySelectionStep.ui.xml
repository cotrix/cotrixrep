<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client">
	<ui:with type="org.cotrix.web.share.client.resources.CommonResources"
		field="common" />
	<ui:style>
		.mainPanel {
			width: 100%;
		}
		
		.refreshButton {
			margin-left: 7px;
			outline: none;
		}
		
		.pagerPanel {
			margin: 0 auto;
		}
	</ui:style>

	<g:DockLayoutPanel unit='PX' ui:field="reportPanel"
		styleName="{style.mainPanel}">

		<g:center>
			<c:PatchedDataGrid ui:field='dataGrid' />
		</g:center>
		<g:south size="40">
			<g:HTMLPanel>
				<c:SimplePager ui:field='pager' styleName="{style.pagerPanel}" />
			</g:HTMLPanel>
		</g:south>
	</g:DockLayoutPanel>
</ui:UiBinder> 