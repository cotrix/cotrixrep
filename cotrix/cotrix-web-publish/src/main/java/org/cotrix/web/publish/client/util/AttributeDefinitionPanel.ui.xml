<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with type="org.cotrix.web.common.client.resources.CommonResources"
		field="common" />
	<ui:style
		type="org.cotrix.web.publish.client.util.AttributeDefinitionPanel.Style">
			
			.listBoxError {
				float: left;
				border: 2px solid #df484f;
			}
		</ui:style>
		<g:HorizontalPanel verticalAlignment="middle" height="40px">
			<g:TextBox ui:field="name" readOnly="true" styleName="{common.css.textBox}" title="Attribute name"/>
			<g:Label ui:field="attributeLabel" styleName="{common.css.paddedText}">-</g:Label>
			<g:TextBox readOnly="true" ui:field="type" styleName="{common.css.textBox}" title="Attribute type"/>
			<g:Label  ui:field="inLabel" styleName="{common.css.paddedText}">-</g:Label>
			<g:TextBox readOnly="true" ui:field="language" styleName="{common.css.textBox}" width="70px" title="Attribute language"/>
		</g:HorizontalPanel>
</ui:UiBinder> 