<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with field='res'
		type='org.cotrix.web.publish.client.resources.CotrixPublishResources' />
	<ui:style>
		.important {
			font-weight: bold;
		}
		
		.targetLabel {
			line-height: 40px;
			margin-left: 10px;
			vertical-align: middle;
		}
		
		.targetURL {
			line-height: 40px;
			vertical-align: middle;
			float: left;
		}
		
		.targetURLLabel {
			color: #999;
		}
		
		.target {
			border: 1px solid #ccc;
			border-radius: 5px;
			margin: 10px;
			min-width: 600px;
			background-color: #efefef;
			overflow:auto;
			text-align: left;
		}
		
		.icon {
			float: left;
			line-height: 40px;
			vertical-align: middle;
			margin-top: 12px;
			margin-left: 10px;
		}
		
		.icon:HOVER {
			cursor: pointer;
		}
		
		.line {
			background-color: blue;
		}
		
		.left {
			float: left;
			color: #666;
			margin-left: 10px;
			font-size: 15px;
		}
		
		.wrapper {
			float: left;
			overflow:auto;
			vertical-align: middle;
		}
		
		.wrapperURL {
			float: left;
	
			vertical-align: middle;
		}
		
		.url {
			float: left;
			color: #999;
		}
		
		.setup {
			color: #2d83ee;
			float: left;
			margin-left: 15px;
		}
		
		.setup:HOVER {
			cursor: pointer;
			color: blue;
		}
		
		.url {
			color: #666;
			float: left;
			margin-left: 15px;
		}
		
		.url:HOVER {
			cursor: pointer;
			color: #333;
		}
		
		.typeListBox {
			margin-left: 10px;
		}
		
		.flexTable {
				margin:10px;
				border-width: 0 0 1px 1px;
				border-spacing: 0;
				border-color: #ccc;
				background-color: white;
				border-collapse: collapse;
				color: #666;
				font-size: 12px;
				border-style: solid;
				text-align: left;
			}
			
			.flexTableHeader {
				background-color: #eee;
				text-align: center;
			}
			
			.flexTable td,.flexTable th {
				margin: 0;
				border-color: #ccc;
				padding: 3px;
				padding-left: 10px;
				border-width: 1px 1px 0 0;
				border-style: solid;
			}
	</ui:style>
	<g:HTMLPanel>
		<div class="{style.target}">
			<div class="{style.wrapper}">
				<!-- <g:CheckBox ui:field="checkbox" styleName="{style.left}"></g:CheckBox> -->
				<g:Label ui:field="chanelName" styleName="{style.left}"></g:Label>
				<g:ListBox ui:field="types" styleName="{style.typeListBox}"></g:ListBox>
				<!-- <g:Label ui:field="setPropertyButton" styleName="{style.setup}">setup</g:Label> -->
				<!-- <g:Label ui:field="url" styleName="{style.url}"></g:Label> -->
				<g:FlexTable ui:field="propertyTable" styleName="{style.flexTable}"></g:FlexTable>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 