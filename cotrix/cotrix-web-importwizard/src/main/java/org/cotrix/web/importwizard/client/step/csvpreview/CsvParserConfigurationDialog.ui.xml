<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style
		type="org.cotrix.web.importwizard.client.step.csvpreview.CsvParserConfigurationDialog.Style">
			/* Add CSS here. See the GWT docs on UI Binder for more details */
			.important {
				font-weight: bold;
			}
			
			.headerlabel {
				margin-right: 20px;
				font-weight: bold;
				color: #333;
			}
			
			.titlelabel {
				margin-right: 20px;
				font-weight: bolder;
				color: black;
			}
			
			.valuelabel {
				margin-right: 20px;
				color: #999;
			}
			
			.panel {
				border: 1px solid #999;
				border-radius: 5px;
				margin: 10px;
				background-color: white;
				padding: 20px;
				-webkit-box-shadow: 0px 0px 30px rgba(50, 50, 50, 0.75);
				-moz-box-shadow: 0px 0px 30px rgba(50, 50, 50, 0.75);
				box-shadow: 0px 0px 30px rgba(50, 50, 50, 0.75);
			}
			
			.saveButton {
				float: right;
				margin-right: 20px;
				border: 1px solid #3063a1;
				-webkit-border-radius: 5px;
				-moz-border-radius: 5px;
				border-radius: 5px;
				width: 80px;
				font-size: 12px;
				font-family: arial, helvetica, sans-serif;
				padding: 8px 8px 8px 8px;
				text-shadow: 0px 0px 0 rgba(0, 0, 0, 0.3);
				font-weight: bold;
				text-align: center;
				color: #E8E8E8;
				background-color: #427EC7;
				background-image: -webkit-gradient(linear, left top, left bottom, color-stop(0%, #427EC7),
					color-stop(100%, #518EE2));
				background-image: -webkit-linear-gradient(top, #427EC7, #518EE2);
				background-image: -moz-linear-gradient(top, #427EC7, #518EE2);
				background-image: -ms-linear-gradient(top, #427EC7, #518EE2);
				background-image: -o-linear-gradient(top, #427EC7, #518EE2);
				background-image: linear-gradient(top, #427EC7, #518EE2);
				filter: literal("progid:DXImageTransform.Microsoft.gradient(GradientType=0,startColorstr=#427EC7, endColorstr=#518EE2)"
					);
			}
			
			.saveButton:hover {
				border: 1px solid #254d7e;
				background-color: #3165a5;
				background-image: -webkit-gradient(linear, left top, left bottom, color-stop(0%, #3165a5),
					color-stop(100%, #2572db));
				background-image: -webkit-linear-gradient(top, #3165a5, #2572db);
				background-image: -moz-linear-gradient(top, #3165a5, #2572db);
				background-image: -ms-linear-gradient(top, #3165a5, #2572db);
				background-image: -o-linear-gradient(top, #3165a5, #2572db);
				background-image: linear-gradient(top, #3165a5, #2572db);
				filter: literal("progid:DXImageTransform.Microsoft.gradient(GradientType=0,startColorstr=#3165a5, endColorstr=#2572db)"
					);
			}
			
			.cancelButton {
				float: left;
				margin-left: 20px;
				border: 1px solid #d7dada;
				-webkit-border-radius: 5px;
				-moz-border-radius: 5px;
				border-radius: 5px;
				width: 80px;
				font-size: 12px;
				font-family: arial, helvetica, sans-serif;
				padding: 8px 8px 8px 8px;
				text-shadow: 0px 0px 0 rgba(0, 0, 0, 0.3);
				font-weight: bold;
				text-align: center;
				color: #7D7D7D;
				background-color: #f4f5f5;
				background-image: -webkit-gradient(linear, left top, left bottom, color-stop(0%, #f4f5f5),
					color-stop(100%, #dfdddd));
				background-image: -webkit-linear-gradient(top, #f4f5f5, #dfdddd);
				background-image: -moz-linear-gradient(top, #f4f5f5, #dfdddd);
				background-image: -ms-linear-gradient(top, #f4f5f5, #dfdddd);
				background-image: -o-linear-gradient(top, #f4f5f5, #dfdddd);
				background-image: linear-gradient(top, #f4f5f5, #dfdddd);
				filter: literal("progid:DXImageTransform.Microsoft.gradient(GradientType=0,startColorstr=#f4f5f5, endColorstr=#dfdddd)"
					);
			}
			
			.cancelButton:hover {
				border: 1px solid #bfc4c4;
				background-color: #d9dddd;
				background-image: -webkit-gradient(linear, left top, left bottom, color-stop(0%, #d9dddd),
					color-stop(100%, #c6c3c3));
				background-image: -webkit-linear-gradient(top, #d9dddd, #c6c3c3);
				background-image: -moz-linear-gradient(top, #d9dddd, #c6c3c3);
				background-image: -ms-linear-gradient(top, #d9dddd, #c6c3c3);
				background-image: -o-linear-gradient(top, #d9dddd, #c6c3c3);
				background-image: linear-gradient(top, #d9dddd, #c6c3c3);
				filter: literal("progid:DXImageTransform.Microsoft.gradient(GradientType=0,startColorstr=#d9dddd, endColorstr=#c6c3c3)"
					);
			}
			
			.root {
				padding: 20px;
			}
		</ui:style>
	<g:HTMLPanel styleName="{style.root}">
		<div class="{style.panel}">
			<g:Grid>
				<g:row>
					<g:customCell>
						<g:Label text="Charset" styleName="{style.headerlabel}" />
					</g:customCell>
					<g:customCell>
						<g:ListBox ui:field="charsetField" styleName="{style.valuelabel}" />
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label text="Has header" styleName="{style.headerlabel}" />
					</g:customCell>
					<g:customCell>
						<g:CheckBox ui:field="hasHeaderField" styleName="{style.valuelabel}" />
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label text="Separator" styleName="{style.headerlabel}" />
					</g:customCell>
					<g:customCell>
						<g:VerticalPanel>
							<g:RadioButton name="separator" formValue="separator" ui:field="commaSeparator">Comma</g:RadioButton>
							<g:RadioButton name="separator" formValue="separator" ui:field="tabSeparator">Tab</g:RadioButton>
							<g:FlowPanel>
								<g:RadioButton name="separator" formValue="separator" ui:field="customSeparator">Custom</g:RadioButton>
								<g:TextBox maxLength="1" width="20px" ui:field="customSeparatorField">,</g:TextBox>
							</g:FlowPanel>
						</g:VerticalPanel>
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label text="Comment" styleName="{style.headerlabel}" />
					</g:customCell>
					<g:customCell>
						<g:TextBox maxLength="1" width="20px" ui:field="commentField">#</g:TextBox>
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label text="New Line" styleName="{style.headerlabel}" />
					</g:customCell>
					<g:customCell>
						<g:ListBox ui:field="newLineField" styleName="{style.valuelabel}" />
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label text="Quote" styleName="{style.headerlabel}" />
					</g:customCell>
					<g:customCell>
						<g:TextBox maxLength="1" width="20px" ui:field="quoteField">"</g:TextBox>
					</g:customCell>
				</g:row>
				<g:row>
					<g:cell />
					<g:customCell>
						<g:HorizontalPanel>
							<g:Button styleName="{style.saveButton}" ui:field="saveButton">Save</g:Button>

							<g:Button styleName="{style.cancelButton}" ui:field="cancelButton">Cancel</g:Button>
						</g:HorizontalPanel>
					</g:customCell>
				</g:row>
			</g:Grid>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 