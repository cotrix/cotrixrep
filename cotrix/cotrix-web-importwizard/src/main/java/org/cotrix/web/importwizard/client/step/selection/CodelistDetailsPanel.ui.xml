<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with type="org.cotrix.web.importwizard.client.resources.Resources"
		field="resources" />
	<ui:style
		type="org.cotrix.web.importwizard.client.step.selection.CodelistDetailsPanel.Style">
			
			.headerlabel {
				margin-right: 20px;
				font-weight: bold;
				color: #333;
			}
			
			.cell {
				padding: 5px;
				font-size: 14px;
				color: #666;
			}
			
			.flexTable {
				border-width: 0 0 1px 1px;
				border-spacing: 0;
				border-color: #ccc;
				background-color: white;
				border-collapse: collapse;
				color: #666;
				font-size: 8px;
				border-style: solid;
				text-align: left;
			}
			
			.flexTableHeader {
				background-color: #eee;
				text-align: center;
			}
			
			.flexTable td,.flexTable th {
				margin: 0;
				border-color: #ccc;
				padding: 3px;
				padding-left: 10px;
				border-width: 1px 1px 0 0;
				border-style: solid;
			}
			
			.metadata {
				vertical-align: top;
			}
			
			.metadataLabel {
				text-align: right;
				font-weight: bold;
			}
			
			.details {
				margin-top: 6px;
			}
			
			.blueButton {
				border: 1px solid #3063a1;
				-webkit-border-radius: 5px;
				-moz-border-radius: 5px;
				border-radius: 5px;
				width: 50px;
				height: 50px;
				font-size: 18px;
				font-family: arial, helvetica, sans-serif;
				padding: 8px 8px 8px 8px;
				text-shadow: 0px 0px 0 rgba(0, 0, 0, 0.3);
				font-weight: bold;
				text-align: center;
				color: #E8E8E8;
				background-color: #427EC7;
				background-image: -webkit-gradient(linear, left top, left bottom, color-stop(0%, #427EC7),
					color-stop(100%, #518EE2));
				background-image: -webkit-linear-gradient(top, #427EC7, #518EE2);
				background-image: -moz-linear-gradient(top, #427EC7, #518EE2);
				background-image: -ms-linear-gradient(top, #427EC7, #518EE2);
				background-image: -o-linear-gradient(top, #427EC7, #518EE2);
				background-image: linear-gradient(top, #427EC7, #518EE2);
				filter: literal("progid:DXImageTransform.Microsoft.gradient(GradientType=0,startColorstr=#427EC7, endColorstr=#518EE2)"
					);
			}
			
			.blueButton:hover {
				cursor: pointer;
				border: 1px solid #254d7e;
				background-color: #3165a5;
				background-image: -webkit-gradient(linear, left top, left bottom, color-stop(0%, #3165a5),
					color-stop(100%, #2572db));
				background-image: -webkit-linear-gradient(top, #3165a5, #2572db);
				background-image: -moz-linear-gradient(top, #3165a5, #2572db);
				background-image: -ms-linear-gradient(top, #3165a5, #2572db);
				background-image: -o-linear-gradient(top, #3165a5, #2572db);
				background-image: linear-gradient(top, #3165a5, #2572db);
				filter: literal("progid:DXImageTransform.Microsoft.gradient(GradientType=0,startColorstr=#3165a5, endColorstr=#2572db)"
					);
			}
		</ui:style>
	<g:ScrollPanel>
		<g:FlowPanel>
			<!-- <g:Button text="&lt;" ui:field="backButton" styleName="{style.blueButton}"></g:Button> -->
			<g:PushButton styleName="{resources.css.imageButton}"
				ui:field="backButton">
				<g:upFace image="{resources.back}" />
			</g:PushButton>
			<g:FlowPanel>
				<g:VerticalPanel spacing="5">
					<g:Label text="Asset Details" styleName="{resources.css.sectionTitle}" />
					<g:Grid>
						<g:row>
							<g:customCell styleName="{resources.css.verticalHeadersSingleItem}">
								<g:Label text="Id" styleName="{resources.css.propertyLabel}" />
							</g:customCell>
							<g:customCell>
								<g:Label ui:field="assetId" styleName="{resources.css.propertyValue}" />
							</g:customCell>
						</g:row>
						<g:row>
							<g:customCell styleName="{resources.css.verticalHeadersSingleItem}">
								<g:Label text="Name" styleName="{resources.css.propertyLabel}" />
							</g:customCell>
							<g:customCell>
								<g:Label ui:field="assetName" styleName="{resources.css.propertyValue}" />
							</g:customCell>
						</g:row>
						<g:row>
							<g:customCell styleName="{resources.css.verticalHeadersSingleItem}">
								<g:Label text="Type" styleName="{resources.css.propertyLabel}" />
							</g:customCell>
							<g:customCell>
								<g:Label ui:field="assetType" styleName="{resources.css.propertyValue}" />
							</g:customCell>
						</g:row>
						<g:row>
							<g:customCell styleName="{resources.css.verticalHeadersMultipleItem}">
								<g:Label text="Properties" styleName="{resources.css.propertyLabel}" />
							</g:customCell>
							<g:customCell>
								<g:FlexTable ui:field="assetDetails" cellPadding="0"
									cellSpacing="0" borderWidth="1" styleName="{style.flexTable}"
									width="100%" />
							</g:customCell>
						</g:row>
					</g:Grid>
				</g:VerticalPanel>
			</g:FlowPanel>
			<g:FlowPanel styleName="style.details">
				<g:VerticalPanel spacing="5">
					<g:Label text="Repository Details" styleName="{resources.css.sectionTitle}" />
					<g:Grid>
						<g:row>
							<g:customCell styleName="{resources.css.verticalHeadersSingleItem}">
								<g:Label text="Name" styleName="{resources.css.propertyLabel}" />
							</g:customCell>
							<g:customCell>
								<g:Label ui:field="repositoryName" styleName="{resources.css.propertyValue}" />
							</g:customCell>
						</g:row>
						<g:row>
							<g:customCell styleName="{resources.css.verticalHeadersSingleItem}">
								<g:Label text="Published types" styleName="{resources.css.propertyLabel}" />
							</g:customCell>
							<g:customCell>
								<g:Label ui:field="repositoryPublishedTypes" styleName="{resources.css.propertyValue}" />
							</g:customCell>
						</g:row>
						<g:row>
							<g:customCell styleName="{resources.css.verticalHeadersSingleItem}">
								<g:Label text="Returned types" styleName="{resources.css.propertyLabel}" />
							</g:customCell>
							<g:customCell>
								<g:Label ui:field="repositoryReturnedTypes" styleName="{resources.css.propertyValue}" />
							</g:customCell>
						</g:row>
						<g:row>
							<g:customCell styleName="{resources.css.verticalHeadersMultipleItem}">
								<g:Label text="Properties" styleName="{resources.css.propertyLabel}" />
							</g:customCell>
							<g:customCell>
								<g:FlexTable ui:field="repositoryDetails"
									cellPadding="0" cellSpacing="0" borderWidth="1" styleName="{style.flexTable}"
									width="100%" />
							</g:customCell>
						</g:row>
					</g:Grid>

				</g:VerticalPanel>
			</g:FlowPanel>


		</g:FlowPanel>
	</g:ScrollPanel>
</ui:UiBinder> 