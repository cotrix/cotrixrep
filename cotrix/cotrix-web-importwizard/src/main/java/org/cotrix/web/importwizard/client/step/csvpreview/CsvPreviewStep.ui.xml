<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p="urn:import:org.cotrix.web.importwizard.client.step.csvpreview">
	<ui:style
		type="org.cotrix.web.importwizard.client.step.csvpreview.CsvPreviewStepViewImpl.Style">
			.important {
				font-weight: bold;
			}
			
			.csvConfigure {
				color: #666;
				text-align: right;
			}
			
			.preview {
				border-width: 0 0 1px 1px;
				border-spacing: 0;
				border-color: #ccc;
				background-color: white;
				border-collapse: collapse;
				color: #666;
				font-size: 8px;
				border-style: solid;
				text-align: center;
			}
			
			.header {
				background-color: #eee;
			}
			
			.preview td,.preview th {
				margin: 0;
				border-color: #ccc;
				padding: 3px;
				border-width: 1px 1px 0 0;
				border-style: solid;
			}
			
			.textbox {
				width: 80%;
			}
		</ui:style>
	<g:HTMLPanel>
		<div style="text-align:right;">
			<g:Button styleName="{style.csvConfigure}" ui:field="showCsvConfigurationButton" >Configure CSV</g:Button>
		</div>
		<div style="margin-top:20px;">
			<p:PreviewGrid ui:field="preview"/>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 