<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style type="org.cotrix.web.importwizard.client.step.selection.CodelistDetailsDialog.Style">

		/* Add CSS here. See the GWT docs on UI Binder for more details */

		.important {
				font-weight: bold;
			}
			
			.headerlabel {
				margin-right: 20px;
				font-weight: bold;
				color: #333;
			}
			
			.titlelabel {
				margin-right: 20px;
				font-weight: bolder;
				color: black;
			}
			
			.valuelabel {
				margin-right: 20px;
				color: #999;
			}
			
			.grid {
				
			}
			
			.cell {
				padding: 5px;
				font-size: 14px;
				color: #666;
			}
			
			.flexTable {
				border-width: 0 0 1px 1px;
				border-spacing: 0;
				border-color: #ccc;
				background-color: white;
				border-collapse: collapse;
				color: #666;
				font-size: 8px;
				border-style: solid;
				text-align: left;
			}
			
			.flexTableHeader {
				background-color: #eee;
				text-align: center;
			}
			
			.flexTable td,.flexTable th {
				margin: 0;
				border-color: #ccc;
				padding: 3px;
				padding-left: 10px;
				border-width: 1px 1px 0 0;
				border-style: solid;
			}
			
			.metadata {
				vertical-align: top;
			}
			
			.metadataLabel {
				text-align: right;
				font-weight: bold;
			}
			
			.details {
				margin-top: 6px;
			}
			
			.panel {
			border: 1px solid #999;
			border-radius: 5px;
			margin: 10px;
			background-color: white;
			padding: 20px;
			-webkit-box-shadow: 0px 0px 30px rgba(50, 50, 50, 0.75);
			-moz-box-shadow: 0px 0px 30px rgba(50, 50, 50, 0.75);
			box-shadow: 0px 0px 30px rgba(50, 50, 50, 0.75);
		}
		
		.root {
			padding: 20px;
		}
		
			
	</ui:style>
	<g:HTMLPanel styleName="{style.root}">
	<div class="{style.panel}">
	<g:FlowPanel>
		<g:FlowPanel>
			<g:VerticalPanel spacing="5">
				<g:Label text="Asset Details" styleName="{style.titlelabel}"/>
				<g:Grid>
					<g:row>
						<g:customCell><g:Label text="Id" styleName="{style.headerlabel}" /></g:customCell>
						<g:customCell><g:Label ui:field="assetId" styleName="{style.valuelabel}"/></g:customCell>
					</g:row>
					<g:row>
						<g:customCell><g:Label text="Name" styleName="{style.headerlabel}" /></g:customCell>
						<g:customCell><g:Label ui:field="assetName" styleName="{style.valuelabel}"/></g:customCell>
					</g:row>
					<g:row>
						<g:customCell><g:Label text="Type" styleName="{style.headerlabel}"/></g:customCell>
						<g:customCell><g:Label ui:field="assetType" styleName="{style.valuelabel}"/></g:customCell>
					</g:row>
				</g:Grid>
				<g:FlexTable ui:field="assetDetails" cellPadding="0" 
				cellSpacing="0" borderWidth="1" styleName="{style.flexTable}" width="100%">
				</g:FlexTable>
			</g:VerticalPanel>
		</g:FlowPanel>
		<g:FlowPanel styleName="style.details">
			<g:VerticalPanel spacing="5">
				<g:Label text="Repository Details"  styleName="{style.titlelabel}"/>
				<g:Grid>
					<g:row>
						<g:customCell><g:Label text="Name" styleName="{style.headerlabel}" /></g:customCell>
						<g:customCell><g:Label ui:field="repositoryName" styleName="{style.valuelabel}"/></g:customCell>
					</g:row>
					<g:row>
						<g:customCell><g:Label text="Published types" styleName="{style.headerlabel}" /></g:customCell>
						<g:customCell><g:Label ui:field="repositoryPublishedTypes" styleName="{style.valuelabel}" /></g:customCell>
					</g:row>
					<g:row>
						<g:customCell><g:Label text="Returned types" styleName="{style.headerlabel}" /></g:customCell>
						<g:customCell><g:Label ui:field="repositoryReturnedTypes" styleName="{style.valuelabel}" /></g:customCell>
					</g:row>
				</g:Grid>
				<g:FlexTable ui:field="repositoryDetails" cellPadding="0"
			cellSpacing="0" borderWidth="1" styleName="{style.flexTable}" width="100%">
				</g:FlexTable>
			</g:VerticalPanel>
		</g:FlowPanel>


	</g:FlowPanel>
					</div>
	</g:HTMLPanel>
</ui:UiBinder> 