<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:dp="urn:import:com.google.gwt.user.datepicker.client" 
	xmlns:g="urn:import:com.google.gwt.user.client.ui" >
	<ui:style>
		.important {
			font-weight: bold;
		}
		
		.label {
			margin-right: 20px;
		}
		
		.grid {
			
		}
		
		.cell {
			padding: 5px;
			font-size: 14px;
			color: #666;
		}
		
		input[type="text"] {
			padding: 5px;
			border-radius: 5px;
			box-shadow: 0px 0px 0px 0px;
			border: 1px solid #999999;
		}
		
		input[type="text"]:focus {
			outline: none;
			border-radius: 5px;
			box-shadow: 0px 0px 5px #61C5FA;
			border: 1px solid #5AB0DB;
		}
		
		input[type="text"]:hover {
			border: 1px solid #999;
			border-radius: 5px;
		}
		
		input[type="text"]:focus:hover {
			outline: none;
			box-shadow: 0px 0px 5px #61C5FA;
			border: 1px solid #5AB0DB;
			border-radius: 5px;
		}
		
		.textarea {
			padding: 5px;
			border-radius: 5px;
			box-shadow: 0px 0px 0px 0px;
			border: 1px solid #999999;
		}
		
		.textarea:focus {
			outline: none;
			border-radius: 5px;
			box-shadow: 0px 0px 5px #61C5FA;
			border: 1px solid #5AB0DB;
		}
		
		.textarea:hover {
			border: 1px solid #999;
			border-radius: 5px;
		}
		
		.textarea:focus:hover {
			outline: none;
			box-shadow: 0px 0px 5px #61C5FA;
			border: 1px solid #5AB0DB;
			border-radius: 5px;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:Grid styleName="{style.grid}">
			<g:row>
				<g:customCell styleName="{style.cell}">
					<g:Label styleName="{style.label}">Name</g:Label>
				</g:customCell>
				<g:customCell styleName="{style.cell}">
					<g:TextBox width="300px" ui:field="name"></g:TextBox>
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell styleName="{style.cell}">
					<g:Label styleName="{style.label}">Owner</g:Label>
				</g:customCell>
				<g:customCell styleName="{style.cell}">
					<g:TextBox width="300px" ui:field="fileowner"></g:TextBox>
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell styleName="{style.cell}">
					<g:Label styleName="{style.label}">Description</g:Label>
				</g:customCell>
				<g:customCell styleName="{style.cell}">
					<g:TextArea width="300px" styleName="{style.textarea}" ui:field="description" height="70px"></g:TextArea>
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell styleName="{style.cell}">
					<g:Label styleName="{style.label}">Create Date</g:Label>
				</g:customCell>
				<g:customCell styleName="{style.cell}">
					<dp:DateBox ui:field="createDate"></dp:DateBox>
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell styleName="{style.cell}">
					<g:Label styleName="{style.label}">Update Date</g:Label>
				</g:customCell>
				<g:customCell styleName="{style.cell}">
					<dp:DateBox ui:field="updateDate"></dp:DateBox>
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell styleName="{style.cell}">
					<g:Label styleName="{style.label}">Version</g:Label>
				</g:customCell>
				<g:customCell styleName="{style.cell}">
					<g:ListBox ui:field="version">
						<g:item value='1'>
							1
						</g:item>
						<g:item value='2'>
							2
						</g:item>
						<g:item value='3'>
							3
						</g:item>
						<g:item value='4'>
							4
						</g:item>
						<g:item value='5'>
							5
						</g:item>
					</g:ListBox>
				</g:customCell>
			</g:row>
		</g:Grid>


	</g:HTMLPanel>
</ui:UiBinder> 