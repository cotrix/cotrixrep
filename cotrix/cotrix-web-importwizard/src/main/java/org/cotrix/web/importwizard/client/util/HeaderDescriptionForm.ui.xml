<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style type="org.cotrix.web.importwizard.client.util.HeaderDescriptionFormViewImpl.Style">
		.important {
			font-weight: bold;
		}
		
		.label {
			margin-right: 20px;
		}
		
		.grid {
			
		}
		
		.cell {
			padding: 5px;
			font-size: 14px;
			color: #666;
		}
		
		.textarea {
			padding: 5px;
			border-radius: 5px;
			width:300px;
			box-shadow: 0px 0px 0px 0px;
			border: 1px solid #999999;
		}
		
		.textarea:focus {
			outline: none;
			border-radius: 5px;
			box-shadow: 0px 0px 5px #61C5FA;
			border: 1px solid #5AB0DB;
		}
		
		.textarea:hover {
			border: 1px solid #999;
			border-radius: 5px;
		}
		
		.textarea:focus:hover {
			outline: none;
			box-shadow: 0px 0px 5px #61C5FA;
			border: 1px solid #5AB0DB;
			border-radius: 5px;
		}
	</ui:style>
	<g:HTMLPanel ui:field="panel">
	</g:HTMLPanel>
</ui:UiBinder> 