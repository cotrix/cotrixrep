<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
		
		.label {
			margin-right: 20px;
		}
		
		.grid {
			
		}
		
		.cell {
			padding: 5px;
			font-size: 14px;
			color: #666;
		}
		
		input[type="text"] {
			padding: 5px;
			border-radius: 5px;
			box-shadow: 0px 0px 0px 0px;
			border: 1px solid #999999;
		}
		
		input[type="text"]:focus {
			outline: none;
			border-radius: 5px;
			box-shadow: 0px 0px 5px #61C5FA;
			border: 1px solid #5AB0DB;
		}
		
		input[type="text"]:hover {
			border: 1px solid #999;
			border-radius: 5px;
		}
		
		input[type="text"]:focus:hover {
			outline: none;
			box-shadow: 0px 0px 5px #61C5FA;
			border: 1px solid #5AB0DB;
			border-radius: 5px;
		}
		
		.textarea {
			padding: 5px;
			border-radius: 5px;
			box-shadow: 0px 0px 0px 0px;
			border: 1px solid #999999;
		}
		
		.textarea:focus {
			outline: none;
			border-radius: 5px;
			box-shadow: 0px 0px 5px #61C5FA;
			border: 1px solid #5AB0DB;
		}
		
		.textarea:hover {
			border: 1px solid #999;
			border-radius: 5px;
		}
		
		.textarea:focus:hover {
			outline: none;
			box-shadow: 0px 0px 5px #61C5FA;
			border: 1px solid #5AB0DB;
			border-radius: 5px;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:Grid styleName="{style.grid}">
			<g:row>
				<g:customCell styleName="{style.cell}">
					<g:Label styleName="{style.label}">ISSCAAP</g:Label>
				</g:customCell>
				<g:customCell styleName="{style.cell}">
					<g:TextArea width="300px" styleName="{style.textarea}"  height="30px"></g:TextArea>
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell styleName="{style.cell}">
					<g:Label styleName="{style.label}">TAXOCODE</g:Label>
				</g:customCell>
				<g:customCell styleName="{style.cell}">
					<g:TextArea width="300px" styleName="{style.textarea}"  height="30px"></g:TextArea>
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell styleName="{style.cell}">
					<g:Label styleName="{style.label}">3A_CODE</g:Label>
				</g:customCell>
				<g:customCell styleName="{style.cell}">
					<g:TextArea width="300px" styleName="{style.textarea}"  height="30px"></g:TextArea>
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell styleName="{style.cell}">
					<g:Label styleName="{style.label}">Scientific Name</g:Label>
				</g:customCell>
				<g:customCell styleName="{style.cell}">
					<g:TextArea width="300px" styleName="{style.textarea}"  height="30px"></g:TextArea>
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell styleName="{style.cell}">
					<g:Label styleName="{style.label}">English Name</g:Label>
				</g:customCell>
				<g:customCell styleName="{style.cell}">
					<g:TextArea width="300px" styleName="{style.textarea}"  height="30px"></g:TextArea>
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell styleName="{style.cell}">
					<g:Label styleName="{style.label}">French Name</g:Label>
				</g:customCell>
				<g:customCell styleName="{style.cell}">
					<g:TextArea width="300px" styleName="{style.textarea}"  height="30px"></g:TextArea>
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell styleName="{style.cell}">
					<g:Label styleName="{style.label}">Spanish Name</g:Label>
				</g:customCell>
				<g:customCell styleName="{style.cell}">
					<g:TextArea width="300px" styleName="{style.textarea}"  height="30px"></g:TextArea>
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell styleName="{style.cell}">
					<g:Label styleName="{style.label}">Family</g:Label>
				</g:customCell>
				<g:customCell styleName="{style.cell}">
					<g:TextArea width="300px" styleName="{style.textarea}"  height="30px"></g:TextArea>
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell styleName="{style.cell}">
					<g:Label styleName="{style.label}">Author</g:Label>
				</g:customCell>
				<g:customCell styleName="{style.cell}">
					<g:TextArea width="300px" styleName="{style.textarea}"  height="30px"></g:TextArea>
				</g:customCell>
			</g:row>

		</g:Grid>
	</g:HTMLPanel>
</ui:UiBinder> 