<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style
		type="org.cotrix.web.importwizard.client.step.mapping.ColumnDefinitionPanel.Style">
			.important {
				font-weight: bold;
			}
			
			.textPadding {
				padding-left: 10px;
				padding-right: 10px;
				font-weight: bold;
				color: #333;
			}
			
			.listBox {
				float: left;
			}
			
			.listBoxError {
				float: left;
				border: 2px solid #df484f;
			}
		</ui:style>
	<g:FlowPanel>
		<g:HorizontalPanel>
			<g:ListBox ui:field="typeList" styleName="{style.listBox}">
				<g:item value='0'>
					------ Select Type ------
				</g:item>
				<g:item value='1'>
					Code
				</g:item>
				<g:item value='2'>
					Description
				</g:item>
			</g:ListBox>
			<g:Label ui:field="inLabel" styleName="{style.textPadding}" visible="false">in</g:Label>
			<g:ListBox ui:field="languageList" styleName="{style.listBox}"
				visible="false" />
		</g:HorizontalPanel>
	</g:FlowPanel>
</ui:UiBinder> 