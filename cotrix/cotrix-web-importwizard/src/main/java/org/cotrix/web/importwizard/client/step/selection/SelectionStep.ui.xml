<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client">
	<ui:with type="org.cotrix.web.importwizard.client.resources.Resources"
		field="resources" />
	<ui:style>
		.mainPanel {
			padding-top: 10px;
			height: 520px;
			width: 100%;
		}
		
		.refreshButton {
			margin-left: 7px;
			outline: none;
		}
	</ui:style>
	<g:HTMLPanel>
		<table cellspacing='0' cellpadding='0' class="{style.mainPanel}">
			<tr>
				<td valign='top' width="100%">
					<c:DataGrid ui:field='dataGrid' />
				</td>
				<td valign='top' align='right' width="30px">
					<g:PushButton ui:field="refreshButton"
						styleName="{resources.css.buttonRefresh} {style.refreshButton}">
						<g:upFace image="{resources.refresh}" />
					</g:PushButton>
				</td>
			</tr>
			<tr>

			</tr>
			<tr>
				<td align='center'>
					<c:SimplePager ui:field='pager' />
				</td>
			</tr>
		</table>
	</g:HTMLPanel>
