<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:f='urn:import:org.vectomatic.file'>
	<ui:style>
		.important {
			font-weight: bold;
		}
		
		.title {
			font-weight: bold;
			color: #999;
			text-align: left;
		}
		
		.uploadForm {
			text-align: left;
			padding-top: 10px;
			padding-bottom: 10px;
		}
		
		.uploadButton {
			border: 1px solid #d7dada;
			-webkit-border-radius: 5px;
			-moz-border-radius: 5px;
			float: left;
			border-radius: 5px;
			width: 80px;
			font-size: 12px;
			font-family: arial, helvetica, sans-serif;
			padding: 8px 8px 8px 8px;
			text-shadow: 0px 0px 0 rgba(0, 0, 0, 0.3);
			font-weight: bold;
			text-align: center;
			color: #7D7D7D;
			background-color: #f4f5f5;
			background-image: -webkit-gradient(linear, left top, left bottom, color-stop(0%, #f4f5f5),
				color-stop(100%, #dfdddd) );
			background-image: -webkit-linear-gradient(top, #f4f5f5, #dfdddd);
			background-image: -moz-linear-gradient(top, #f4f5f5, #dfdddd);
			background-image: -ms-linear-gradient(top, #f4f5f5, #dfdddd);
			background-image: -o-linear-gradient(top, #f4f5f5, #dfdddd);
			background-image: linear-gradient(top, #f4f5f5, #dfdddd);
			filter: progid:DXImageTransform.Microsoft.gradient(GradientType=0,
				startColorstr=#f4f5f5, endColorstr=#dfdddd );
		}
		
		.uploadButton:hover {
			border: 1px solid #bfc4c4;
			background-color: #d9dddd;
			background-image: -webkit-gradient(linear, left top, left bottom, color-stop(0%, #d9dddd),
				color-stop(100%, #c6c3c3) );
			background-image: -webkit-linear-gradient(top, #d9dddd, #c6c3c3);
			background-image: -moz-linear-gradient(top, #d9dddd, #c6c3c3);
			background-image: -ms-linear-gradient(top, #d9dddd, #c6c3c3);
			background-image: -o-linear-gradient(top, #d9dddd, #c6c3c3);
			background-image: linear-gradient(top, #d9dddd, #c6c3c3);
			filter: progid:DXImageTransform.Microsoft.gradient(GradientType=0,
				startColorstr=#d9dddd, endColorstr=#c6c3c3 );
		}
		
		.div {
			height: 35px;
		}
		
		.customUpload {
			visibility: hidden;
			width: 0;
		}
		
		.uploadFileName {
			float: left;
			line-height: 30px;
			vertical-align: middle;
			margin-left: 40px;
			font-size:20px;
			color:#999;
			margin-right: 20px;
		}
		
		.closeButton {
			background-color: #eee;
			color: #999;
			float: left;
			border-radius: 50px;
			width: 20px;
			font-size:10px;
			height: 20px;
			padding-left:1px;
			line-height: 20px;
			text-align: center;
			cursor: hand; cursor: pointer;
			margin:6px;
			padding-bottom:1px;
			vertical-align: middle;
		}
		.closeButton:hover {
			background-color: #999;
			color: #fff;
			padding-left:1px;
			padding-bottom:1px;
			float: left;
			font-size:10px
			border-radius: 50px;
			width: 20px;
			height: 20px;
			line-height: 20px;
			text-align: center;
			cursor: hand; cursor: pointer;
			margin:6px;
			vertical-align: middle;
		}
		
	</ui:style>
	<g:HTMLPanel>
		<div class='{style.title}'>Choose codelist file in CSV format.</div>
		<f:FileUploadExt ui:field="fileUpload" styleName="{style.customUpload}" />
		<div class="{style.div}">
			<g:Button text="BROWSE" ui:field="browseButton" styleName="{style.uploadButton}" />
			<g:Label ui:field="fileNameLabel"  styleName="{style.uploadFileName}" />
				<g:HTML text="X" styleName="{style.closeButton}" ui:field="closeButton" visible="false"></g:HTML>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 