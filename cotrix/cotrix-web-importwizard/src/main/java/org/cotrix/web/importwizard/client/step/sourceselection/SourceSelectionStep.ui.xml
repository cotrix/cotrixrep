<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:dp="urn:import:com.google.gwt.user.datepicker.client" xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with type="org.cotrix.web.importwizard.client.resources.Resources"
		field="resources"></ui:with>
	<ui:style>
		.important {
			font-weight: bold;
		}
		
		.label {
			margin-right: 20px;
		}
		
		.grid {
			width: 100%;
		}
		
		.cell {
			padding: 5px;
			text-align: center;
			font-size: 14px;
			color: #666;
		}
		
		.textarea {
			padding: 5px;
			border-radius: 5px;
			box-shadow: 0px 0px 0px 0px;
			border: 1px solid #999999;
		}
		
		.textarea:focus {
			outline: none;
			border-radius: 5px;
			box-shadow: 0px 0px 5px #61C5FA;
			border: 1px solid #5AB0DB;
		}
		
		.textarea:hover {
			border: 1px solid #999;
			border-radius: 5px;
		}
		
		.textarea:focus:hover {
			outline: none;
			box-shadow: 0px 0px 5px #61C5FA;
			border: 1px solid #5AB0DB;
			border-radius: 5px;
		}
		
		.icon {
			
		}
		
		.icon_label {
			padding-left: 10px;
			font-size: 24px;
			font-weight: normal;
		}
		
		.subtext {
			padding-top: 10px;
			padding-left: 10px;
			font-size: 16px;
			font-weight: normal;
		}
		
		.icon_panel_container {
			display: inline-block;
			outline: 0;
		}
		
		.icon_panel {
			margin-left: auto;
			margin-right: auto;
			cursor: pointer;
			border: 2px solid #ccc;
			border-radius: 5px;
			padding: 10px;
			background: #e2e2e2; /* Old browsers */
			background: -moz-linear-gradient(top, #e2e2e2 0%, #fefefe 0%, #f2f2f2 100%, #e0e0e0
				100%); /* FF3.6+ */
			background: -webkit-gradient(linear, left top, left bottom, color-stop(0%, #e2e2e2),
				color-stop(0%, #fefefe), color-stop(100%, #f2f2f2),
				color-stop(100%, #e0e0e0)); /* Chrome,Safari4+ */
			background: -webkit-linear-gradient(top, #e2e2e2 0%, #fefefe 0%, #f2f2f2 100%,
				#e0e0e0 100%); /* Chrome10+,Safari5.1+ */
			background: -o-linear-gradient(top, #e2e2e2 0%, #fefefe 0%, #f2f2f2 100%, #e0e0e0
				100%); /* Opera 11.10+ */
			background: -ms-linear-gradient(top, #e2e2e2 0%, #fefefe 0%, #f2f2f2 100%, #e0e0e0
				100%); /* IE10+ */
			background: linear-gradient(to bottom, #e2e2e2 0%, #fefefe 0%, #f2f2f2 100%, #e0e0e0
				100%); /* W3C */
			filter: progid:DXImageTransform.Microsoft.gradient(     startColorstr='#e2e2e2',
				endColorstr='#e0e0e0', GradientType=0); /* IE6-9 */
		}
		
		.icon_panel:HOVER {
			box-shadow: 0px 0px 5px #61C5FA;
			border: 2px solid #5AB0DB;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:Grid styleName="{style.grid}">
			<!-- <g:row> <g:customCell styleName="{style.cell}"> <g:Label styleName="{style.label}">Where 
				is located the codelist?</g:Label> </g:customCell> </g:row> -->
			<g:row>
				<g:customCell styleName="{style.cell}">
					<g:FocusPanel ui:field="myComputerPanel" styleName="{style.icon_panel_container}">
						<g:VerticalPanel styleName="{style.icon_panel}">
							<g:HorizontalPanel spacing="10"
								verticalAlignment="middle">
								<g:PushButton ui:field="localButton" styleName="{style.icon}">
									<g:upFace image="{resources.computer}" />
								</g:PushButton>
								<g:Label styleName="{style.icon_label}">My Computer</g:Label>
							</g:HorizontalPanel>
							<g:Label styleName="{style.subtext}">Select a file from my computer</g:Label>
						</g:VerticalPanel>
					</g:FocusPanel>
				</g:customCell>
				<g:customCell styleName="{style.cell}">
					<g:FocusPanel ui:field="cloudPanel" styleName="{style.icon_panel_container}">
						<g:VerticalPanel styleName="{style.icon_panel}">
							<g:HorizontalPanel spacing="10"
								verticalAlignment="middle">
								<g:PushButton ui:field="cloudButton" styleName="{style.icon}">
									<g:upFace image="{resources.cloud}" />
								</g:PushButton>
								<g:Label styleName="{style.icon_label}">Cloud Service</g:Label>
							</g:HorizontalPanel>
							<g:Label styleName="{style.subtext}">Select a file from a cloud service</g:Label>
						</g:VerticalPanel>
					</g:FocusPanel>
				</g:customCell>
			</g:row>
		</g:Grid>
	</g:HTMLPanel>
</ui:UiBinder> 