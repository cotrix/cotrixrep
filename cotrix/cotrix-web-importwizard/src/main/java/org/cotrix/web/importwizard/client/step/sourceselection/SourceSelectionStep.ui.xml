<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:dp="urn:import:com.google.gwt.user.datepicker.client" xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with type="org.cotrix.web.importwizard.client.resources.Resources"
		field="resources"></ui:with>
	<ui:style>
		.important {
			font-weight: bold;
		}
		
		.label {
			margin-right: 20px;
		}
		
		.grid {
			width: 100%;
		}
		
		.cell-left {
			padding: 5px;
			text-align: right;
			font-size: 14px;
			color: #666;
			width: 50%;
		}
		.cell-right {
			padding: 5px;
			text-align: left;
			font-size: 14px;
			color: #666;
			width: 50%;
		}
		
		.textarea {
			padding: 5px;
			border-radius: 5px;
			box-shadow: 0px 0px 0px 0px;
			border: 1px solid #999999;
		}
		
		.textarea:focus {
			outline: none;
			border-radius: 5px;
			box-shadow: 0px 0px 5px #61C5FA;
			border: 1px solid #5AB0DB;
		}
		
		.textarea:hover {
			border: 1px solid #999;
			border-radius: 5px;
		}
		
		.textarea:focus:hover {
			outline: none;
			box-shadow: 0px 0px 5px #61C5FA;
			border: 1px solid #5AB0DB;
			border-radius: 5px;
		}
		
		.icon {
			outline: 0;
		}
		
		.icon_label {
			padding-left: 10px;
			font-size: 24px;
			font-weight: normal;
		}
		
		.subtext {
			padding-top: 10px;
			padding-left: 10px;
			font-size: 16px;
			font-weight: normal;
		}
		
		.icon_panel_container_left {
			margin-left: auto;
			margin-right: 20px;
			display: inline-block;
			outline: 0;
		}
		
		.icon_panel_container_right {
			margin-left: 20px;
			margin-right: auto;
			display: inline-block;
			outline: 0;
		}
		
		.icon_panel {
			cursor: pointer;
			/*border: 2px solid #ccc;*/
			border-radius: 5px;
			padding: 10px;
				
		}
		
		.icon_panel:HOVER {
			box-shadow: 0px 0px 5px #61C5FA;
			/*border: 2px solid #5AB0DB;*/
		}
	</ui:style>
	<g:HTMLPanel>
		<g:Grid styleName="{style.grid}">
			<!-- <g:row> <g:customCell styleName="{style.cell}"> <g:Label styleName="{style.label}">Where 
				is located the codelist?</g:Label> </g:customCell> </g:row> -->
			<g:row>
				<g:customCell styleName="{style.cell-left}">
					<g:FocusPanel ui:field="myComputerPanel" styleName="{style.icon_panel_container_left}">
						<g:VerticalPanel styleName="{style.icon_panel}" horizontalAlignment="center">
							<g:HorizontalPanel spacing="10"
								verticalAlignment="middle">
								<g:Image resource="{resources.computer}" />
							</g:HorizontalPanel>
							<g:Label styleName="{style.icon_label}">On my computer</g:Label>
							<!-- <g:Label styleName="{style.subtext}">Select a file from my computer</g:Label> -->
						</g:VerticalPanel>
					</g:FocusPanel>
				</g:customCell>
				<g:customCell styleName="{style.cell-right}">
					<g:FocusPanel ui:field="cloudPanel" styleName="{style.icon_panel_container_right}">
						<g:VerticalPanel styleName="{style.icon_panel}"  horizontalAlignment="center">
							<g:HorizontalPanel spacing="10"
								verticalAlignment="middle">
								<g:Image resource="{resources.cloud}" />								
							</g:HorizontalPanel>
							<g:Label styleName="{style.icon_label}">In the cloud</g:Label>
							<!--<g:Label styleName="{style.subtext}">Select a file from a cloud service</g:Label>-->
						</g:VerticalPanel>
					</g:FocusPanel>
				</g:customCell>
			</g:row>
		</g:Grid>
	</g:HTMLPanel>
</ui:UiBinder> 