<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:f='urn:import:org.cotrix.web.importwizard.client.step.upload'>
	<ui:with type="org.cotrix.web.importwizard.client.resources.Resources"
		field="resources"></ui:with>
	<ui:style>
		
		.div {
			height: 30px;
		}
		
		.customUpload {
			visibility: hidden;
		}
		
		.fileName {
			float: left;
			line-height: 30px;
			vertical-align: middle;
			font-size: 18px;
			font-weight: bold;
			color: #666;
		}
		
		.fileSize {
			float: left;
			vertical-align: middle;
			font-size: 14px;
			color: #999;
			text-align: center;
			width: 100%;
		}
		
		.uploadFailedMessage {
			color: #c00;
		}
		
		.uploadRetryButton {
			margin-left: 10px;
			color: #15c;
			cursor: hand;
		}
		
		.fileWrapperPanel {
			float: left;
			margin-top: 10px;
			height: 30px;
			width: 100%;
		}
		
		.cell {
			padding: 5px;
			text-align: center;
			font-size: 14px;
			color: #666;
			width: 100%;
		}
		
		.browse-panel {
			cursor: pointer;
			margin-left: auto;
			margin-right: auto;
			display: inline-block;
			outline: 0;
			padding: 10px;
		}
		
		.browse-panel:HOVER {
			box-shadow: 0px 0px 5px #61C5FA;
		}
		
		.icon_panel {
			border-radius: 5px;
			padding: 10px;
			margin-left: auto;
			margin-right: auto;
		}
		
		.caption {
			padding-top: 10px;
			font-size: 20px;
			font-weight: normal;
		}
		
		.result_panel {
			padding-left: 10px;

		}
	</ui:style>

	<g:HTMLPanel>
		<g:FormPanel ui:field="form" method="post" encoding="multipart/form-data">
			<g:HTMLPanel>

				<f:FileUploadExt ui:field="fileUploadButton"
					styleName="{style.customUpload}" name="file" />
				<g:Grid width="100%">
					<g:row>
						<g:customCell styleName="{style.cell}">
							<g:VerticalPanel styleName="{style.icon_panel}"
								horizontalAlignment="center">
								<g:FocusPanel ui:field="browseButton" styleName="{style.browse-panel}">
									<g:HTMLPanel>
										<g:Image resource="{resources.computer}" />
										<g:HTMLPanel styleName="{style.caption}" ui:field="captionPanel">
											<g:Label>Browse</g:Label>
										</g:HTMLPanel>
									</g:HTMLPanel>
								</g:FocusPanel>
								<g:VerticalPanel horizontalAlignment="center"
									styleName="{style.fileWrapperPanel}" ui:field="fileWrapperPanel"
									visible="false">
									<g:HorizontalPanel>
										<g:Label ui:field="fileNameLabel" styleName="{style.fileName}" />
										<g:cell verticalAlignment="ALIGN_MIDDLE">
											<g:FlowPanel ui:field="uploadPanel" styleName="{style.result_panel}">
												<f:ProgressBar ui:field="progressBar" visible="false" />
												<g:HorizontalPanel ui:field="uploadFailPanel">
													<g:Label styleName="{style.uploadFailedMessage}">Upload failed.</g:Label>
													<g:Label ui:field="retryButton" styleName="{style.uploadRetryButton}">Retry</g:Label>
												</g:HorizontalPanel>
											</g:FlowPanel>
										</g:cell>
									</g:HorizontalPanel>
									<g:Label ui:field="fileSizeLabel" styleName="{style.fileSize}" />
								</g:VerticalPanel>
							</g:VerticalPanel>
						</g:customCell>
					</g:row>
				</g:Grid>
			</g:HTMLPanel>
		</g:FormPanel>
	</g:HTMLPanel>
</ui:UiBinder> 