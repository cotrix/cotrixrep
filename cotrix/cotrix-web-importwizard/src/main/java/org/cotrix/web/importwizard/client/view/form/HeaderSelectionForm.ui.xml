<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style >
			.important {
				font-weight: bold;
			}
			
			.checkbox {
				color: #666;
			}
			
			.flexTable {
				border-width: 0 0 1px 1px;
				border-spacing: 0;
				border-color: #ccc;
				background-color: white;
				border-collapse: collapse;
				color: #666;
				font-size: 8px;
				border-style: solid;
			}
			
			.flextTableHeader {
				background-color: #eee;
			}
			
			.flexTable td,.flexTable th {
				margin: 0;
				border-color: #ccc;
				padding: 4px;
				border-width: 1px 1px 0 0;
				border-style: solid;
			}
			
			.textbox {
				width: 60px;
			}
		</ui:style>
	<g:HTMLPanel>
		<div>
			<g:CheckBox styleName="{style.checkbox}" ui:field="checkbox"
				checked="true">Use first row as a header</g:CheckBox>
		</div>
		<div style="margin-top:20px;">
			<g:ScrollPanel width="100%" height="100%">
				<g:FlexTable ui:field="flexTable" cellPadding="3"
					cellSpacing="0" borderWidth="1" styleName="{style.flexTable}"></g:FlexTable>
			</g:ScrollPanel>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 