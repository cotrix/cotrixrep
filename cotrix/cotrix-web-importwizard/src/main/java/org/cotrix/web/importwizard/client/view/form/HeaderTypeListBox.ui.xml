	<ui:style type="org.cotrix.web.importwizard.client.view.form.HeaderTypeListBox.Style">
		.important {
			font-weight: bold;
		}
		
		.listBox {
			float: left;
		}
		
		.listBoxError {
			float: left;
			border: 2px solid #df484f;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:ListBox ui:field="listbox" styleName="{style.listBox}">
			<g:item value='0'>
