<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with type="org.cotrix.web.importwizard.client.resources.Resources"
		field="resources"></ui:with>
	<ui:style>
		.grid {
			vertical-align: top;
			margin-right: 20px;
			background-color: #f6f6f6;
			border: 1px solid #d1d1d1;
			width: 100%;
			border-spacing: 5px;
		}
		
		.mappingPanelItem {
			float: right;
			padding: 5px;
			vertical-align: middle;
		}
		
		.mappingPanelCheckBox {
			margin-top: 7px;
		}
		
		.mappingPanel {
			margin-top: 10px;
			background-color: #dfdfdf;
			border: 1px solid #b0b0b0;
			overflow:hidden;
		}
		
		.firstColumn {
			padding-left: 10px;
			width: 120px;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:Grid ui:field="panel" styleName="{style.grid}">
			<g:row>
				<g:cell styleName="{resources.css.verticalHeadersSingleItem} {style.firstColumn}">
					<span class="{resources.css.propertyLabel}">File</span>
				</g:cell>
				<g:customCell>
					<g:Label ui:field="fileField" styleName="{resources.css.propertyValue}" />
				</g:customCell>
			</g:row>
			<g:row>
				<g:cell styleName="{resources.css.verticalHeadersSingleItem} {style.firstColumn}">
					<span class="{resources.css.propertyLabel}">Codelist</span>
				</g:cell>
				<g:customCell>
					<g:Label ui:field="codelistField" styleName="{resources.css.propertyValue}" />
				</g:customCell>
			</g:row>
			<g:row>
				<g:cell styleName="{resources.css.verticalHeadersMultipleItem} {style.firstColumn}">
					<span class="{resources.css.propertyLabel}">Properties</span>
				</g:cell>
				<g:customCell>
					<g:FlexTable ui:field="propertiesTable" cellPadding="0"
						cellSpacing="0" borderWidth="1" styleName="{resources.css.propertiesTable}"
						width="100%" />
				</g:customCell>
			</g:row>
			<g:row>
				<g:cell styleName="{resources.css.verticalHeadersMultipleItem} {style.firstColumn}">
					<span class="{resources.css.propertyLabel}">Directives</span>
				</g:cell>
				<g:customCell>
					<g:FlexTable ui:field="customTable" cellPadding="0"
						cellSpacing="0" borderWidth="1" styleName="{resources.css.propertiesTable}"
						width="100%"></g:FlexTable>
				</g:customCell>
			</g:row>

		</g:Grid>
		<g:HTMLPanel ui:field="mappingPanel" width="100%" styleName="{style.mappingPanel}">
			<span class="{resources.css.propertyLabel} {style.mappingPanelItem}">Fail on errors</span>
			<g:SimpleCheckBox ui:field="mappingMode"
				styleName="{resources.css.simpleCheckbox} {style.mappingPanelItem} {style.mappingPanelCheckBox}"/>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 