<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style
		type="org.cotrix.web.importwizard.client.step.summary.SummaryStepViewImpl.Style">
			.important {
				font-weight: bold;
			}
			
			.headerlabel {
				margin-right: 20px;
				font-weight: bold;
				color: #333;
			}
			
			.valuelabel {
				margin-right: 20px;
				color: #999;
			}
			
			.cell {
				padding: 5px;
				font-size: 14px;
				color: #666;
			}
			
			.summaryTable {
				border-width: 0 0 1px 1px;
				border-spacing: 0;
				border-color: #ccc;
				background-color: white;
				border-collapse: collapse;
				color: #666;
				font-size: 8px;
				border-style: solid;
				text-align: left;
			}
			
			.summaryTableHeader {
				background-color: #eee;
				text-align: center;
			}
			
			.summaryTable td,.summaryTablee th {
				margin: 0;
				border-color: #ccc;
				padding: 3px;
				padding-left: 10px;
				border-width: 1px 1px 0 0;
				border-style: solid;
			}
			
			.metadata {
				vertical-align: top;
			}
			
			.metadataLabel {
				text-align: right;
				font-weight: bold;
			}
			
			.label {
				font-size: 14px;
				vertical-align: top;
			}
			
			.value {
				padding: 5px;
				font-size: 14px;
				color: #666;
			}
			
			.grid {
				vertical-align: top;
			}
		</ui:style>
	<g:Grid ui:field="panel" styleName="{style.grid}">
		<g:row>
			<g:customCell>
				<g:Label styleName="{style.label}">File</g:Label>
			</g:customCell>
			<g:customCell>
				<g:Label ui:field="fileField" styleName="{style.value}" />
			</g:customCell>
		</g:row>
		<g:row>
			<g:customCell>
				<g:Label styleName="{style.label}">Codelist</g:Label>
			</g:customCell>
			<g:customCell>
				<g:Label ui:field="codelistField" styleName="{style.value}" />
			</g:customCell>
		</g:row>
		<g:row>
			<g:customCell>
				<g:Label styleName="{style.label}">Properties</g:Label>
			</g:customCell>
			<g:customCell>
				<g:FlexTable ui:field="propertiesTable" cellPadding="0"
					cellSpacing="0" borderWidth="1" styleName="{style.summaryTable}"
					width="100%" />
			</g:customCell>
		</g:row>
		<g:row>
			<g:customCell>
				<g:Label styleName="{style.label}">Mapping mode</g:Label>
			</g:customCell>
			<g:customCell>
				<g:Label ui:field="mappingModeField" styleName="{style.value}" />
			</g:customCell>
		</g:row>
		<g:row>
			<g:customCell>
				<g:Label styleName="{style.label}">Mapping</g:Label>
			</g:customCell>
			<g:customCell>
				<g:FlexTable ui:field="customTable" cellPadding="0"
					cellSpacing="0" borderWidth="1" styleName="{style.summaryTable}"
					width="100%"></g:FlexTable>
			</g:customCell>
		</g:row>
	</g:Grid>

</ui:UiBinder> 