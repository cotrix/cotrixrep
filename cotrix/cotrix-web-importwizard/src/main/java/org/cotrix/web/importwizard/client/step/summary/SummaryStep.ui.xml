<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style
		type="org.cotrix.web.importwizard.client.step.summary.SummaryStepViewImpl.Style">
			.important {
				font-weight: bold;
			}
			
			.headerlabel {
				margin-right: 20px;
				font-weight: bold;
				color: #333;
			}
			
			.valuelabel {
				margin-right: 20px;
				color: #999;
			}
			
			.grid {
				
			}
			
			.cell {
				padding: 5px;
				font-size: 14px;
				color: #666;
			}
			
			.flexTable {
				border-width: 0 0 1px 1px;
				border-spacing: 0;
				border-color: #ccc;
				background-color: white;
				border-collapse: collapse;
				color: #666;
				font-size: 8px;
				border-style: solid;
				text-align: left;
			}
			
			.flexTableHeader {
				background-color: #eee;
				text-align: center;
			}
			
			.flexTable td,.flexTable th {
				margin: 0;
				border-color: #ccc;
				padding: 3px;
				padding-left: 10px;
				border-width: 1px 1px 0 0;
				border-style: solid;
			}
			
			.metadata {
				vertical-align: top;
			}
			
			.metadataLabel {
				text-align: right;
				font-weight: bold;
			}
			
			.uploadPanel {
				background-color: red;
			}
		</ui:style>
	<g:HTMLPanel ui:field="panel">
		<g:FlexTable ui:field="flexTable" cellPadding="0"
			cellSpacing="0" borderWidth="1" styleName="{style.flexTable}" width="100%"></g:FlexTable>
		<g:FlowPanel ui:field="gwtUploadPanel" styleName="{style.uploadPanel}"></g:FlowPanel>
	</g:HTMLPanel>
</ui:UiBinder> 