<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
		
		.progressTracker {
			width: 100%;
			height: 100%;
			margin: 0 auto;
			text-align: center;
		}
		
		.formPanel {
			width: 100%;
			height: 100%;
			margin: 0 auto;
			text-align: center;
		}
		
		.mainPanel {
			padding-bottom: 20px; 
		}
	</ui:style>
	<g:HTMLPanel>
		<g:FlowPanel styleName="{style.mainPanel}">
			<g:FlowPanel ui:field="progressTracker" styleName="{style.progressTracker}" />
			<g:DeckPanel ui:field="formPanel" styleName="{style.formPanel}" />
		</g:FlowPanel>
	</g:HTMLPanel>
</ui:UiBinder> 