<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p="urn:import:org.cotrix.web.importwizard.client.progresstracker">
	<ui:with type="org.cotrix.web.importwizard.client.resources.Resources"
		field="resources"></ui:with>
	<ui:style>
		.wizardPanel {
			padding-bottom: 20px;
		}
		
		.progressTracker {
			margin: 0 auto;
			text-align: center;
			margin-top: 10px;
		}
		
		.contentPanel {
			width: 880px;
			height: 100%;
			margin: 0 auto;
		}
		
		.title {
			font-size: 20px;
			color: #595959;
			text-align: center;
		}
		
		.subtitle {
			font-family: 'Kite One', sans-serif;
			color: #989898;
			text-align: center;
			margin-top: 2px;
		}
		
		.stepsPanel {
			width: 100%;
			height: 100%;
			margin: 0 auto;
			text-align: center;
		}
		
		.navigationBar {
			font-weight: bold;
			background-color: #FAFAFA;
			height: 40px;
			border-radius: 0px 0px 5px 5px;
			-moz-border-radius: 0px 0px 5px 5px;
		}
		
		.buttonPanel {
			vertical-align: middle;
			margin: 0 auto;
			width: 880px;

		}
		
		.leftButton {
			padding: 5px;
			float: left;
		}
		
		.rightButton {
			padding: 5px;
			float: right;
		}
	</ui:style>
	<g:DockLayoutPanel unit='PX'
		styleName="{style.wizardPanel}">
		<g:north size='60'>
			<p:ProgressTracker ui:field="progressTracker"
				styleName="{style.progressTracker}" />
		</g:north>
		<g:center>
			<g:FlowPanel ui:field="contentPanel" styleName="{style.contentPanel}">
				<g:Label text="Title" styleName="{style.title}" ui:field="title" />
				<g:Label ui:field="subtitle" styleName="{style.subtitle}">If you don't have it,
					we can find it.</g:Label>
				<g:DeckLayoutPanel ui:field="stepsPanel" styleName="{style.stepsPanel}" />

			</g:FlowPanel>
		</g:center>
		<g:south size="60">
			<g:HTMLPanel styleName="{style.buttonPanel}">
				<div class="{style.leftButton}">
					<g:Button ui:field="backwardButton" styleName="{resources.css.grayButton}"
						text="Back" />
				</div>
				<div class="{style.rightButton}">
					<g:Button ui:field="forwardButton" styleName="{resources.css.blueButton}"
						text="Next" />
				</div>
			</g:HTMLPanel>
		</g:south>
	</g:DockLayoutPanel>

</ui:UiBinder> 