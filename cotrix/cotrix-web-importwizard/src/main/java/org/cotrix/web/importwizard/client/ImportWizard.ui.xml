<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with type="org.cotrix.web.importwizard.client.resources.Resources"
		field="resources"></ui:with>
	<ui:style>
		.progressTrackerPanel {
			width: 100%;
			height: 100%;
			margin: 0 auto;
			text-align: center;
		}
		
		/*form panel container of deck*/
		.formPanel {
			width: 100%;
			height: 100%;
			margin: 0 auto;
			text-align: center;
		}
		
		.mainPanel {
			padding-bottom: 20px;
		}
		
		.panel {
			font-weight: bold;
			background-color: #FAFAFA;
			width: 880px;
			margin: 0 auto;
			-moz-border-radius: 5px;
			border-radius: 5px;
			border: 1px solid #ccc;
			height: 100%;
		}
		
		.navigationBar {
			font-weight: bold;
			background-color: #FAFAFA;
			height: 40px;
			border-radius: 0px 0px 5px 5px;
			-moz-border-radius: 0px 0px 5px 5px;
		}
		
		.title {
			font-weight: bold;
			font-size: xx-large;
			text-align: left;
			color: #999;
			margin-left: 20px;
			padding-top: 12px;
		}
		
		.subtitle {
			margin-left: 20px;
			font-size: 25px;
			color: #999;
		}
		
		.contentPanel {
			text-align: left;
			padding: 20px;
			height: 100%;
		}
		
		.buttonPanel {
			padding-bottom: 5px;
		}
		
		.leftButtonPanel {
			float: left;
			margin-left: 20px;
			width: 50%;
		}
		
		.rightButtonPanel {
			float: right;
			margin-right: 20px;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:FlowPanel styleName="{style.mainPanel}">
			<g:FlowPanel ui:field="progressTrackerPanel" styleName="{style.progressTrackerPanel}" />
			<g:FlowPanel ui:field="contentPanel" styleName="{style.panel}">
				<g:Label text="Title" styleName="{style.title}" ui:field="title" />
				<g:Label ui:field="subtitle" styleName="{style.subtitle}">If you don't have it, we can find it.</g:Label>
				<g:DeckPanel ui:field="stepsPanel" styleName="{style.contentPanel}" />
				<g:Grid width="100%"  styleName="{style.buttonPanel}">
					<g:row>
						<g:customCell styleName="{style.leftButtonPanel}">
							<g:Button ui:field="backwardButton" styleName="{resources.css.grayButton}"
								text="Back" />
						</g:customCell>
						<g:customCell styleName="{style.rightButtonPanel}">
							<g:Button ui:field="forwardButton" styleName="{resources.css.blueButton}"
								text="Next" />
						</g:customCell>
					</g:row>
				</g:Grid>
				<!-- <g:HorizontalPanel width="100%" styleName="{style.buttonPanel}"> 
					<g:cell styleName="{style.leftButtonPanel}"> <g:Button ui:field="backwardButton" 
					styleName="{resources.css.grayButton}" text="Back" /> </g:cell> <g:cell styleName="{style.leftButtonPanel}"> 
					<g:Button ui:field="forwardButton" styleName="{resources.css.blueButton}" 
					text="Next" /> </g:cell> </g:HorizontalPanel> -->

			</g:FlowPanel>
		</g:FlowPanel>
	</g:HTMLPanel>
</ui:UiBinder> 