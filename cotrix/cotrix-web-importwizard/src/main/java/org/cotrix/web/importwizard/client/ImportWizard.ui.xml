<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with type="org.cotrix.web.importwizard.client.resources.Resources"
		field="resources"></ui:with>
	<ui:style>
		.wizardPanel {
			padding-bottom: 20px;
		}
		
		.progressTrackerPanel {
			width: 100%;
			height: 100%;
			margin: 0 auto;
			text-align: center;
		}
		
		.contentPanel {
			width: 880px;
			height: 100%;
			margin: 0 auto;
		}
		
		.title {
			font-size: 20px;
			color: #595959;
			text-align: center;
		}
		
		.subtitle {
			font-family: 'Kite One', sans-serif;
			color: #989898;
			text-align: center;
			margin-top: 2px;
		}
		
		.stepsPanel {
			width: 100%;
			height: 100%;
			margin: 0 auto;
			text-align: center;
		}
		
		.navigationBar {
			font-weight: bold;
			background-color: #FAFAFA;
			height: 40px;
			border-radius: 0px 0px 5px 5px;
			-moz-border-radius: 0px 0px 5px 5px;
		}
		
		.buttonPanel {
			padding-bottom: 5px;
			padding-top: 30px;
		}
		
		.leftButtonPanel {
			float: left;
			margin-left: 20px;
			width: 50%;
		}
		
		.rightButtonPanel {
			float: right;
			margin-right: 20px;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:FlowPanel styleName="{style.wizardPanel}">
			<g:FlowPanel ui:field="progressTrackerPanel" styleName="{style.progressTrackerPanel}" />
			<g:FlowPanel ui:field="contentPanel" styleName="{style.contentPanel}">
				<g:Label text="Title" styleName="{style.title}" ui:field="title" />
				<g:Label ui:field="subtitle" styleName="{style.subtitle}">If you don't have it,
					we can find it.</g:Label>
				<g:DeckPanel ui:field="stepsPanel" styleName="{style.stepsPanel}" />
				<g:Grid width="100%" styleName="{style.buttonPanel}">
					<g:row>
						<g:customCell styleName="{style.leftButtonPanel}">
							<g:Button ui:field="backwardButton" styleName="{resources.css.grayButton}"
								text="Back" />
						</g:customCell>
						<g:customCell styleName="{style.rightButtonPanel}">
							<g:Button ui:field="forwardButton" styleName="{resources.css.blueButton}"
								text="Next" />
						</g:customCell>
					</g:row>
				</g:Grid>
			</g:FlowPanel>
		</g:FlowPanel>
	</g:HTMLPanel>
</ui:UiBinder> 