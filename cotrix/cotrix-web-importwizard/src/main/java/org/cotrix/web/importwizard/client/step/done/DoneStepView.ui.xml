<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client">
	<ui:with type="org.cotrix.web.importwizard.client.resources.Resources"
		field="resources" />
	<ui:style>
		.subtitle {
			font-size: 25px;
			color: #999;
		}
		
		.report {
			padding-top: 10px;
		}
		
		.reportPager {
			/*margin-left: auto;
					margin-right: auto;*/
			
		}
		
		.reportDownload {
			/*margin-left: auto;
					margin-right: 10px;*/
			
		}
	</ui:style>
	<g:HTMLPanel>
		<g:HTMLPanel ui:field="reportPanel" styleName="{style.report}">
			<table cellspacing='0' cellpadding='0' style='width:100%;'>
				<tr>
					<td align='right'>
						<g:PushButton ui:field='reportDownload' styleName="{resources.css.imageButton}">
							<g:upFace image="{resources.download}"></g:upFace>
						</g:PushButton>
					</td>
				</tr>
				<tr>
					<td valign='top'>
						<c:DataGrid ui:field='reportGrid' />
					</td>
				</tr>
				<tr>
					<td align='center'>
						<c:SimplePager ui:field='reportPager' styleName="{style.reportPager}" />
					</td>
				</tr>
			</table>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 