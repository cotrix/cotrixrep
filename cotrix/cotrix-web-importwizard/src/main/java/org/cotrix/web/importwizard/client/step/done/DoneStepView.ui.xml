<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client">
	<ui:with type="org.cotrix.web.importwizard.client.resources.Resources"
		field="resources" />
	<ui:style>
		.downloadButtonPanel {
			float: right;
			padding: 5px;
		}
		
		.report {
			padding-top: 10px;
			vertical-align: top;
			margin-right: 20px;
			width: 100%;
			border-spacing: 5px;
		}
		
		/**
										Workaround to GWT issue #8275
										https://code.google.com/p/google-web-toolkit/issues/detail?id=8275
										**/
		.borderFix table {
			border-collapse: collapse;
		}
		
		.pagerPanel {
			margin: 0 auto;
		}
	</ui:style>
	<g:DockLayoutPanel unit='PX' ui:field="reportPanel"
		styleName="{resources.css.wizardPanel}">
		<g:north size="45">
			<g:HTMLPanel>
				<div class="{style.downloadButtonPanel}">
					<g:Button ui:field="reportDownload" text="DOWNLOAD"
						styleName="{resources.css.buttonDownload}" />
				</div>
			</g:HTMLPanel>
		</g:north>
		<g:center>
			<c:DataGrid ui:field='reportGrid' styleName="{style.borderFix}" />
		</g:center>
		<g:south size="60">
			<g:HTMLPanel>
				<div class="{style.pagerPanel}">
					<c:SimplePager ui:field='reportPager' styleName="{style.pagerPanel}" />
				</div>
			</g:HTMLPanel>
		</g:south>
	</g:DockLayoutPanel>
</ui:UiBinder> 