<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client">
	<ui:with type="org.cotrix.web.importwizard.client.resources.Resources"
		field="resources" />
	<ui:style>
		
		.report {
			padding-top: 10px;
			vertical-align: top;
			margin-right: 20px;
			background-color: #f6f6f6;
			border: 1px solid #d1d1d1;
			width: 100%;
			border-spacing: 5px;
		}

		/**
		Workaround to GWT issue #8275
		https://code.google.com/p/google-web-toolkit/issues/detail?id=8275
		**/
		.borderFix table {
			border-collapse: collapse;

	 	}

	</ui:style>
		<g:HTMLPanel ui:field="reportPanel">
			<table cellspacing='0' cellpadding='0' class="{style.report}">
				<tr>
					<td align='right'>
						<g:Button ui:field="reportDownload" text="DOWNLOAD" styleName="{resources.css.buttonDownload}" />
					</td>
				</tr>
				<tr>
					<td valign='top'>
						<c:DataGrid ui:field='reportGrid' styleName="{style.borderFix}"/>
					</td>
				</tr>
				<tr>
					<td align='center'>
						<c:SimplePager ui:field='reportPager' />
					</td>
				</tr>
			</table>
	</g:HTMLPanel>
</ui:UiBinder> 