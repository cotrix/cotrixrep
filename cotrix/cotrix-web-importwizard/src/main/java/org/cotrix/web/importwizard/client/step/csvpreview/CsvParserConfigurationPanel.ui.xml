<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:s="urn:import:org.cotrix.web.share.client"
	>
	<ui:with type="org.cotrix.web.importwizard.client.resources.Resources"
		field="resources"></ui:with>
	<ui:style>
		.toolbar {
			width: 100%;
			border: 1px solid #d4d4d4;
			margin-bottom: 10px;
			border-spacing: 1px;
		}
		
		.toolbarLabel {
			font-size:16px;
			padding-bottom: 3px;
			color: #989898;
		}
		
		.refreshButton {
			margin: auto;
			outline: none;
		}
	</ui:style>
	<g:HTMLPanel>
		<table class="{style.toolbar}">
			<tr>
				<td width="18%" style="border-right:1px solid #bababa;">
					<div class="{style.toolbarLabel}">First Row is Header</div>
					<div>
						<g:SimpleCheckBox ui:field="hasHeaderField"
							styleName="{resources.css.simpleCheckbox}" />
					</div>
				</td>
				<td width="18%" style="border-right:1px solid #bababa;">
					<div class="{style.toolbarLabel}">Delimiter</div>
					<div>
						<s:EnumListBox ui:field="separatorField" styleName="{resources.css.listBox}" />
						<g:TextBox ui:field="customSeparatorField" maxLength="1"
							width="20px" enabled="false" styleName="{resources.css.textBox}">:</g:TextBox>
					</div>
				</td>
				<td width="18%" style="border-right:1px solid #bababa;">
					<div class="{style.toolbarLabel}">Quote</div>
					<div>
						<s:EnumListBox ui:field="quoteField" styleName="{resources.css.listBox}" />
						<g:TextBox ui:field="customQuoteField" maxLength="1"
							width="20px" enabled="false" styleName="{resources.css.textBox}">|</g:TextBox>
					</div>
				</td>
				<td width="18%" style="border-right:1px solid #bababa;">
					<div class="{style.toolbarLabel}">Comment</div>
					<div>
						<g:TextBox ui:field="commentField" maxLength="1" width="20px"
							styleName="{resources.css.textBox}">#</g:TextBox>
					</div>
				</td>
				<td width="18%" style="border-right:1px solid #bababa;">
					<div class="{style.toolbarLabel}">Encoding</div>
					<div>
						<g:ListBox ui:field="charsetField" styleName="{resources.css.listBox}" />
					</div>
				</td>
				<td width="10%" style="text-align:center;vertical-align:middle;">
					<g:PushButton ui:field="refreshButton"
						styleName="{resources.css.buttonRefresh} {style.refreshButton}">
						<g:upFace image="{resources.refresh}" />
					</g:PushButton>
				</td>
			</tr>
		</table>
	</g:HTMLPanel>
</ui:UiBinder> 