<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with type="org.cotrix.web.importwizard.client.resources.Resources"
		field="resources"></ui:with>
	<ui:style>
		.headerlabel {
			margin-right: 20px;
			font-weight: bold;
			color: #333;
		}
		
		.valuelabel {
			margin-right: 20px;
			color: #999;
		}
		
		.toolbar {
			width: 100%;
			border: 1px solid #999;
			border-radius: 5px;
			margin-bottom: 10px;
		}
		
		.toolbarLabel {
			font-weight: normal;
		}
		
		.refreshIcon {
			cursor: pointer;
		}
	</ui:style>
	<g:HorizontalPanel spacing="5" verticalAlignment="middle"
		styleName="{style.toolbar}">
		
		<g:HorizontalPanel verticalAlignment="middle"
			spacing="3">
			<g:Label styleName="{style.toolbarLabel}">Header</g:Label>
			<g:SimpleCheckBox ui:field="hasHeaderField" styleName="{resources.css.simpleCheckbox}" />
		</g:HorizontalPanel>
		
		<g:HorizontalPanel verticalAlignment="middle"
			spacing="3">
			<g:Label styleName="{style.toolbarLabel}">Separator</g:Label>
			<g:ListBox ui:field="separatorField" styleName="{resources.css.listBox}">
				<g:item value=",">Comma</g:item>
				<g:item value="tab">Tab</g:item>
				<g:item value="custom">Custom</g:item>
			</g:ListBox>
			<g:TextBox ui:field="customSeparatorField" maxLength="1" width="20px" visible="false"
				styleName="{resources.css.textBox}">,</g:TextBox>
		</g:HorizontalPanel>

		<g:HorizontalPanel verticalAlignment="middle"
			spacing="3">
			<g:Label styleName="{style.toolbarLabel}">Quote</g:Label>
			<g:ListBox ui:field="quoteField" styleName="{resources.css.listBox}">
				<g:item value='"'>Double quote</g:item>
				<g:item value="'">Single quote</g:item>
				<g:item value="custom">Custom</g:item>
			</g:ListBox>
			<g:TextBox ui:field="customQuoteField"  maxLength="1" width="20px" visible="false"
				styleName="{resources.css.textBox}">"</g:TextBox>
		</g:HorizontalPanel>
		
		<g:HorizontalPanel verticalAlignment="middle"
			spacing="3">
			<g:Label styleName="{style.toolbarLabel}">Comment</g:Label>
			<g:TextBox ui:field="commentField" maxLength="1" width="20px" styleName="{resources.css.textBox}">#</g:TextBox>
		</g:HorizontalPanel>
		
		<g:HorizontalPanel verticalAlignment="middle" spacing="3">
			<g:Label styleName="{style.toolbarLabel}">Encoding</g:Label>
			<g:ListBox ui:field="charsetField" styleName="{resources.css.listBox}" />
		</g:HorizontalPanel>
		
		<g:PushButton ui:field="refreshButton" styleName="{style.refreshIcon}">
			<g:upFace image="{resources.refresh}"></g:upFace>
		</g:PushButton>
	</g:HorizontalPanel>
</ui:UiBinder> 