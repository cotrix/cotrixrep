<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:u="urn:import:org.cotrix.web.importwizard.client.util">
	<ui:with type="org.cotrix.web.importwizard.client.resources.Resources"
		field="resources" />
	<ui:style>
		.topPadding {
			padding-top: 10px;
		}
		
		.reloadButtonCell {
			padding-right: 24px;
			padding-left: 10px;
			width: 30px;
		}
		
		.reloadButton {
			margin: auto;
			outline: none;
		}
	</ui:style>
	<g:ScrollPanel styleName="{resources.css.mappingTable}">
		<g:HTMLPanel>
			<table width="100%">
				<tr>
					<td class="{resources.css.mappingTableNameHeader}">
						<span class="{resources.css.propertyLabel}" style="padding-left:32px;padding-right:10px;">NAME</span>
					</td>
					<td style="padding-top:10px;">
						<g:TextBox width="99%" ui:field="name"
							styleName="{resources.css.textBox}" />
					</td>
					<td class="{style.reloadButtonCell} {style.topPadding}">
						<g:PushButton ui:field="reloadButton"
							styleName="{resources.css.buttonRefresh} {style.reloadButton}">
							<g:upFace image="{resources.refresh}" />
						</g:PushButton>
					</td>
				</tr>
				<tr>
					<td class="{resources.css.mappingTableNameHeader}">
						<span class="{resources.css.propertyLabel}" style="text-align:left;padding-left:32px;padding-right:10px;">VERSION</span>
					</td>
					<td style="padding-top:10px;padding-right: 70px;" colspan="2">
						<g:TextBox width="99%" ui:field="version"
							styleName="{resources.css.textBox}" />
					</td>
				</tr>
				<tr>
					<td colspan="3" align="left" style="padding: 20px;">
						<table style="border-collapse:collapse; width: 100%;">
							<tr>
								<td class="{resources.css.verticalHeadersSingleItem}" style="border: 1px solid #d1d1d1;padding-left:12px;">
									<span class="{resources.css.propertyLabel}">COLUMNS</span>
								</td>
							</tr>
							<tr>
								<td style="border: 1px solid #d1d1d1;padding-left:5px;">
									<u:MappingPanel ui:field="mappingPanel" />
								</td>
							</tr>
						</table>
					</td>
				</tr>
			</table>
		</g:HTMLPanel>
	</g:ScrollPanel>
</ui:UiBinder> 