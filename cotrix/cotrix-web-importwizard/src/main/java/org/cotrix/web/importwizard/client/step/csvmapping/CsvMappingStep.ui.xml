<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with type="org.cotrix.web.importwizard.client.resources.Resources"
		field="resources"></ui:with>
	<ui:style
		type="org.cotrix.web.importwizard.client.step.csvmapping.CsvMappingStepViewImpl.Style">
			.cell {
				padding: 5px;
			}
		</ui:style>
	<g:HTMLPanel>
		<table>
			<tr>
				<td class="{resources.css.verticalHeadersSingleItem}">
					<g:Label styleName="{resources.css.propertyLabel}">Name</g:Label>
				</td>
				<td>
					<g:TextBox width="300px" ui:field="name"
						styleName="{resources.css.textBox}"></g:TextBox>
				</td>
			</tr>
			<tr>
				<td class="{resources.css.verticalHeadersFieldItem}">
					<g:Label styleName="{resources.css.propertyLabel}">Columns</g:Label>
				</td>
				<td>
					<g:FlexTable ui:field="columnsTable" />
				</td>
			</tr>
			<tr>
				<td class="{resources.css.verticalHeadersSingleItem}">
					<g:Label styleName="{resources.css.propertyLabel}">Fail on errors</g:Label>
				</td>
				<td>
					<g:SimpleCheckBox ui:field="mappingMode"
						styleName="{resources.css.simpleCheckbox}" />
				</td>
			</tr>
			<tr>
				<td colspan="2" align="center">
					<g:PushButton ui:field="reloadButton" styleName="{resources.css.imageButton}">
						<g:upFace image="{resources.reload}" />
					</g:PushButton>
				</td>
			</tr>
		</table>
	</g:HTMLPanel>
</ui:UiBinder> 