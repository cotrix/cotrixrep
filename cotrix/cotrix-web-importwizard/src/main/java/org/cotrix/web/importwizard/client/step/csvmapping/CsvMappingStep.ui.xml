<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with type="org.cotrix.web.importwizard.client.resources.Resources"
		field="resources"></ui:with>
	<ui:style
		type="org.cotrix.web.importwizard.client.step.csvmapping.CsvMappingStepViewImpl.Style">
			
			.grid {
				vertical-align: top;
				margin-right: 20px;
			}
			
			.cell {
				padding: 5px;
			}
		</ui:style>
	<g:HTMLPanel>
		<g:Grid styleName="{style.grid}" ui:field="mainTable">
			<g:row>
				<g:customCell styleName="{resources.css.verticalHeadersSingleItem}">
					<g:Label styleName="{resources.css.propertyLabel}">Name</g:Label>
				</g:customCell>
				<g:customCell>
					<g:TextBox width="300px" ui:field="name" styleName="{resources.css.textBox}"></g:TextBox>
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell styleName="{resources.css.verticalHeadersFieldItem}">
					<g:Label styleName="{resources.css.propertyLabel}">Columns</g:Label>
				</g:customCell>
				<g:customCell>
					<g:FlexTable ui:field="columnsTable" />
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell styleName="{resources.css.verticalHeadersSingleItem}">
					<g:Label styleName="{resources.css.propertyLabel}">Fail on errors</g:Label>
				</g:customCell>
				<g:customCell>
					<g:SimpleCheckBox ui:field="mappingMode" styleName="{resources.css.simpleCheckbox}"/>
				</g:customCell>
			</g:row>
		</g:Grid>
	</g:HTMLPanel>
</ui:UiBinder> 