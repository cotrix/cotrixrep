<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
		
		.progressbar {
			display: inline-block;
			margin: 20px;
			text-align: center;
		}
		
		.tracker { 
			width: 750px;
		}
		
		.text {
			width: 700px;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:FlowPanel styleName="{style.progressbar}">
			<g:FlowPanel styleName="{style.tracker}" ui:field="barPanel" />
			<g:FlowPanel styleName="{style.text}" ui:field="textPanel" />
		</g:FlowPanel>
	</g:HTMLPanel>
</ui:UiBinder> 