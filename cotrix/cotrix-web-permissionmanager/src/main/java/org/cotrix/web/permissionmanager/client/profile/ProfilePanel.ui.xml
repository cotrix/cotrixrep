<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with type="org.cotrix.web.share.client.resources.CommonResources"
		field="common" />
	<ui:style>
		.profilePanel {
			margin: 5px;
		}
		
		.table {
			margin: 23px;
		}
		
		.valueCell {
			padding-left: 50px;
			vertical-align: middle;
		}
		
		.row {
			height: 35px;
			vertical-align: middle;
		}
	</ui:style>
	<g:SimpleLayoutPanel>
	<g:Grid styleName="{style.table}" cellPadding="5" cellSpacing="5">
		<g:row  styleName="{style.row}">
			<g:customCell styleName="{common.css.verticalHeadersSingleItem}">
				<g:Label text="Username" styleName="{common.css.propertyLabel}" />
			</g:customCell>
			<g:customCell styleName="{style.valueCell}">
				<g:Label ui:field="username" styleName="{common.css.propertyValue}" />
			</g:customCell>
		</g:row>
		<g:row  styleName="{style.row}">
			<g:customCell styleName="{common.css.verticalHeadersSingleItem}">
				<g:Label text="Fullname" styleName="{common.css.propertyLabel}" />
			</g:customCell>
			<g:customCell styleName="{style.valueCell}">
				<g:TextBox ui:field="fullname" styleName="{common.css.textBox}" />
			</g:customCell>
		</g:row>
		<g:row  styleName="{style.row}">
			<g:customCell styleName="{common.css.verticalHeadersSingleItem}">
				<g:Label text="E-Mail" styleName="{common.css.propertyLabel}" />
			</g:customCell>
			<g:customCell styleName="{style.valueCell}">
				<g:TextBox ui:field="email" styleName="{common.css.textBox}" />
			</g:customCell>
		</g:row>
		<g:row  styleName="{style.row}">
			<g:customCell styleName="{common.css.verticalHeadersSingleItem}">
				<g:Label text="Password" styleName="{common.css.propertyLabel}" />
			</g:customCell>
			<g:customCell styleName="{style.valueCell}">
				<g:PasswordTextBox ui:field="password" styleName="{common.css.textBox}" />
			</g:customCell>
		</g:row>
	</g:Grid>
	</g:SimpleLayoutPanel>
