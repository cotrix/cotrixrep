<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:codelists="urn:import:org.cotrix.web.permissionmanager.client.codelists"
	xmlns:matrix="urn:import:org.cotrix.web.permissionmanager.client.matrix"
	xmlns:tree="urn:import:org.cotrix.web.permissionmanager.client.codelists.tree"
	xmlns:w='urn:import:org.cotrix.web.share.client.widgets'>
	<ui:style>
		.rolesPanel {
			margin: 5px;
		}
		
		.blankPanel {
			height: 100%;
			border-radius: 5px;
		}
		
		.initLabel {
			font-size: 42px;
			color: #999;
			text-align: center;
		}
	</ui:style>
	<g:DockLayoutPanel>
		<g:west size="200">
			<tree:CodelistsTreePanel ui:field="codelistsTreePanel" />
		</g:west>
		<g:center>
			<g:DeckLayoutPanel ui:field="centralPanel">
				<g:DockLayoutPanel ui:field="rolesPanel"
					styleName="{style.rolesPanel}">
					<g:center>
						<matrix:UsersRolesMatrix ui:field="usersRolesMatrix" />
					</g:center>
					<g:south size="28">
						<w:ItemToolbar ui:field="toolBar" />
					</g:south>
				</g:DockLayoutPanel>
				<g:HTMLPanel ui:field="blankPanel" styleName="{style.blankPanel}">
					<table align="center" width="100%" height="100%">
						<tr>
							<td style="vertical-align: middle;text-align: center;">
								<div class="{style.initLabel}">Select a codelist.</div>
							</td>
						</tr>
					</table>
				</g:HTMLPanel>
			</g:DeckLayoutPanel>
		</g:center>


	</g:DockLayoutPanel>
</ui:UiBinder> 