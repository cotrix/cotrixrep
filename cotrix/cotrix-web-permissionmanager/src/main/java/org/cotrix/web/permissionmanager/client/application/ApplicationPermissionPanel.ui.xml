<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:matrix="urn:import:org.cotrix.web.permissionmanager.client.matrix"
	xmlns:w='urn:import:org.cotrix.web.share.client.widgets'>
	<ui:style>
		.usersRolesMatrix {
			/*margin-left: 5px;
					margin-right: 5px;
					margin-bottom: 5px;*/
			
		}
		
		.spacer {
			background-color: #efefef;
		}
	</ui:style>
	<g:DockLayoutPanel unit="PX">
		<g:north size='30'>
			<g:SimpleLayoutPanel styleName="{style.spacer}" />
		</g:north>
		<g:center>
			<matrix:UsersRolesMatrix ui:field="usersRolesMatrix"
				styleName="{style.usersRolesMatrix}" />
		</g:center>
		<g:south size="28">
			<w:ItemToolbar ui:field="toolBar" />
		</g:south>
	</g:DockLayoutPanel>

</ui:UiBinder> 