<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with type="org.cotrix.web.common.client.resources.CommonResources"
		field="common" />
	<ui:with
		type="org.cotrix.web.users.client.resources.PermissionsResources"
		field="resources" />
	<ui:style
		type="org.cotrix.web.users.client.profile.ProfilePanel.Style">
			.profilePanel {
				margin: 163px;
			}
			
			.table {
				margin: 23px;
			}
			
			.valueCell {
				padding-left: 50px;
				vertical-align: middle;
			}
			
			.row {
				height: 35px;
				vertical-align: middle;
			}
			
			.fullname {
				font-size: 56px !important;
				height: 66px !important;
			}
			
			/* TEXT BOX */
			.textBox {
				padding: 6px;
				border: hidden;
				color: #4f4e4e;
				height: 16px;
				font-size: 16px;
			}
			
			.textBox:focus {
				padding: 5px;
				outline: none;
				border-radius: 5px;
				background-color: #fafafa;
				border: 1px solid #999999;
				box-shadow: 0px 0px 5px #61C5FA;
				border: 1px solid #5AB0DB;
			}
			
			.textBox:hover {
				padding: 5px;
				border: 1px solid #999;
				box-shadow: 0px 0px 0px 0px;
				border-radius: 5px;
			}
			
			.textBox:focus:hover {
				padding: 5px;
				outline: none;
				box-shadow: 0px 0px 5px #61C5FA;
				border: 1px solid #5AB0DB;
				border-radius: 5px;
			}
			
			.textBox:disabled {
				background-color: #ededed;
				border-color: #b7b6b6;
				color: #acabab;
			}
			
			.textBox[readonly] {
				border: none;
			}
			
			.textBox[readonly]:hover {
				padding: 6px;
				border: none;
			}
			
			.textBox[readonly]:focus {
				padding: 6px;
				border: none;
				box-shadow: none;
				background-color: white;
			}
			
			.textBox[readonly]:focus:hover {
				padding: 6px;
				border: none;
				box-shadow: none;
				background-color: white;
			}
			
			.invalidValue {
				border-color: #B80000;
			}
			
			.password {
				width: 170px;
			}
			
			.username {
				padding-left: 12px;
			}
			
			.email {
				
			}
			
			.spacer {
				background-color: #efefef;
			}
		</ui:style>
	<g:DockLayoutPanel>
		<g:north size='30'>
			<g:SimpleLayoutPanel styleName="{style.spacer}" />
		</g:north>
		<g:center>
			<g:HTMLPanel styleName="{style.profilePanel}">
				<table width="100%">
					<tr>
<!-- 						<td style="text-align:right;vertical-align:top;padding-top:30px;"> -->
<!-- 							<g:Image resource="{common.user}" /> -->
<!-- 						</td> -->
						<td style="text-align:right;vertical-align:top;">
							<table style="width: 200px;">
								<tr>
									<td style="text-align:center;">
										<g:Image resource="{resources.photo}" />
									</td>
								</tr>
								<tr>
									<td style="padding-top: 30px;text-align:center;">
										<g:Button ui:field="password"
											styleName="{common.css.blueButton} {style.password}" visible="false">Change password</g:Button>
									</td>
								</tr>
							</table>
						</td>
						<td style="vertical-align:top;width:100%;">
							<table style="width: 100%;">
								<tr>
									<td>
										<g:TextBox ui:field="fullname"
											styleName="{style.textBox} {style.fullname}" readOnly="true"/>
									</td>
								</tr>
								<tr>
									<td>
										<g:Label ui:field="username"
											styleName="{common.css.propertyValue}  {style.username}"/>
									</td>
								</tr>
								<tr>
									<td style="padding-left: 4px;">
										<g:TextBox ui:field="email" styleName="{style.textBox}" readOnly="true"/>
									</td>
								</tr>
							</table>
						</td>
					</tr>
				</table>
			</g:HTMLPanel>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder> 