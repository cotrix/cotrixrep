<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<ui:with type="org.cotrix.web.common.client.resources.CommonResources"
		field="resources" />
	<g:HTMLPanel styleName="{resources.css.dialogBox}" width="300px" height="285px">
		<div class="{resources.css.dialogTitle}">
			Change password
		</div>
		<div class="{resources.css.dialogSubtitle}">
			Insert the old and the new password
		</div>
		<div class="{resources.css.dialogTextfield}">
			<div>Old password</div>
			<g:PasswordTextBox styleName="{resources.css.dialogTextbox}"
				ui:field="oldpassword" />
		</div>
		<div class="{resources.css.dialogTextfield}">
			<div>New password</div>
			<g:PasswordTextBox styleName="{resources.css.dialogTextbox}"
				ui:field="newpassword" />
		</div>
		<div class="{resources.css.dialogTextfield}">
			<g:Button ui:field="update" styleName="{resources.css.dialogSubmit}">Update</g:Button>
		</div>
	</g:HTMLPanel>

</ui:UiBinder>