				</dependency>

				<dependency>
					<groupId>org.virtualrepository</groupId>
					<artifactId>virtual-semantic-repository</artifactId>
				</dependency>

				<dependency>
					<groupId>org.virtualrepository</groupId>
					<artifactId>virtual-rtms</artifactId>
				</dependency>

			</dependencies>



		</profile>

	</profiles>
	
