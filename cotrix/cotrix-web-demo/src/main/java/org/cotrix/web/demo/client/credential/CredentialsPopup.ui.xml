<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<ui:with type="org.cotrix.web.common.client.resources.CommonResources"
		field="resources" />
	<ui:style>
		.box {
			-moz-box-shadow: 0 0 7px 7px #999;
			-webkit-box-shadow: 0 0 7px 7px #999;
			box-shadow: 0 0 7px 7px #999;
			background-color: #fff;
			border-radius: 5px;
			width: 300px;
			height: 145px;
			padding: 20px;
			z-index: 1000;
		}
		
		.title {
			color: #ff6600;
			font-size: 20px;
		}
		
		.subtitle {
			padding-top: 10px;
			color: #999;
			font-size: 15px;
		}
		
		.textfield {
			margin-top: 20px;
			color: #666;
			font-size: 15px;
		}
		
		.textbox {
			margin-top: 20px;
			color: #666;
			font-size: 15px;
			line-height: 20px;
		}
		
		.submit {
			color: #fff;
			height: 40px;
			width: 100%;
			padding-left: 10px;
			text-decoration: none;
			border-radius: 5px;
			font-size: 17px;
			margin-top: 5px;
			border: 1px solid #ddd;
			background-color: #7085b6;
			cursor: pointer;
			outline: none;
		}
	</ui:style>
	<g:HTMLPanel styleName="{style.box}">
		<div class="{style.title}" id="login.title">
			WATCH OUT! IT'S ONLY A DEMO...
		</div>
		<div class="{style.subtitle}">
			Welcome to this demo installation of Cotrix.
		</div>
		<div class="{style.textbox}">
			Feel free to log in as cotrix|cotrix and have a look around. But remember, it's only a demo and the changes you make may be soon gone.
		</div>
	</g:HTMLPanel>

</ui:UiBinder>
