<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:c='urn:import:org.cotrix.web.common.client.widgets'>
	<ui:with field='resources'
		type='org.cotrix.web.common.client.resources.CommonResources' />
	<ui:style>
		.container {
			
			min-width: 600px;
			max-width: 800px;
			background-color: gray;
			border-radius: 5px;
			padding: 10px;
			line-height: 10px;
			text-align: center;
		}
		
		.message {
			width: 100%;
			text-align: center;
			height: 20px;
			padding-top: 5px;
		}
		
		.button {
		}
	</ui:style>
	<g:FlowPanel styleName="{style.container}">
		<c:ProgressBar ui:field="progressBar" />
		<g:Label ui:field="message" styleName="{style.message}" />
		<g:Button ui:field="cancelButton" styleName="{resources.css.grayButton} {style.button}">CANCEL</g:Button>
	</g:FlowPanel>
	
</ui:UiBinder>